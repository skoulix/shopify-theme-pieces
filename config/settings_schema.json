      {
        "type": "range",
        "id": "body_scale",
        "min": 90,
        "max": 120,
        "step": 5,
        "default": 100,
        "unit": "%",
        "label": "Body font size"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 80,
        "max": 150,
        "step": 5,
        "default": 100,
        "unit": "%",
        "label": "Heading font size"
      },
      {
        "type": "header",
        "content": "Style"
      },
      {
        "type": "checkbox",
        "id": "headings_uppercase",
        "default": true,
        "label": "Uppercase headings"
      },
      {
        "type": "checkbox",
        "id": "buttons_uppercase",
        "default": true,
        "label": "Uppercase buttons"
      },
      {
        "type": "header",
        "content": "Letter spacing"
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "min": -50,
        "max": 200,
        "step": 10,
        "default": 0,
