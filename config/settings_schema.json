  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 10,
        "default": 1280,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "page_vertical_padding",
        "min": 24,
        "max": 160,
        "step": 4,
        "default": 80,
        "unit": "px",
        "label": "Page vertical padding",
        "info": "Top/bottom padding on templates like collection, blog, cart"
      },
      {
        "type": "range",
        "id": "section_vertical_padding",
        "min": 24,
        "max": 160,
        "step": 4,
        "default": 80,
        "unit": "px",
        "label": "Section vertical padding",
        "info": "Top/bottom padding for all sections"
      },
      {
        "type": "checkbox",
        "id": "enable_smooth_scroll",
        "default": true,
        "label": "Enable smooth scrolling",
        "info": "Enables buttery smooth scroll behavior"
      },
      {
        "type": "header",
        "content": "Page transitions"
      },
      {
        "type": "paragraph",
        "content": "Preview page transitions on the live site. Transitions are disabled in the theme editor."
      },
      {
        "type": "checkbox",
        "id": "enable_page_transitions",
        "default": true,
        "label": "Enable page transitions"
      },
      {
        "type": "select",
        "id": "page_transition_style",
        "label": "Transition style",
        "default": "slide",
        "options": [
          { "value": "slide", "label": "Slide" },
          { "value": "fade", "label": "Fade" },
          { "value": "curtain", "label": "Curtain" }
        ]
      },
      {
        "type": "color",
        "id": "page_transition_color",
        "label": "Transition overlay color",
        "default": "#f5f5f5"
      },
      {
        "type": "checkbox",
        "id": "enable_view_transitions",
        "default": true,
        "label": "Enable View Transitions API",
        "info": "Uses the native View Transition API for smoother page transitions (modern browsers only)."
      },
      {
        "type": "header",
        "content": "Animations"
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "default": true,
        "label": "Enable animations",
        "info": "Enables scroll-triggered reveals, layout transitions, and other motion effects throughout the theme."
      },
      {
        "type": "select",
        "id": "animation_trigger_offset",
        "label": "Animation trigger timing",
        "default": "md",
        "options": [
          { "value": "none", "label": "When element enters viewport" },
          { "value": "sm", "label": "Early (element 10% visible)" },
          { "value": "md", "label": "Standard (element 20% visible)" },
          { "value": "lg", "label": "Late (element 30% visible)" }
        ],
        "info": "Controls when scroll animations start. Earlier settings trigger animations sooner, later settings wait for elements to be more visible."
      }
    ]
  },
