[
  {
    "name": "theme_info",
    "theme_name": "Pieces",
    "theme_version": "1.0.0",
    "theme_author": "Pieces",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px",
        "label": "Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px .png recommended"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body font",
        "info": "Used for body text throughout the theme"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n6",
        "label": "Heading font",
        "info": "Used for headings and titles"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "page_width",
        "label": "Page width",
        "default": "1280",
        "options": [
          { "value": "1024", "label": "Narrow (1024px)" },
          { "value": "1280", "label": "Default (1280px)" },
          { "value": "1536", "label": "Wide (1536px)" }
        ]
      },
      {
        "type": "range",
        "id": "page_padding",
        "min": 16,
        "max": 48,
        "step": 4,
        "default": 24,
        "unit": "px",
        "label": "Page padding",
        "info": "Horizontal padding on mobile"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#111827"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary accent",
        "default": "#4f46e5",
        "info": "Used for buttons, links, and highlights"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "X (Twitter)",
        "info": "https://x.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@yourstore"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/@yourstore"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourstore"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "default": "drawer",
        "options": [
          { "value": "drawer", "label": "Drawer" },
          { "value": "page", "label": "Page" },
          { "value": "notification", "label": "Notification" }
        ]
      }
    ]
  }
]
