[
  {
    "name": "theme_info",
    "theme_name": "Pieces",
    "theme_version": "1.0.0",
    "theme_author": "Pieces",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px",
        "label": "Desktop logo width"
      },
      {
        "type": "range",
        "id": "logo_width_mobile",
        "min": 40,
        "max": 200,
        "step": 10,
        "default": 80,
        "unit": "px",
        "label": "Mobile logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px .png recommended"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Base colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_background_secondary",
        "label": "Secondary background",
        "default": "#f9fafb",
        "info": "Used for cards, inputs, and alternate sections"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#111827"
      },
      {
        "type": "color",
        "id": "color_text_secondary",
        "label": "Secondary text",
        "default": "#6b7280"
      },
      {
        "type": "header",
        "content": "Accent colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary accent",
        "default": "#4f46e5",
        "info": "Used for buttons, links, and highlights"
      },
      {
        "type": "color",
        "id": "color_primary_contrast",
        "label": "Primary contrast",
        "default": "#ffffff",
        "info": "Text color on primary buttons"
      },
      {
        "type": "header",
        "content": "UI colors"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border",
        "default": "#e5e7eb"
      },
      {
        "type": "color",
        "id": "color_sale",
        "label": "Sale",
        "default": "#dc2626"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body font"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "inter_n6",
        "label": "Heading font"
      },
      {
        "type": "header",
        "content": "Scale"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 90,
        "max": 120,
        "step": 5,
        "default": 100,
        "unit": "%",
        "label": "Body font size"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 80,
        "max": 150,
        "step": 5,
        "default": 100,
        "unit": "%",
        "label": "Heading font size"
      },
      {
        "type": "header",
        "content": "Style"
      },
      {
        "type": "checkbox",
        "id": "headings_uppercase",
        "default": true,
        "label": "Uppercase headings"
      },
      {
        "type": "checkbox",
        "id": "buttons_uppercase",
        "default": true,
        "label": "Uppercase buttons"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 40,
        "default": 1280,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "page_vertical_padding",
        "min": 40,
        "max": 120,
        "step": 10,
        "default": 80,
        "unit": "px",
        "label": "Page vertical padding",
        "info": "Top/bottom padding on templates like collection, blog, cart"
      },
      {
        "type": "range",
        "id": "section_vertical_padding",
        "min": 40,
        "max": 120,
        "step": 10,
        "default": 80,
        "unit": "px",
        "label": "Section vertical padding",
        "info": "Top/bottom padding for all sections"
      },
      {
        "type": "checkbox",
        "id": "enable_smooth_scroll",
        "default": true,
        "label": "Enable smooth scrolling",
        "info": "Enables buttery smooth scroll behavior"
      },
      {
        "type": "header",
        "content": "Page transitions"
      },
      {
        "type": "paragraph",
        "content": "Preview page transitions on the live site. Transitions are disabled in the theme editor."
      },
      {
        "type": "checkbox",
        "id": "enable_page_transitions",
        "default": true,
        "label": "Enable page transitions"
      },
      {
        "type": "select",
        "id": "page_transition_style",
        "label": "Transition style",
        "default": "slide",
        "options": [
          { "value": "slide", "label": "Slide" },
          { "value": "fade", "label": "Fade" },
          { "value": "curtain", "label": "Curtain" }
        ]
      },
      {
        "type": "color",
        "id": "page_transition_color",
        "label": "Transition overlay color",
        "default": "#f5f5f5"
      },
      {
        "type": "header",
        "content": "Animations"
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "default": true,
        "label": "Enable animations",
        "info": "Enables scroll-triggered reveals, layout transitions, and other motion effects throughout the theme."
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "range",
        "id": "button_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "default": 0,
        "unit": "px",
        "label": "Corner radius"
      },
      {
        "type": "range",
        "id": "button_border_width",
        "min": 0,
        "max": 3,
        "step": 1,
        "default": 1,
        "unit": "px",
        "label": "Border width"
      },
      {
        "type": "select",
        "id": "button_shadow",
        "label": "Shadow",
        "default": "none",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "sm", "label": "Small" },
          { "value": "md", "label": "Medium" },
          { "value": "hard", "label": "Hard offset" }
        ]
      }
    ]
  },
  {
    "name": "Inputs",
    "settings": [
      {
        "type": "range",
        "id": "input_radius",
        "min": 0,
        "max": 24,
        "step": 2,
        "default": 0,
        "unit": "px",
        "label": "Corner radius"
      },
      {
        "type": "range",
        "id": "input_border_width",
        "min": 1,
        "max": 3,
        "step": 1,
        "default": 1,
        "unit": "px",
        "label": "Border width"
      }
    ]
  },
  {
    "name": "Cards",
    "settings": [
      {
        "type": "range",
        "id": "card_radius",
        "min": 0,
        "max": 24,
        "step": 2,
        "default": 0,
        "unit": "px",
        "label": "Corner radius"
      },
      {
        "type": "range",
        "id": "card_border_width",
        "min": 0,
        "max": 3,
        "step": 1,
        "default": 0,
        "unit": "px",
        "label": "Border width"
      },
      {
        "type": "select",
        "id": "card_shadow",
        "label": "Shadow",
        "default": "none",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "sm", "label": "Small" },
          { "value": "md", "label": "Medium" },
          { "value": "lg", "label": "Large" },
          { "value": "hard", "label": "Hard offset" }
        ]
      }
    ]
  },
  {
    "name": "Product card",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_quick_view",
        "default": true,
        "label": "Enable quick view",
        "info": "Shows a quick view button on product cards"
      },
      {
        "type": "checkbox",
        "id": "show_secondary_image",
        "default": true,
        "label": "Show second image on hover",
        "info": "Displays an alternate product image when hovering over the card"
      }
    ]
  },
