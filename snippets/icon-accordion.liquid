{%- comment -%}
  Renders an icon for accordion items using Phosphor icons.

  Accepts:
  - icon: {String} Icon name (e.g., 'box', 'truck', 'return')

  Usage:
  {% render 'icon-accordion', icon: 'box' %}
{%- endcomment -%}

{%- if icon != 'none' and icon != blank -%}
  {%- assign icon_name = icon | replace: '_', '-' -%}
  {%- render 'icon', name: icon_name, size: '20' -%}
{%- endif -%}
