{% comment %}
  Renders a header drawer menu for mobile and desktop.

  Usage:
  {% render 'header-drawer' %}
{% endcomment %}

<header-drawer data-breakpoint="{% if section.settings.menu_type_desktop == 'drawer' %}desktop{% else %}tablet{% endif %}">
  <details id="Details-menu-drawer-container" class="menu-drawer-container">
    <summary
      class="relative flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-neutral-900"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <span class="relative flex items-center justify-center">
        {%- render 'icon', name: 'menu', size: '24' -%}
        {%- render 'icon', name: 'close', size: '24', class: 'hidden' -%}
      </span>
    </summary>
    <div id="menu-drawer" class="menu-drawer fixed inset-0 z-50 transform transition-transform duration-300 motion-reduce:transition-none bg-white color-{{ section.settings.menu_color_scheme }}">
      <div class="menu-drawer__inner-container h-full flex flex-col">
        <div class="menu-drawer__navigation-container flex-1 overflow-y-auto">
          <nav class="menu-drawer__navigation p-4">
            <ul class="menu-drawer__menu space-y-1 list-none" role="list">
              {%- for link in section.settings.menu.links -%}
                <li>
                  {%- if link.links != blank -%}
                    <details id="Details-menu-drawer-menu-item-{{ forloop.index }}">
                      <summary
                        id="HeaderDrawer-{{ link.handle }}"
                        class="menu-drawer__menu-item flex items-center justify-between w-full py-3 px-4 text-base font-medium text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors cursor-pointer list-none focus:outline-none focus:ring-2 focus:ring-neutral-900{% if link.child_active %} bg-neutral-100{% endif %}"
                      >
                        {{ link.title | escape }}
                        <span class="svg-wrapper flex items-center">
                          {%- render 'icon', name: 'arrow-right', size: '16' -%}
                        </span>
                        <span class="svg-wrapper icon-caret flex items-center">
                          {%- render 'icon', name: 'caret-down', size: '16' -%}
                        </span>
                      </summary>
                      <div
                        id="link-{{ link.handle | escape }}"
                        class="menu-drawer__submenu fixed inset-0 z-50 bg-white transform transition-transform duration-300 motion-reduce:transition-none"
                        tabindex="-1"
                      >
                        <div class="menu-drawer__inner-submenu h-full flex flex-col">
                          <button class="menu-drawer__close-button flex items-center gap-2 p-4 text-base font-medium text-neutral-900 hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-900" aria-expanded="true">
                            <span class="svg-wrapper flex items-center">
                              {%- render 'icon', name: 'arrow-left', size: '16' -%}
                            </span>
                            {{ link.title | escape }}
                          </button>
                          <ul class="menu-drawer__menu space-y-1 p-4 list-none" role="list" tabindex="-1">
                            {%- for childlink in link.links -%}
                              <li>
                                {%- if childlink.links == blank -%}
                                  <a
                                    id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                    href="{{ childlink.url }}"
                                    class="menu-drawer__menu-item block py-3 px-4 text-base text-neutral-700 hover:bg-neutral-100 hover:text-neutral-900 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-900{% if childlink.current %} bg-neutral-100 text-neutral-900{% endif %}"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink.title | escape }}
                                  </a>
                                {%- else -%}
                                  <details id="Details-menu-drawer-{{ link.handle }}-{{ childlink.handle }}">
                                    <summary
                                      id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                      class="menu-drawer__menu-item flex items-center justify-between w-full py-3 px-4 text-base text-neutral-700 hover:bg-neutral-100 hover:text-neutral-900 rounded-lg transition-colors cursor-pointer list-none focus:outline-none focus:ring-2 focus:ring-neutral-900"
                                    >
                                      {{ childlink.title | escape }}
                                      <span class="svg-wrapper flex items-center">
                                        {%- render 'icon', name: 'arrow-right', size: '16' -%}
                                      </span>
                                      <span class="svg-wrapper icon-caret flex items-center">
                                        {%- render 'icon', name: 'caret-down', size: '16' -%}
                                      </span>
                                    </summary>
                                    <div
                                      id="childlink-{{ childlink.handle | escape }}"
                                      class="menu-drawer__submenu fixed inset-0 z-50 bg-white transform transition-transform duration-300 motion-reduce:transition-none"
                                    >
                                      <button
                                        class="menu-drawer__close-button flex items-center gap-2 p-4 text-base font-medium text-neutral-900 hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-900"
                                        aria-expanded="true"
                                      >
                                        <span class="svg-wrapper flex items-center">
                                          {%- render 'icon', name: 'arrow-left', size: '16' -%}
                                        </span>
                                        {{ childlink.title | escape }}
                                      </button>
                                      <ul
                                        class="menu-drawer__menu space-y-1 p-4 list-none"
                                        role="list"
                                        tabindex="-1"
                                      >
                                        {%- for grandchildlink in childlink.links -%}
                                          <li>
                                            <a
                                              id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                              href="{{ grandchildlink.url }}"
                                              class="menu-drawer__menu-item block py-3 px-4 text-base text-neutral-700 hover:bg-neutral-100 hover:text-neutral-900 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-900{% if grandchildlink.current %} bg-neutral-100 text-neutral-900{% endif %}"
                                              {% if grandchildlink.current %}
                                                aria-current="page"
                                              {% endif %}
                                            >
                                              {{ grandchildlink.title | escape }}
                                            </a>
                                          </li>
                                        {%- endfor -%}
                                      </ul>
                                    </div>
                                  </details>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </div>
                    </details>
                  {%- else -%}
                    <a
                      id="HeaderDrawer-{{ link.handle }}"
                      href="{{ link.url }}"
                      class="menu-drawer__menu-item block py-3 px-4 text-base font-medium text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-900{% if link.current %} bg-neutral-100{% endif %}"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ link.title | escape }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </nav>
          <div class="menu-drawer__utility-links border-t border-neutral-200 p-4 space-y-4">
            {%- if shop.customer_accounts_enabled -%}
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="menu-drawer__account flex items-center gap-2 text-base font-medium text-neutral-900 hover:text-neutral-600 transition-colors md:hidden"
                rel="nofollow"
              >
                {%- if section.settings.enable_customer_avatar -%}
                  <account-icon>
                    {%- if customer and customer.has_avatar? -%}
                      {{ customer | avatar }}
                    {%- else -%}
                      {%- render 'icon', name: 'user', size: '20' -%}
                    {%- endif -%}
                  </account-icon>
                {%- else -%}
                  {%- render 'icon', name: 'user', size: '20' -%}
                {%- endif -%}
                {%- liquid
                  if customer
                    echo 'customer.account_fallback' | t
                  else
                    echo 'customer.log_in' | t
                  endif
                -%}
              </a>
            {%- endif -%}
            {%- if localization.available_countries or localization.available_languages -%}
              <div class="menu-drawer__localization space-y-4">
                {%- if localization.available_countries and localization.available_countries.size > 1 -%}
                  <localization-form>
                    {%- form 'localization', id: 'HeaderCountryMobileForm', class: 'localization-form' -%}
                      <div>
                        <h2 class="sr-only" id="HeaderCountryMobileLabel">
                          {{ 'localization.country_label' | t }}
                        </h2>
                        {%- render 'country-localization', localPosition: 'HeaderCountryMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {% endif %}

                {%- if localization.available_languages and localization.available_languages.size > 1 -%}
                  <localization-form>
                    {%- form 'localization', id: 'HeaderLanguageMobileForm', class: 'localization-form' -%}
                      <div>
                        <h2 class="sr-only" id="HeaderLanguageMobileLabel">
                          {{ 'localization.language_label' | t }}
                        </h2>
                        {%- render 'language-localization', localPosition: 'HeaderLanguageMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {%- endif -%}
              </div>
            {%- endif -%}
            <ul class="flex flex-wrap gap-1 list-none" role="list">
              {%- if settings.social_twitter_link != blank -%}
                <li>
                  <a href="{{ settings.social_twitter_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'twitter', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.twitter' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
                <li>
                  <a href="{{ settings.social_facebook_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'facebook', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.facebook' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
                <li>
                  <a href="{{ settings.social_pinterest_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'pinterest', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.pinterest' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <li>
                  <a href="{{ settings.social_instagram_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'instagram', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.instagram' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_tiktok_link != blank -%}
                <li>
                  <a href="{{ settings.social_tiktok_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'tiktok', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.tiktok' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_tumblr_link != blank -%}
                <li>
                  <a href="{{ settings.social_tumblr_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'tumblr', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.tumblr' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_snapchat_link != blank -%}
                <li>
                  <a href="{{ settings.social_snapchat_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'snapchat', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.snapchat' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
                <li>
                  <a href="{{ settings.social_youtube_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'youtube', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.youtube' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_vimeo_link != blank -%}
                <li>
                  <a href="{{ settings.social_vimeo_link }}" class="flex items-center justify-center p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors">
                    {%- render 'icon', name: 'vimeo', size: '20' -%}
                    <span class="sr-only">{{ 'general.social.links.vimeo' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </details>
</header-drawer>
