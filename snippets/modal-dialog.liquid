{%- comment -%}
  Modal Dialog Component
  Uses native <dialog> element for better accessibility and performance

  Parameters:
  - id: Unique ID for the dialog (required)
  - title: Dialog title for accessibility
  - class: Additional CSS classes
  - size: 'sm', 'md' (default), 'lg', 'full'
  - closable: Allow closing via close button/backdrop (default: true)
  - centered: Center dialog vertically (default: true)

  Usage:
  {% render 'modal-dialog', id: 'my-modal', title: 'My Modal' %}
    <p>Dialog content goes here</p>
  {% endrender %}

  JavaScript API:
  document.getElementById('my-modal').showModal() - Open as modal
  document.getElementById('my-modal').show() - Open as non-modal
  document.getElementById('my-modal').close() - Close dialog
{%- endcomment -%}

{%- liquid
  assign size = size | default: 'md'
  assign closable = closable | default: true
  assign centered = centered | default: true

  case size
    when 'sm'
      assign size_class = 'modal-dialog--sm'
    when 'lg'
      assign size_class = 'modal-dialog--lg'
    when 'full'
      assign size_class = 'modal-dialog--full'
    else
      assign size_class = 'modal-dialog--md'
  endcase
-%}

<dialog
  id="{{ id }}"
  class="modal-dialog {{ size_class }}{% if centered %} modal-dialog--centered{% endif %} {{ class }}"
  aria-labelledby="{{ id }}-title"
  {% if closable %}data-modal-closable{% endif %}
>
  <div class="modal-dialog__container">
    {%- if title != blank or closable -%}
      <header class="modal-dialog__header">
        {%- if title != blank -%}
          <h2 id="{{ id }}-title" class="modal-dialog__title">{{ title }}</h2>
        {%- else -%}
          <span id="{{ id }}-title" class="sr-only">{{ 'accessibility.modal' | t | default: 'Dialog' }}</span>
        {%- endif -%}
        {%- if closable -%}
          <button
            type="button"
            class="modal-dialog__close"
            data-modal-close
            aria-label="{{ 'accessibility.close_modal' | t | default: 'Close' }}"
          >
            <i class="ph ph-x text-xl" aria-hidden="true"></i>
          </button>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="modal-dialog__content">
      {{ content }}
    </div>
  </div>
</dialog>

<style>
  /* Native Dialog Reset */
  dialog.modal-dialog {
    max-width: none;
    max-height: none;
    padding: 0;
    margin: 0;
    border: none;
    background: transparent;
    overflow: visible;
  }

  /* Backdrop */
  dialog.modal-dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  dialog.modal-dialog[open]::backdrop {
    opacity: 1;
  }

  /* Container */
  .modal-dialog__container {
    position: fixed;
    background: var(--color-background);
    border-radius: var(--card-radius);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    max-height: calc(100vh - 4rem);
    max-height: calc(100dvh - 4rem);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    opacity: 0;
    transform: scale(0.95) translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  dialog.modal-dialog[open] .modal-dialog__container {
    opacity: 1;
    transform: scale(1) translateY(0);
  }

  /* Centered positioning */
  .modal-dialog--centered .modal-dialog__container {
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) scale(0.95);
  }

  dialog.modal-dialog--centered[open] .modal-dialog__container {
    transform: translate(-50%, -50%) scale(1);
  }

  /* Size variants */
  .modal-dialog--sm .modal-dialog__container {
    width: min(90vw, 24rem);
  }

  .modal-dialog--md .modal-dialog__container {
    width: min(90vw, 32rem);
  }

  .modal-dialog--lg .modal-dialog__container {
    width: min(90vw, 48rem);
  }

  .modal-dialog--full .modal-dialog__container {
    width: calc(100vw - 2rem);
    height: calc(100vh - 2rem);
    height: calc(100dvh - 2rem);
    max-height: none;
    border-radius: var(--card-radius);
  }

  /* Header */
  .modal-dialog__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
    flex-shrink: 0;
  }

  .modal-dialog__title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    flex: 1;
  }

  /* Close button */
  .modal-dialog__close {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    margin: -0.5rem -0.75rem -0.5rem 0.5rem;
    background: transparent;
    border: none;
    border-radius: 50%;
    color: var(--color-text);
    cursor: pointer;
    transition: background-color 0.2s ease, opacity 0.2s ease;
  }

  .modal-dialog__close:hover {
    background: var(--color-background-secondary);
  }

  .modal-dialog__close:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Content */
  .modal-dialog__content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    overscroll-behavior: contain;
  }

  /* Scrollbar styling for dialog content */
  .modal-dialog__content::-webkit-scrollbar {
    width: 6px;
  }

  .modal-dialog__content::-webkit-scrollbar-track {
    background: transparent;
  }

  .modal-dialog__content::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 3px;
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .modal-dialog--md .modal-dialog__container,
    .modal-dialog--lg .modal-dialog__container {
      width: calc(100vw - 2rem);
    }

    .modal-dialog--full .modal-dialog__container {
      width: 100vw;
      height: 100vh;
      height: 100dvh;
      border-radius: 0;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    dialog.modal-dialog::backdrop,
    .modal-dialog__container {
      transition: none;
    }
  }
</style>

<script>
/**
 * Initialize native dialog behavior
 * Sets up close on backdrop click and escape key
 */
(function() {
  function initDialog(dialog) {
    if (dialog.dataset.initialized) return;
    dialog.dataset.initialized = 'true';

    const closable = dialog.hasAttribute('data-modal-closable');

    // Close button handler
    dialog.querySelectorAll('[data-modal-close]').forEach(btn => {
      btn.addEventListener('click', () => dialog.close());
    });

    // Backdrop click handler
    if (closable) {
      dialog.addEventListener('click', (e) => {
        // Click on backdrop (dialog element itself, not content)
        if (e.target === dialog) {
          dialog.close();
        }
      });
    }

    // Prevent scroll propagation
    const content = dialog.querySelector('.modal-dialog__content');
    if (content) {
      content.addEventListener('wheel', (e) => {
        const { scrollTop, scrollHeight, clientHeight } = content;
        const delta = e.deltaY;

        if (delta < 0 && scrollTop === 0) {
          e.preventDefault();
        } else if (delta > 0 && scrollTop + clientHeight >= scrollHeight) {
          e.preventDefault();
        }
      }, { passive: false });
    }
  }

  // Initialize all dialogs
  document.querySelectorAll('dialog.modal-dialog').forEach(initDialog);

  // Handle dynamically added dialogs
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      mutation.addedNodes.forEach((node) => {
        if (node.nodeType === 1) {
          if (node.matches && node.matches('dialog.modal-dialog')) {
            initDialog(node);
          }
          node.querySelectorAll?.('dialog.modal-dialog').forEach(initDialog);
        }
      });
    });
  });

  observer.observe(document.body, { childList: true, subtree: true });
})();
</script>
