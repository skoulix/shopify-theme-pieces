{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu">
  <ul class="flex items-center gap-8 list-none" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu relative group">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="flex items-center gap-1 text-sm font-medium text-neutral-700 hover:text-neutral-900 transition-colors cursor-pointer list-none py-2 focus:outline-none focus:ring-2 focus:ring-neutral-900 rounded"
              >
                <span
                  {%- if link.child_active %}
                    class="text-neutral-900 font-semibold"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                {%- render 'icon', name: 'caret-down', size: '16' -%}
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content absolute left-0 top-full pt-2 opacity-0 invisible group-open:opacity-100 group-open:visible transition-all duration-200 z-50 color-{{ section.settings.menu_color_scheme }}"
                tabindex="-1"
              >
                <ul
                  class="mega-menu__list bg-white rounded-lg shadow-lg border border-neutral-200 py-2 min-w-[200px]{% if link.levels == 1 %} grid grid-cols-2 gap-x-8{% endif %}"
                  role="list"
                >
                  {%- for childlink in link.links -%}
                    <li>
                      <a
                        id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                        href="{{ childlink.url }}"
                        class="block px-4 py-2 text-sm font-medium text-neutral-900 hover:bg-neutral-100 transition-colors{% if childlink.current %} bg-neutral-100{% endif %}"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{ childlink.title | escape }}
                      </a>
                      {%- if childlink.links != blank -%}
                        <ul class="list-none space-y-1 px-4 py-2" role="list">
                          {%- for grandchildlink in childlink.links -%}
                            <li>
                              <a
                                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                href="{{ grandchildlink.url }}"
                                class="block px-2 py-1.5 text-sm text-neutral-600 hover:text-neutral-900 hover:bg-neutral-50 rounded transition-colors{% if grandchildlink.current %} text-neutral-900 bg-neutral-50{% endif %}"
                                {% if grandchildlink.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ grandchildlink.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="text-sm font-medium text-neutral-700 hover:text-neutral-900 transition-colors focus:outline-none focus:ring-2 focus:ring-neutral-900 rounded"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="text-neutral-900 font-semibold"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
