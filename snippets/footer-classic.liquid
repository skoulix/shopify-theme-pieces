
{%- comment -%}
  Footer Classic Design
  Traditional multi-column layout with brand, menu columns, and newsletter
  Uses blocks for flexible content arrangement

  Required variables:
  - section: The section object with blocks and settings
{%- endcomment -%}

<div class="footer-classic__top">
  {%- comment -%} All content columns - respects block order {%- endcomment -%}
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'brand' -%}
        <div class="footer-classic__brand-col" {{ block.shopify_attributes }}>
          {%- if block.settings.logo != blank -%}
            {{ block.settings.logo | image_url: width: 300 | image_tag: class: 'footer-classic__logo', loading: 'lazy', decoding: 'async' }}
          {%- else -%}
            <span class="footer-brand block mb-4">{{ shop.name }}</span>
          {%- endif -%}

          {%- if block.settings.text != blank -%}
            <p class="footer-classic__description">{{ block.settings.text }}</p>
          {%- endif -%}

          {%- if block.settings.show_social -%}
            <div class="footer-classic__social">
              {%- render 'footer-social-icons' -%}
            </div>
          {%- endif -%}
        </div>

      {%- when 'menu_column' -%}
        <div class="footer-classic__column" {{ block.shopify_attributes }}>
          {%- if block.settings.heading != blank -%}
            <h3 class="footer-classic__column-heading text-label">{{ block.settings.heading }}</h3>
          {%- endif -%}
          {%- if block.settings.menu != blank -%}
            <ul class="footer-classic__menu">
              {%- for link in block.settings.menu.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>

      {%- when 'navigation' -%}
        {%- if block.settings.menu != blank -%}
          <div class="footer-classic__column" {{ block.shopify_attributes }}>
            <ul class="footer-classic__menu{% if block.settings.nav_uppercase %} uppercase{% endif %}">
              {%- for link in block.settings.menu.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

      {%- when 'newsletter' -%}
        <div class="footer-classic__newsletter-col" {{ block.shopify_attributes }}>
          <h3 class="footer-classic__column-heading text-label">{{ block.settings.heading | default: 'Newsletter' }}</h3>
          {%- if block.settings.text != blank -%}
            <p class="footer-classic__newsletter-text">{{ block.settings.text }}</p>
          {%- endif -%}
          {%- form 'customer', id: 'FooterNewsletterClassic' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="footer-classic__newsletter-form">
              <input
                type="email"
                name="contact[email]"
                class="footer-classic__newsletter-input"
                placeholder="{{ 'newsletter.label' | t }}"
                autocomplete="email"
                required
              >
              <button type="submit" class="footer-classic__newsletter-btn" aria-label="{{ 'newsletter.button_label' | t }}">
                <i class="ph ph-arrow-right"></i>
              </button>
            </div>
          {%- endform -%}
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

<div class="footer-classic__bottom footer-classic__bottom-border">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'copyright' -%}
        <p class="footer-classic__copyright" {{ block.shopify_attributes }}>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.copyright' | t }}</p>

      {%- when 'payment' -%}
        <div class="footer-classic__payment{% if block.settings.grayscale %} footer-classic__payment--grayscale{% endif %}" {{ block.shopify_attributes }}>
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag }}
          {% endfor %}
        </div>

      {%- when 'back_to_top' -%}
        <button type="button" class="link-cta uppercase bg-transparent border-none cursor-pointer p-0" data-back-to-top {{ block.shopify_attributes }}>
          <span class="link-cta-text"><span data-hover="{{ 'general.back_to_top' | t }}">{{ 'general.back_to_top' | t }}</span></span>
          <i class="ph ph-arrow-up"></i>
        </button>

      {%- when 'localization' -%}
        <div {{ block.shopify_attributes }}>
          {%- render 'localization-form', show_country: block.settings.show_country, show_language: block.settings.show_language -%}
        </div>

      {%- when 'follow_on_shop' -%}
        <div {{ block.shopify_attributes }}>
          {%- if shop.features.follow_on_shop? -%}
            {{ shop | login_button: action: 'follow' }}
          {%- endif -%}
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>
