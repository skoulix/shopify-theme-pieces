{% comment %}
  Renders product price - Tailwind version

  Accepts:
  - product: {Object} Product Liquid object
  - use_variant: {Boolean} Use selected/first available variant instead of product pricing
  - show_badges: {Boolean} Show 'Sale' and 'Sold Out' badges
  - price_class: {String} Additional classes for the price container
  - show_compare_at_price: {Boolean} Show compare at price if applicable
  - placeholder: {Boolean} Render placeholder price

  Usage:
  {% render 'price', product: product %}
{% endcomment %}

{%- liquid
  if use_variant
    assign target = product.selected_or_first_available_variant
  elsif placeholder
    assign target = null
  else
    assign target = product
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999
  assign price_min = product.price_min
  assign price_max = product.price_max
  assign available = target.available | default: false
  assign money_price = price | money
  assign money_price_min = price_min | money
  assign money_price_max = price_max | money

  if settings.currency_code_enabled
    assign money_price = price | money_with_currency
    assign money_price_min = price_min | money_with_currency
    assign money_price_max = price_max | money_with_currency
  endif

  assign on_sale = false
  if compare_at_price > price and product.quantity_price_breaks_configured? != true
    assign on_sale = true
  endif

  assign has_volume_pricing = false
  if product.quantity_price_breaks_configured?
    assign has_volume_pricing = true
  endif
-%}

{%- unless target == null and placeholder == null -%}
  <div class="flex flex-wrap items-center gap-x-2 gap-y-1 {{ price_class }}">

    {%- comment -%} Main Price Display {%- endcomment -%}
    {%- if has_volume_pricing -%}
      {%- comment -%} Volume Pricing Display {%- endcomment -%}
      {%- if show_compare_at_price and compare_at_price -%}
        {%- unless product.price_varies == false and product.compare_at_price_varies -%}
          <span class="sr-only">{{ 'products.product.price.regular_price' | t }}</span>
          <s class="text-sm text-neutral-500 line-through">
            {%- if settings.currency_code_enabled -%}
              {{ compare_at_price | money_with_currency }}
            {%- else -%}
              {{ compare_at_price | money }}
            {%- endif -%}
          </s>
        {%- endunless -%}
      {%- endif -%}
      <span class="sr-only">{{ 'products.product.price.regular_price' | t }}</span>
      <span class="text-sm font-medium text-neutral-900">
        {{ 'products.product.volume_pricing.price_range' | t: minimum: money_price_min, maximum: money_price_max }}
      </span>

    {%- elsif on_sale -%}
      {%- comment -%} Sale Price Display {%- endcomment -%}
      {%- unless product.price_varies == false and product.compare_at_price_varies -%}
        <span class="sr-only">{{ 'products.product.price.regular_price' | t }}</span>
        <s class="text-sm text-neutral-500 line-through">
          {%- if settings.currency_code_enabled -%}
            {{ compare_at_price | money_with_currency }}
          {%- else -%}
            {{ compare_at_price | money }}
          {%- endif -%}
        </s>
      {%- endunless -%}
      <span class="sr-only">{{ 'products.product.price.sale_price' | t }}</span>
      <span class="text-sm font-medium text-red-600">
        {%- if target == product and product.price_varies -%}
          {{ 'products.product.price.from_price_html' | t: price: money_price }}
        {%- else -%}
          {{ money_price }}
        {%- endif -%}
      </span>

    {%- else -%}
      {%- comment -%} Regular Price Display {%- endcomment -%}
      <span class="sr-only">{{ 'products.product.price.regular_price' | t }}</span>
      <span class="text-sm font-medium text-neutral-900">
        {%- if target == product and product.price_varies -%}
          {{ 'products.product.price.from_price_html' | t: price: money_price }}
        {%- else -%}
          {{ money_price }}
        {%- endif -%}
      </span>
    {%- endif -%}

    {%- comment -%} Unit Price {%- endcomment -%}
    {%- if product.selected_or_first_available_variant.unit_price_measurement -%}
      {%- render 'unit-price',
        price: product.selected_or_first_available_variant.unit_price,
        measurement: product.selected_or_first_available_variant.unit_price_measurement
      -%}
    {%- endif -%}

    {%- comment -%} Badges {%- endcomment -%}
    {%- if show_badges -%}
      {%- if on_sale and available -%}
        <span class="inline-flex px-2 py-0.5 text-[10px] font-medium uppercase tracking-wider bg-red-600 text-white rounded">
          {{ 'products.product.on_sale' | t }}
        </span>
      {%- endif -%}

      {%- if available == false -%}
        <span class="inline-flex px-2 py-0.5 text-[10px] font-medium uppercase tracking-wider bg-neutral-900 text-white rounded">
          {{ 'products.product.sold_out' | t }}
        </span>
      {%- endif -%}
    {%- endif -%}

  </div>
{%- endunless -%}
