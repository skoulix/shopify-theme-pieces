{%- comment -%}
  Footer Social Icons
  Renders social media icons from theme settings
{%- endcomment -%}

{% if settings.social_instagram_link != blank %}
  <a href="{{ settings.social_instagram_link }}" target="_blank" rel="noopener" aria-label="{{ 'social.instagram' | t }}">
    <i class="ph ph-instagram-logo text-2xl"></i>
  </a>
{% endif %}
