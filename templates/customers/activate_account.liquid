{%- comment -%}
  Customer Account Activation Page
  Allows users to activate their account and set a password
{%- endcomment -%}

<style>
  .customer-page__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.04em;
    line-height: 0.9;
    color: var(--color-text);
  }

  /* Hide title initially to prevent FOUC before SplitText animation */
  [data-customer-title] { opacity: 0; }
  html.animations-disabled [data-customer-title] { opacity: 1; }

  .customer-form__input {
    width: 100%;
    padding: 1rem;
    font-size: 0.875rem;
    background: var(--color-background);
    border: var(--input-border-width) solid var(--color-border);
    border-radius: var(--input-radius);
    color: var(--color-text);
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .customer-form__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  .customer-form__input::placeholder {
    color: var(--color-text-secondary);
  }

  .customer-form__label {
    display: block;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .customer-form__alert {
    padding: 1rem;
    border-radius: var(--card-radius);
    font-size: 0.875rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .customer-form__alert--error {
    background-color: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    color: #dc2626;
  }
</style>

<div class="page-container py-[--page-vertical-padding]">
  <div class="max-w-md mx-auto text-center">
    <h1 class="customer-page__title font-heading mb-3" data-customer-title>
      {{ 'customers.activate_account.title' | t }}
    </h1>
    <p class="text-[--color-text-secondary] mb-10" data-intro>
      {{ 'customers.activate_account.subtext' | t }}
    </p>

    {% form 'activate_customer_password', class: 'space-y-6 text-left' %}
      {% if form.errors %}
        <div class="customer-form__alert customer-form__alert--error" role="alert" data-intro>
          <i class="ph ph-warning-circle text-xl flex-shrink-0"></i>
          <span>{{ form.errors | default_errors }}</span>
        </div>
      {% endif %}

      <div data-intro>
        <label for="activate-password" class="customer-form__label">{{ 'customers.activate_account.password' | t }}</label>
        <input
          type="password"
          id="activate-password"
          name="customer[password]"
          autocomplete="new-password"
          required
          class="customer-form__input"
        >
      </div>

      <div data-intro>
        <label for="activate-password-confirm" class="customer-form__label">{{ 'customers.activate_account.password_confirm' | t }}</label>
        <input
          type="password"
          id="activate-password-confirm"
          name="customer[password_confirmation]"
          autocomplete="new-password"
          required
          class="customer-form__input"
        >
      </div>

      <div data-intro>
        <button type="submit" class="btn btn--primary w-full">
          <span>{{ 'customers.activate_account.submit' | t }}</span>
        </button>
      </div>

      <p class="text-center" data-intro>
        <a href="{{ routes.account_login_url }}" class="text-sm text-[--color-text-secondary] hover:text-[--color-text] transition-colors underline underline-offset-4" data-no-swup>
          {{ 'customers.activate_account.cancel' | t }}
        </a>
      </p>
    {% endform %}
  </div>
</div>

<script>
  // SplitText title animation
  (function() {
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      document.querySelectorAll('[data-customer-title]').forEach(el => el.style.opacity = 1);
      return;
    }

    function initAnimation() {
      let gsap = window.gsap || (window.pieces && window.pieces.gsap);
      let SplitText = window.SplitText || (window.pieces && window.pieces.SplitText);
      let ScrollTrigger = window.ScrollTrigger || (window.pieces && window.pieces.ScrollTrigger);

      if (!gsap || !SplitText || !ScrollTrigger) {
        setTimeout(initAnimation, 50);
        return;
      }

      document.querySelectorAll('[data-customer-title]').forEach(title => {
        if (title.dataset.splitInitialized) return;
        title.dataset.splitInitialized = 'true';

        const split = new SplitText(title, { type: 'lines', linesClass: 'customer-title-line' });

        split.lines.forEach(line => {
          const wrapper = document.createElement('div');
          wrapper.style.overflow = 'hidden';
          wrapper.style.display = 'block';
          line.parentNode.insertBefore(wrapper, line);
          wrapper.appendChild(line);
        });

        gsap.set(split.lines, { yPercent: 120 });
        title.style.opacity = 1;

        gsap.to(split.lines, {
          yPercent: 0,
          duration: 1.2,
          ease: 'power4.out',
          stagger: 0.1,
          scrollTrigger: {
            trigger: title,
            start: 'top 85%',
            once: true
          }
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAnimation);
    } else {
      requestAnimationFrame(initAnimation);
    }
  })();
</script>
