{%- comment -%}
  Customer Login Page
  Handles login form and guest checkout option
{%- endcomment -%}

<style>
  .customer-page__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: calc(-0.04em + var(--heading-letter-spacing, 0em));
    line-height: 0.9;
    color: var(--color-text);
  }

  .customer-form__input {
    width: 100%;
    padding: 1rem;
    font-size: 0.875rem;
    background: var(--color-background);
    border: var(--input-border-width) solid var(--color-border);
    border-radius: var(--input-radius);
    color: var(--color-text);
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .customer-form__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  .customer-form__input::placeholder {
    color: var(--color-text-secondary);
  }

  .customer-form__alert {
    padding: 1rem;
    border-radius: var(--card-radius);
    font-size: 0.875rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .customer-form__alert--error {
    background-color: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    color: #dc2626;
  }

  .customer-form__alert--success {
    background-color: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
    color: #16a34a;
  }

  .customer-form__divider {
    position: relative;
    margin: 2.5rem 0;
  }

  .customer-form__divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--color-border);
  }

  .customer-form__divider span {
    position: relative;
    padding: 0 1rem;
    background: var(--color-background);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
  }
</style>

{%- comment -%} Check if recover form should be visible (posted successfully or has errors) {%- endcomment -%}
{%- form 'recover_customer_password' -%}
  {%- if form.posted_successfully? or form.errors -%}
    {%- assign show_recover_form = true -%}
  {%- endif -%}
{%- endform -%}

<div class="page-container page-padding">
  <div class="max-w-md mx-auto">
    {%- comment -%} Login Form {%- endcomment -%}
    <div id="customer-login" class="{% if show_recover_form %}hidden{% endif %} text-center" data-tween-group="customer-login" data-tween-start="top bottom">
      <h1 class="customer-page__title font-heading mb-3" data-tween data-tween-type="split-text">
        {{ 'customers.login.title' | t }}
      </h1>
      <p class="text-(--color-text-secondary) mb-10" data-tween data-tween-type="fade-up">
        {{ 'customers.login.subtitle' | t }}
      </p>

      <div data-tween data-tween-type="fade-up">
        {% form 'customer_login', class: 'space-y-6' %}
          {% if form.errors %}
            <div class="customer-form__alert customer-form__alert--error" role="alert">
              <i class="ph ph-warning-circle text-xl flex-shrink-0"></i>
              <span>{{ form.errors | default_errors }}</span>
            </div>
          {% endif %}

          <div>
            <label for="customer-email" class="sr-only">{{ 'customers.login.email' | t }}</label>
            <input
              type="email"
              id="customer-email"
              name="customer[email]"
              autocomplete="email"
              autocapitalize="off"
              autocorrect="off"
              required
              placeholder="{{ 'customers.login.email' | t }}"
              class="customer-form__input"
              {% if form.errors contains 'form' %}autofocus{% endif %}
            >
          </div>

          <div>
            <label for="customer-password" class="sr-only">{{ 'customers.login.password' | t }}</label>
            <input
              type="password"
              id="customer-password"
              name="customer[password]"
              autocomplete="current-password"
              required
              placeholder="{{ 'customers.login.password' | t }}"
              class="customer-form__input"
            >
          </div>

          <div>
            <button type="submit" class="btn btn--primary w-full">
              <span>{{ 'customers.login.sign_in' | t }}</span>
            </button>
          </div>

          <p class="text-sm text-center">
            <a href="#recover" class="text-(--color-text-secondary) hover:text-(--color-text) transition-colors underline underline-offset-4" data-toggle-recover>
              {{ 'customers.login.forgot_password' | t }}
            </a>
          </p>
        {% endform %}

        <div class="customer-form__divider text-center">
          <span>{{ 'customers.login.new_customer' | t }}</span>
        </div>

        <a href="{{ routes.account_register_url }}" class="btn btn--secondary w-full" data-no-swup>
          <span>{{ 'customers.login.create_account' | t }}</span>
        </a>
      </div>
    </div>

    {%- comment -%} Password Recovery Form {%- endcomment -%}
    <div id="recover-password" class="{% unless show_recover_form %}hidden{% endunless %} text-center" data-recover-form data-tween-group="customer-recover" data-tween-start="top bottom">
      <h1 class="customer-page__title font-heading mb-3" data-tween data-tween-type="split-text">
        {{ 'customers.recover_password.title' | t }}
      </h1>
      <p class="text-(--color-text-secondary) mb-10" data-tween data-tween-type="fade-up">
        {{ 'customers.recover_password.subtext' | t }}
      </p>

      <div data-tween data-tween-type="fade-up">
        {% form 'recover_customer_password', class: 'space-y-6' %}
          {% if form.posted_successfully? %}
            <div class="customer-form__alert customer-form__alert--success" role="status">
              <i class="ph ph-check-circle text-xl flex-shrink-0"></i>
              <span>{{ 'customers.recover_password.success' | t }}</span>
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="customer-form__alert customer-form__alert--error" role="alert">
              <i class="ph ph-warning-circle text-xl flex-shrink-0"></i>
              <span>{{ form.errors | default_errors }}</span>
            </div>
          {% endif %}

          <div>
            <label for="recover-email" class="sr-only">{{ 'customers.login.email' | t }}</label>
            <input
              type="email"
              id="recover-email"
              name="email"
              autocomplete="email"
              autocapitalize="off"
              autocorrect="off"
              required
              placeholder="{{ 'customers.login.email' | t }}"
              class="customer-form__input"
            >
          </div>

          <div>
            <button type="submit" class="btn btn--primary w-full">
              <span>{{ 'customers.recover_password.submit' | t }}</span>
            </button>
          </div>

          <p class="text-sm text-center">
            <a href="#login" class="text-(--color-text-secondary) hover:text-(--color-text) transition-colors underline underline-offset-4" data-toggle-recover>
              {{ 'customers.recover_password.cancel' | t }}
            </a>
          </p>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    function init() {
      const loginForm = document.getElementById('customer-login');
      const recoverForm = document.getElementById('recover-password');
      const toggleButtons = document.querySelectorAll('[data-toggle-recover]');

      if (!loginForm || !recoverForm) return;

      function showForm(formType) {
        if (formType === 'recover') {
          loginForm.classList.add('hidden');
          recoverForm.classList.remove('hidden');
        } else {
          loginForm.classList.remove('hidden');
          recoverForm.classList.add('hidden');
        }
      }

      // Check URL hash on load
      if (window.location.hash === '#recover' && recoverForm.classList.contains('hidden')) {
        loginForm.classList.add('hidden');
        recoverForm.classList.remove('hidden');
      }

      // Handle hash changes (browser back/forward)
      window.addEventListener('hashchange', function() {
        if (window.location.hash === '#recover') {
          showForm('recover');
        } else if (window.location.hash === '#login' || window.location.hash === '') {
          showForm('login');
        }
      });

      // Handle toggle button clicks
      toggleButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          const targetHash = this.getAttribute('href');
          history.pushState(null, '', targetHash);

          if (targetHash === '#recover') {
            showForm('recover');
          } else {
            showForm('login');
          }
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
</script>
