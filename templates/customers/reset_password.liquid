{%- comment -%}
  Customer Reset Password Page
  Allows users to set a new password after receiving reset email
{%- endcomment -%}

<div class="page-container py-12 lg:py-20">
  <div class="max-w-md mx-auto text-center">
    <h1 class="text-3xl font-semibold font-heading mb-2" data-intro>
      {{ 'customers.reset_password.title' | t }}
    </h1>
    <p class="text-[--color-text-secondary] mb-8">
      {{ 'customers.reset_password.subtext' | t }}
    </p>

    {% form 'reset_customer_password', class: 'space-y-4 text-left' %}
      {% if form.errors %}
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm" role="alert">
          <i class="ph ph-warning-circle mr-2"></i>
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div>
        <label for="reset-password" class="block text-sm font-medium mb-2">{{ 'customers.reset_password.password' | t }}</label>
        <input
          type="password"
          id="reset-password"
          name="customer[password]"
          autocomplete="new-password"
          required
          class="input w-full"
        >
      </div>

      <div>
        <label for="reset-password-confirm" class="block text-sm font-medium mb-2">{{ 'customers.reset_password.password_confirm' | t }}</label>
        <input
          type="password"
          id="reset-password-confirm"
          name="customer[password_confirmation]"
          autocomplete="new-password"
          required
          class="input w-full"
        >
      </div>

      <button type="submit" class="btn btn-primary w-full">
        <span>{{ 'customers.reset_password.submit' | t }}</span>
      </button>
    {% endform %}
  </div>
</div>
