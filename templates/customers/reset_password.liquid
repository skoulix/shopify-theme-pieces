{%- comment -%}
  Customer Reset Password Page
  Allows users to set a new password after receiving reset email
{%- endcomment -%}

<style>
  .customer-page__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.04em;
    line-height: 0.9;
    color: var(--color-text);
  }

  .customer-form__input {
    width: 100%;
    padding: 1rem;
    font-size: 0.875rem;
    background: var(--color-background);
    border: var(--input-border-width) solid var(--color-border);
    border-radius: var(--input-radius);
    color: var(--color-text);
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .customer-form__input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px color-mix(in srgb, var(--color-primary) 20%, transparent);
  }

  .customer-form__input::placeholder {
    color: var(--color-text-secondary);
  }

  .customer-form__label {
    display: block;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .customer-form__alert {
    padding: 1rem;
    border-radius: var(--card-radius);
    font-size: 0.875rem;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .customer-form__alert--error {
    background-color: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    color: #dc2626;
  }
</style>

<div class="page-container py-[--page-vertical-padding]">
  <div class="max-w-md mx-auto text-center" data-tween-group="customer-reset" data-tween-start="top bottom">
    <h1 class="customer-page__title font-heading mb-3" data-tween data-tween-type="split-text">
      {{ 'customers.reset_password.title' | t }}
    </h1>
    <p class="text-[--color-text-secondary] mb-10" data-tween data-tween-type="fade-up">
      {{ 'customers.reset_password.subtext' | t }}
    </p>

    <div data-tween data-tween-type="fade-up">
      {% form 'reset_customer_password', class: 'space-y-6 text-left' %}
        {% if form.errors %}
          <div class="customer-form__alert customer-form__alert--error" role="alert">
            <i class="ph ph-warning-circle text-xl flex-shrink-0"></i>
            <span>{{ form.errors | default_errors }}</span>
          </div>
        {% endif %}

        <div>
          <label for="reset-password" class="customer-form__label">{{ 'customers.reset_password.password' | t }}</label>
          <input
            type="password"
            id="reset-password"
            name="customer[password]"
            autocomplete="new-password"
            required
            class="customer-form__input"
          >
        </div>

        <div>
          <label for="reset-password-confirm" class="customer-form__label">{{ 'customers.reset_password.password_confirm' | t }}</label>
          <input
            type="password"
            id="reset-password-confirm"
            name="customer[password_confirmation]"
            autocomplete="new-password"
            required
            class="customer-form__input"
          >
        </div>

        <div>
          <button type="submit" class="btn btn--primary w-full">
            <span>{{ 'customers.reset_password.submit' | t }}</span>
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
