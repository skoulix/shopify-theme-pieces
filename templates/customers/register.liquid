{%- comment -%}
  Customer Registration Page
  New account creation form
{%- endcomment -%}

<div class="page-container py-12 lg:py-20">
  <div class="max-w-md mx-auto text-center">
    <h1 class="text-3xl font-semibold font-heading mb-2" data-intro>
      {{ 'customers.register.title' | t }}
    </h1>
    <p class="text-[--color-text-secondary] mb-8">
      {{ 'customers.register.subtitle' | t }}
    </p>

    {% form 'create_customer', class: 'space-y-4 text-left' %}
      {% if form.errors %}
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm" role="alert">
          <i class="ph ph-warning-circle mr-2"></i>
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="first-name" class="sr-only">{{ 'customers.register.first_name' | t }}</label>
          <input
            type="text"
            id="first-name"
            name="customer[first_name]"
            autocomplete="given-name"
            required
            placeholder="{{ 'customers.register.first_name' | t }}"
            class="input w-full"
          >
        </div>

        <div>
          <label for="last-name" class="sr-only">{{ 'customers.register.last_name' | t }}</label>
          <input
            type="text"
            id="last-name"
            name="customer[last_name]"
            autocomplete="family-name"
            required
            placeholder="{{ 'customers.register.last_name' | t }}"
            class="input w-full"
          >
        </div>
      </div>

      <div>
        <label for="register-email" class="sr-only">{{ 'customers.register.email' | t }}</label>
        <input
          type="email"
          id="register-email"
          name="customer[email]"
          autocomplete="email"
          autocapitalize="off"
          autocorrect="off"
          required
          placeholder="{{ 'customers.register.email' | t }}"
          class="input w-full"
        >
      </div>

      <div>
        <label for="register-password" class="sr-only">{{ 'customers.register.password' | t }}</label>
        <input
          type="password"
          id="register-password"
          name="customer[password]"
          autocomplete="new-password"
          required
          placeholder="{{ 'customers.register.password' | t }}"
          class="input w-full"
        >
      </div>

      <button type="submit" class="btn btn-primary w-full">
        <span>{{ 'customers.register.submit' | t }}</span>
      </button>
    {% endform %}

    <div class="mt-8 pt-8 border-t border-[--color-border]">
      <p class="text-[--color-text-secondary] mb-4">{{ 'customers.register.have_account' | t }}</p>
      <a href="{{ routes.account_login_url }}" class="btn btn-secondary w-full">
        <span>{{ 'customers.login.sign_in' | t }}</span>
      </a>
    </div>
  </div>
</div>
