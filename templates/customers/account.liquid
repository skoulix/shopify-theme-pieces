{%- comment -%}
  Customer Account Dashboard
  Shows order history and account details
{%- endcomment -%}

<style>
  .customer-page__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.04em;
    line-height: 0.9;
    color: var(--color-text);
  }

  /* Hide title initially to prevent FOUC before SplitText animation */
  [data-customer-title] { opacity: 0; }
  html.animations-disabled [data-customer-title] { opacity: 1; }

  .customer-nav__link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    border-radius: var(--card-radius);
    font-size: 0.875rem;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .customer-nav__link:hover {
    background-color: var(--color-background-secondary);
  }

  .customer-nav__link--active {
    background-color: var(--color-background-secondary);
    font-weight: 500;
  }

  .customer-nav__link--logout {
    color: var(--color-text-secondary);
  }

  .customer-order-card {
    border: 1px solid var(--color-border);
    border-radius: var(--card-radius);
    overflow: hidden;
  }

  .customer-order-card__header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background-color: var(--color-background-secondary);
  }

  .customer-order-card__body {
    padding: 1.25rem;
  }

  .customer-status-badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 9999px;
  }

  .customer-status-badge--fulfilled {
    background-color: rgba(34, 197, 94, 0.1);
    color: #16a34a;
  }

  .customer-status-badge--partial {
    background-color: rgba(234, 179, 8, 0.1);
    color: #ca8a04;
  }

  .customer-status-badge--unfulfilled {
    background-color: var(--color-background-secondary);
    color: var(--color-text-secondary);
  }

  .customer-account-card {
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: var(--card-radius);
  }
</style>

<div class="page-container py-[--page-vertical-padding]">
  {%- comment -%} Header {%- endcomment -%}
  <header class="mb-12">
    <h1 class="customer-page__title font-heading mb-3" data-customer-title>
      {{ 'customers.account.title' | t }}
    </h1>
    <p class="text-[--color-text-secondary]" data-intro>
      {{ 'customers.account.welcome' | t: name: customer.first_name }}
    </p>
  </header>

  <div class="grid lg:grid-cols-3 gap-8 lg:gap-12">
    {%- comment -%} Sidebar {%- endcomment -%}
    <aside class="lg:col-span-1" data-intro>
      <nav class="space-y-1">
        <a href="{{ routes.account_url }}" class="customer-nav__link customer-nav__link--active" data-no-swup>
          <i class="ph ph-user text-lg"></i>
          {{ 'customers.account.details' | t }}
        </a>
        <a href="{{ routes.account_addresses_url }}" class="customer-nav__link" data-no-swup>
          <i class="ph ph-house text-lg"></i>
          {{ 'customers.addresses.title' | t }}
        </a>
        <a href="{{ routes.account_logout_url }}" class="customer-nav__link customer-nav__link--logout" data-no-swup>
          <i class="ph ph-sign-out text-lg"></i>
          {{ 'customers.account.log_out' | t }}
        </a>
      </nav>

      {%- comment -%} Account Details Card {%- endcomment -%}
      <div class="customer-account-card mt-8">
        <h3 class="font-semibold mb-4 text-sm">{{ 'customers.account.details' | t }}</h3>
        <p class="text-sm text-[--color-text-secondary]">{{ customer.email }}</p>
        {% if customer.default_address %}
          <div class="mt-4 pt-4 border-t border-[--color-border] text-sm text-[--color-text-secondary]">
            {{ customer.default_address | format_address }}
          </div>
        {% endif %}
      </div>
    </aside>

    {%- comment -%} Order History {%- endcomment -%}
    <main class="lg:col-span-2">
      <h2 class="text-xl font-semibold font-heading mb-6" data-intro>{{ 'customers.orders.title' | t }}</h2>

      {% paginate customer.orders by 10 %}
        {% if customer.orders.size > 0 %}
          <div class="space-y-4">
            {% for order in customer.orders %}
              <div class="customer-order-card" data-intro>
                {%- comment -%} Order Header {%- endcomment -%}
                <div class="customer-order-card__header">
                  <div>
                    <a href="{{ order.customer_url }}" class="font-semibold hover:text-[--color-primary] transition-colors">
                      {{ order.name }}
                    </a>
                    <p class="text-sm text-[--color-text-secondary]">
                      {{ order.created_at | date: format: 'date' }}
                    </p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold">{{ order.total_price | money }}</p>
                    <span class="customer-status-badge
                      {% if order.fulfillment_status == 'fulfilled' %}
                        customer-status-badge--fulfilled
                      {% elsif order.fulfillment_status == 'partial' %}
                        customer-status-badge--partial
                      {% else %}
                        customer-status-badge--unfulfilled
                      {% endif %}
                    ">
                      {{ order.fulfillment_status_label }}
                    </span>
                  </div>
                </div>

                {%- comment -%} Order Items Preview {%- endcomment -%}
                <div class="customer-order-card__body">
                  <div class="flex flex-wrap gap-2">
                    {% for line_item in order.line_items limit: 4 %}
                      {% if line_item.image %}
                        <img
                          src="{{ line_item.image | image_url: width: 80 }}"
                          alt="{{ line_item.title | escape }}"
                          width="40"
                          height="40"
                          class="w-10 h-10 object-cover rounded border border-[--color-border]"
                          loading="lazy"
                        >
                      {% endif %}
                    {% endfor %}
                    {% if order.line_items.size > 4 %}
                      <span class="w-10 h-10 flex items-center justify-center rounded border border-[--color-border] text-xs text-[--color-text-secondary]">
                        +{{ order.line_items.size | minus: 4 }}
                      </span>
                    {% endif %}
                  </div>
                  <a href="{{ order.customer_url }}" class="inline-flex items-center gap-1 mt-4 text-sm font-medium text-[--color-primary] hover:underline">
                    {{ 'customers.orders.view_order' | t }}
                    <i class="ph ph-arrow-right"></i>
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>

          {% if paginate.pages > 1 %}
            <nav class="mt-8 flex justify-center gap-2" aria-label="{{ 'accessibility.pagination' | t }}">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="px-4 py-2 border border-[--color-border] rounded hover:bg-[--color-background-secondary] transition-colors" aria-label="{{ 'accessibility.previous_page' | t }}">
                  <i class="ph ph-caret-left" aria-hidden="true"></i>
                </a>
              {% endif %}

              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="px-4 py-2 border border-[--color-border] rounded hover:bg-[--color-background-secondary] transition-colors">
                    {{ part.title }}
                  </a>
                {% else %}
                  {% if part.title == paginate.current_page %}
                    <span class="px-4 py-2 border border-[--color-primary] bg-[--color-primary] text-[--color-primary-contrast] rounded">
                      {{ part.title }}
                    </span>
                  {% else %}
                    <span class="px-4 py-2">{{ part.title }}</span>
                  {% endif %}
                {% endif %}
              {% endfor %}

              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="px-4 py-2 border border-[--color-border] rounded hover:bg-[--color-background-secondary] transition-colors" aria-label="{{ 'accessibility.next_page' | t }}">
                  <i class="ph ph-caret-right" aria-hidden="true"></i>
                </a>
              {% endif %}
            </nav>
          {% endif %}
        {% else %}
          <div class="text-center py-12 border border-dashed border-[--color-border] rounded-lg" data-intro>
            <i class="ph ph-package text-4xl text-[--color-text-secondary] mb-4"></i>
            <p class="text-[--color-text-secondary] mb-6">{{ 'customers.orders.none' | t }}</p>
            <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
              <span>{{ 'customers.account.start_shopping' | t }}</span>
            </a>
          </div>
        {% endif %}
      {% endpaginate %}
    </main>
  </div>
</div>

<script>
  // SplitText title animation
  (function() {
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      document.querySelectorAll('[data-customer-title]').forEach(el => el.style.opacity = 1);
      return;
    }

    function initAnimation() {
      let gsap = window.gsap || (window.pieces && window.pieces.gsap);
      let SplitText = window.SplitText || (window.pieces && window.pieces.SplitText);
      let ScrollTrigger = window.ScrollTrigger || (window.pieces && window.pieces.ScrollTrigger);

      if (!gsap || !SplitText || !ScrollTrigger) {
        setTimeout(initAnimation, 50);
        return;
      }

      document.querySelectorAll('[data-customer-title]').forEach(title => {
        if (title.dataset.splitInitialized) return;
        title.dataset.splitInitialized = 'true';

        const split = new SplitText(title, { type: 'lines', linesClass: 'customer-title-line' });

        split.lines.forEach(line => {
          const wrapper = document.createElement('div');
          wrapper.style.overflow = 'hidden';
          wrapper.style.display = 'block';
          line.parentNode.insertBefore(wrapper, line);
          wrapper.appendChild(line);
        });

        gsap.set(split.lines, { yPercent: 120 });
        title.style.opacity = 1;

        gsap.to(split.lines, {
          yPercent: 0,
          duration: 1.2,
          ease: 'power4.out',
          stagger: 0.1,
          scrollTrigger: {
            trigger: title,
            start: 'top 85%',
            once: true
          }
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAnimation);
    } else {
      requestAnimationFrame(initAnimation);
    }
  })();
</script>
