{% layout none %}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ gift_card.balance | money }} - {{ shop.name }}</title>

    {% render 'css-variables' %}
    {% render 'meta-tags' %}

    {{ content_for_header }}

    {%- comment -%} Phosphor Icons {%- endcomment -%}
    <link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web@2.1.1/src/regular/style.css">

    {%- comment -%} Tailwind CSS {%- endcomment -%}
    {{ 'pieces-app.css' | asset_url | stylesheet_tag: preload: true }}
  </head>

  <body class="bg-gray-50 text-gray-900 antialiased">
    <main class="flex min-h-screen items-center justify-center px-4 py-12">
      <div class="w-full max-w-md text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900">{{ gift_card.balance | money }}</h1>

        {% if gift_card.enabled == false or gift_card.expired %}
          <p class="mt-2 inline-flex items-center rounded-full bg-red-100 px-3 py-1 text-sm font-medium text-red-800">
            <i class="ph ph-warning mr-1"></i>
            {{ 'gift_card.expired' | t }}
          </p>
        {% endif %}

        {% if gift_card.expires_on %}
          {% assign expires_on = gift_card.expires_on | date: '%B %e, %Y' %}
          <p class="mt-4 text-sm text-gray-500">
            {{ 'gift_card.expires_on' | t: expires_on: expires_on }}
          </p>
        {% endif %}

        <div class="mt-8">
          {% if settings.logo %}
            {{ settings.logo | image_url: width: 300 | image_tag: class: 'mx-auto h-auto max-h-32', alt: shop.name }}
          {% else %}
            <img
              src="{{ 'gift-card/card.svg' | shopify_asset_url }}"
              alt="{{ 'gift_card.card' | t }}"
              width="300"
              height="200"
              class="mx-auto"
            >
          {% endif %}
        </div>

        <h2 class="mt-8 text-2xl font-semibold text-gray-900">{{ shop.name }}</h2>

        <p class="mt-4 text-sm text-gray-600">{{ 'gift_card.use_at_checkout' | t }}</p>

        <p class="mt-6 rounded-lg bg-white px-6 py-4 font-mono text-lg tracking-widest text-gray-900 ring-1 ring-inset ring-gray-200">
          {{ gift_card.code | format_code }}
        </p>

        {% if gift_card.pass_url %}
          <a href="{{ gift_card.pass_url }}" class="mt-6 inline-block">
            <img
              src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}"
              alt="{{ 'gift_card.add_to_apple_wallet' | t }}"
              width="140"
              height="44"
            >
          </a>
        {% endif %}

        <div class="mt-8">
          <a
            href="{{ shop.url }}"
            class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-6 py-3 text-sm font-semibold text-white hover:bg-indigo-500"
          >
            <i class="ph ph-storefront mr-2"></i>
            Continue Shopping
          </a>
        </div>
      </div>
    </main>
  </body>
</html>
