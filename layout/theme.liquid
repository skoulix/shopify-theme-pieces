<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_background }}">

    <link rel="canonical" href="{{ canonical_url }}">

    {% if settings.favicon != blank %}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {% endif %}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    {%- comment -%} Preconnect to fonts {%- endcomment -%}
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

    {%- comment -%} CSS Variables & Font Loading {%- endcomment -%}
    {% render 'css-variables' %}

    {%- comment -%} Phosphor Icons {%- endcomment -%}
    <link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web@2.1.1/src/regular/style.css">

    {%- comment -%} Tailwind CSS (compiled) {%- endcomment -%}
    {{ 'pieces-app.css' | asset_url | stylesheet_tag: preload: true }}

    {%- comment -%} Pieces App - Swup, Lenis, GSAP {%- endcomment -%}
    <script src="{{ 'pieces-app.js' | asset_url }}" type="module"></script>

    {{ content_for_header }}

    <script>
      document.documentElement.classList.replace('no-js', 'js');
      if (Shopify.designMode) document.documentElement.classList.add('shopify-design-mode');
    </script>
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:z-50 focus:p-4 focus:bg-white focus:text-indigo-600">
      {{ 'accessibility.skip_to_text' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="main" tabindex="-1">
      <div id="swup-container">
        {{ content_for_layout }}
      </div>
    </main>

    {% sections 'footer-group' %}

    {%- comment -%} Page transition overlay for Swup (z-30 to stay below header z-40) {%- endcomment -%}
    <div class="page-transition-overlay fixed inset-0 z-30 pointer-events-none bg-white origin-bottom" style="transform: scaleY(0);"></div>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}',
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`,
      };

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      };
    </script>
  </body>
</html>
