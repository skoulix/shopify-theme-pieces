<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">

    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ shop.name }}</title>

    <meta name="description" content="{{ page_description | escape }}">

    {% render 'meta-tags' %}

    {{ content_for_header }}

    {%- comment -%} CSS Variables {%- endcomment -%}
    {% render 'css-variables' %}

    {%- comment -%} Phosphor Icons {%- endcomment -%}
    {{ 'phosphor-icons.css' | asset_url | stylesheet_tag: preload: true }}

    {%- comment -%} Tailwind CSS (compiled) {%- endcomment -%}
    {{ 'pieces-app.css' | asset_url | stylesheet_tag: preload: true }}
  </head>

  <body class="bg-(--color-background) text-(--color-text) antialiased btn--hover-{{ settings.button_hover_style | default: 'swipe' }}{% if settings.button_hover_slide_text %} btn-text-slide{% endif %}">
    <a class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-(--color-primary) focus:text-(--color-background) focus:px-4 focus:py-2" href="#MainContent">
      Skip to content
    </a>

    <main id="MainContent" class="min-h-screen">
      {{ content_for_layout }}
    </main>
  </body>
</html>
