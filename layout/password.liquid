<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">

    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    <title>{{ shop.name }}</title>

    <meta name="description" content="{{ page_description | escape }}">

    {% render 'meta-tags' %}

    {{ content_for_header }}

    {%- comment -%} CSS Variables {%- endcomment -%}
    {% render 'css-variables' %}

    {%- comment -%} Phosphor Icons {%- endcomment -%}
    <link rel="stylesheet" href="https://unpkg.com/@phosphor-icons/web@2.1.1/src/regular/style.css">

    {%- comment -%} Tailwind CSS (compiled) {%- endcomment -%}
    {{ 'pieces-app.css' | asset_url | stylesheet_tag: preload: true }}
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <a class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-indigo-600 focus:text-white focus:px-4 focus:py-2 focus:rounded-md" href="#MainContent">
      Skip to content
    </a>

    <main id="MainContent" class="min-h-screen">
      {{ content_for_layout }}
    </main>
  </body>
</html>
