{%- comment -%}
  Featured Collection Section - Modern grid with GSAP scroll animations
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif

  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show
-%}

<style>
  /* ==========================================================================
     Featured Collection Section - Custom CSS for clamp() and Liquid values
     ========================================================================== */

  /* Section padding - requires clamp() */
  .featured-collection {
    padding: clamp(4rem, 10vh, 8rem) 0;
  }

  /* Header margin - requires clamp() */
  .featured-collection-header {
    margin-bottom: clamp(2rem, 5vh, 4rem);
  }

  /* Title - requires clamp() */
  .featured-collection-title {
    font-size: clamp(1.75rem, 7vw, 3rem);
    letter-spacing: -0.03em;
    line-height: 0.9;
  }

  @media (min-width: 1024px) {
    .featured-collection-title {
      font-size: clamp(2.5rem, 5vw, 4rem);
    }
  }

  @media (min-width: 1536px) {
    .featured-collection-title {
      font-size: clamp(3rem, 4vw, 4.5rem);
    }
  }

  /* Title line indent - requires clamp() */
  .featured-collection-title-line:nth-child(2) {
    margin-left: clamp(1rem, 6vw, 4rem);
  }

  /* Grid gap and columns - requires clamp() and Liquid columns */
  .featured-collection-grid {
    gap: clamp(1rem, 3vw, 2rem);
  }

  @media (min-width: 1024px) {
    .featured-collection-grid {
      grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    }
  }

  /* Card hover effect */
  .featured-product-card:hover .featured-product-card-image img,
  .featured-product-card:hover .featured-product-card-image svg {
    transform: scale(1.05);
  }
</style>

<section
  class="featured-collection bg-[--color-background]"
  data-featured-collection="{{ section.id }}"
>
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    <header class="featured-collection-header flex flex-col gap-4 md:flex-row md:justify-between md:items-end">
      <h2 class="featured-collection-title font-bold uppercase text-[--color-text]" data-fc-title>
        {% if section.settings.title != blank %}
          {%- assign title_words = section.settings.title | split: ' ' -%}
          {%- for word in title_words -%}
            {%- assign line_break = forloop.index | modulo: 2 -%}
            {%- if forloop.index == 1 or line_break == 1 -%}
              <span class="featured-collection-title-line overflow-hidden">
            {%- endif -%}
            <span class="inline-block">{{ word }}</span>{% unless forloop.last %} {% endunless %}
            {%- if line_break == 0 or forloop.last -%}
              </span>
            {%- endif -%}
          {%- endfor -%}
        {% else %}
          <span class="featured-collection-title-line overflow-hidden">
            <span class="inline-block">{{ collection.title | default: 'Featured' }}</span>
          </span>
        {% endif %}
      </h2>

      {% if section.settings.show_view_all and collection %}
        <a href="{{ collection.url }}" class="text-hover-reveal inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.1em] text-[--color-text] opacity-70 hover:opacity-100 transition-opacity duration-300" data-fc-link>
          <span data-hover="{{ section.settings.view_all_text }}">{{ section.settings.view_all_text }}</span>
          <i class="ph ph-arrow-right"></i>
        </a>
      {% endif %}
    </header>

    {%- comment -%} Product Grid {%- endcomment -%}
    <div class="featured-collection-grid grid grid-cols-2 md:grid-cols-3" data-fc-grid>
      {% if collection != blank %}
        {% for product in collection.products limit: products_to_show %}
          <a
            href="{{ product.url | within: collection }}"
            class="featured-product-card block no-underline text-inherit cursor-pointer"
            data-fc-card="{{ forloop.index0 }}"
          >
            <div class="featured-product-card-image relative overflow-hidden aspect-[3/4] bg-[--color-background-secondary]">
              {% if product.featured_image %}
                {{ product.featured_image | image_url: width: 800 | image_tag:
                  class: 'w-full h-full object-cover transition-transform duration-[600ms] ease-out',
                  loading: 'lazy',
                  sizes: '(max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw',
                  widths: '300, 400, 600, 800'
                }}
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover transition-transform duration-[600ms] ease-out' }}
              {% endif %}
            </div>

            <h3 class="featured-product-card-title mt-4 text-xs font-semibold uppercase tracking-[0.05em] text-[--color-text] overflow-hidden">
              {%- assign title_words = product.title | split: ' ' -%}
              {%- for word in title_words -%}
                <span class="inline-block">{{ word }}</span>{% unless forloop.last %} {% endunless %}
              {%- endfor -%}
            </h3>

            <div class="featured-product-card-price mt-2 text-sm text-[--color-text-secondary] overflow-hidden">
              {% if product.compare_at_price > product.price %}
                <span class="inline-block line-through opacity-50 mr-2">{{ product.compare_at_price | money }}</span>
                <span class="inline-block text-[--color-error]">{{ product.price | money }}</span>
              {% else %}
                <span class="inline-block">{{ product.price | money }}</span>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      {% else %}
        {%- comment -%} Placeholder cards {%- endcomment -%}
        {% for i in (1..products_to_show) %}
          {%- assign placeholder_index = forloop.index | modulo: 6 | plus: 1 -%}
          <article class="featured-product-card block cursor-pointer" data-fc-card="{{ forloop.index0 }}">
            <div class="featured-product-card-image relative overflow-hidden aspect-[3/4] bg-[--color-background-secondary]">
              {{ 'product-' | append: placeholder_index | placeholder_svg_tag: 'w-full h-full object-cover transition-transform duration-[600ms] ease-out' }}
            </div>
            <h3 class="featured-product-card-title mt-4 text-xs font-semibold uppercase tracking-[0.05em] text-[--color-text] overflow-hidden">
              <span class="inline-block">Product</span> <span class="inline-block">{{ forloop.index }}</span>
            </h3>
            <div class="featured-product-card-price mt-2 text-sm text-[--color-text-secondary] overflow-hidden">
              <span class="inline-block">$99.00</span>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<script>
  (function() {
    const section = document.querySelector('[data-featured-collection="{{ section.id }}"]');
    if (!section || section.dataset.fcAnimInitialized) return;
    section.dataset.fcAnimInitialized = 'true';

    function initAnimation() {
      if (typeof gsap === 'undefined' || typeof ScrollTrigger === 'undefined') {
        requestAnimationFrame(initAnimation);
        return;
      }

      // Mark section as ready for animations
      section.dataset.fcAnimReady = 'true';

      const title = section.querySelector('[data-fc-title]');
      const titleSpans = title ? title.querySelectorAll('.inline-block') : [];
      const link = section.querySelector('[data-fc-link]');
      const cards = section.querySelectorAll('[data-fc-card]');

      // Set initial states
      if (titleSpans.length) gsap.set(titleSpans, { yPercent: 100 });
      if (link) gsap.set(link, { opacity: 0, x: -20 });

      cards.forEach(card => {
        const image = card.querySelector('.featured-product-card-image');
        const titleWords = card.querySelectorAll('.featured-product-card-title span');
        const price = card.querySelectorAll('.featured-product-card-price span');

        if (image) gsap.set(image, { clipPath: 'inset(0 100% 0 0)' });
        if (titleWords.length) gsap.set(titleWords, { yPercent: 100 });
        if (price.length) gsap.set(price, { yPercent: 100 });
      });

      // Header animation with ScrollTrigger
      const headerTl = gsap.timeline({
        scrollTrigger: {
          trigger: section,
          start: 'top 80%',
          once: true
        }
      });

      if (titleSpans.length) {
        headerTl.to(titleSpans, {
          yPercent: 0,
          duration: 1,
          ease: 'power4.out',
          stagger: 0.05
        }, 0);
      }

      if (link) {
        headerTl.to(link, {
          opacity: 0.7,
          x: 0,
          duration: 0.6,
          ease: 'power3.out'
        }, 0.3);
      }

      // Card animations with individual ScrollTriggers
      cards.forEach((card, index) => {
        const image = card.querySelector('.featured-product-card-image');
        const titleWords = card.querySelectorAll('.featured-product-card-title span');
        const price = card.querySelectorAll('.featured-product-card-price span');

        const cardTl = gsap.timeline({
          scrollTrigger: {
            trigger: card,
            start: 'top 85%',
            once: true
          }
        });

        // Stagger based on position
        const delay = (index % {{ section.settings.columns }}) * 0.1;

        if (image) {
          cardTl.to(image, {
            clipPath: 'inset(0 0% 0 0)',
            duration: 1.6,
            ease: 'expo.inOut'
          }, delay);
        }

        if (titleWords.length) {
          cardTl.to(titleWords, {
            yPercent: 0,
            duration: 0.8,
            ease: 'power4.out',
            stagger: 0.03
          }, delay + 0.4);
        }

        if (price.length) {
          cardTl.to(price, {
            yPercent: 0,
            duration: 0.6,
            ease: 'power4.out',
            stagger: 0.02
          }, delay + 0.5);
        }
      });
    }

    requestAnimationFrame(initAnimation);
  })();
</script>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "featured-collection-wrapper",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "Leave blank to use collection title"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns (desktop)"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View All' link"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "default": "View All",
      "label": "View all text"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
