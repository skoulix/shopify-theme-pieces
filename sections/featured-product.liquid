{%- comment -%}
  Featured Product Section
  Showcases a single product with variant selection and image switching
  Auto-generated by SEAPIXEL Theme Builder
{%- endcomment -%}

{%- liquid
  assign product = section.settings.product
  assign current_variant = product.selected_or_first_available_variant

  if section.settings.full_width
    if section.settings.layout == 'image_left'
      assign container_class = 'lg:pr-[--page-padding]'
    else
      assign container_class = 'lg:pl-[--page-padding]'
    endif
    assign content_class = 'px-[--page-padding] lg:px-0'
  else
    assign container_class = 'page-container'
    assign content_class = ''
  endif
-%}

<style>
  [data-fp-section="{{ section.id }}"] {
    padding: var(--section-vertical-padding) 0;
  }
  @media (min-width: 1024px) {
    [data-fp-section="{{ section.id }}"][data-layout="image_right"] .fp-container {
      direction: rtl;
    }
    [data-fp-section="{{ section.id }}"][data-layout="image_right"] .fp-container > * {
      direction: ltr;
    }
  }
  [data-fp-section="{{ section.id }}"] .fp-gallery {
    aspect-ratio: {{ section.settings.image_ratio }};
  }
  [data-fp-section="{{ section.id }}"] .fp-gallery-image {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  [data-fp-section="{{ section.id }}"] .fp-gallery-image.is-active {
    opacity: 1;
  }
  [data-fp-section="{{ section.id }}"] .fp-thumbnail.is-active {
    opacity: 1;
    border-color: var(--color-text);
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:checked + .fp-variant-button {
    background-color: var(--color-text);
    color: var(--color-background);
    border-color: var(--color-text);
  }
  [data-fp-section="{{ section.id }}"] .fp-swatch-label {
    outline: 2px solid transparent;
    outline-offset: 2px;
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:checked + .fp-swatch-label {
    outline-color: var(--color-text);
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:checked:hover + .fp-swatch-label {
    outline-color: var(--color-text);
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:hover + .fp-swatch-label {
    outline-color: var(--color-text-secondary);
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:disabled + .fp-swatch-label,
  [data-fp-section="{{ section.id }}"] .fp-variant-input:disabled + .fp-variant-button {
    pointer-events: none;
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:disabled + .fp-swatch-label > span {
    position: relative;
    overflow: hidden;
  }
  [data-fp-section="{{ section.id }}"] .fp-variant-input:disabled + .fp-swatch-label > span::after {
    content: '';
    position: absolute;
    top: 50%;
    left: -10%;
    width: 120%;
    height: 1px;
    background: var(--color-text);
    transform: rotate(-45deg);
  }
  [data-fp-section="{{ section.id }}"] .fp-quantity-input {
    -moz-appearance: textfield;
  }
  [data-fp-section="{{ section.id }}"] .fp-quantity-input::-webkit-outer-spin-button,
  [data-fp-section="{{ section.id }}"] .fp-quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }
  [data-fp-section="{{ section.id }}"] .fp-cta-text-wrapper {
    overflow: hidden;
    display: inline-block;
  }
  [data-fp-section="{{ section.id }}"] .fp-cta-text {
    display: inline-block;
    position: relative;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  [data-fp-section="{{ section.id }}"] .fp-cta-text::after {
    content: attr(data-hover);
    position: absolute;
    left: 0;
    top: 100%;
    white-space: nowrap;
  }
  [data-fp-section="{{ section.id }}"] .fp-cta:hover .fp-cta-text {
    transform: translateY(-100%);
  }
</style>

<section
  class="fp-section overflow-hidden color-{{ section.settings.color_scheme }}"
  data-fp-section="{{ section.id }}"
  data-layout="{{ section.settings.layout }}"
>
  {% if product != blank %}
    <div class="fp-container grid grid-cols-1 lg:grid-cols-2 items-center gap-8 lg:gap-16 {{ container_class }}">
      {%- comment -%} Gallery {%- endcomment -%}
      <div class="relative" data-tween data-tween-type="clip-right">
        <div class="fp-gallery relative overflow-hidden bg-[--color-background-secondary]" data-fp-gallery>
          {% for media in product.media %}
            <div
              class="fp-gallery-image{% if forloop.first %} is-active{% endif %}"
              data-gallery-image="{{ forloop.index0 }}"
              data-media-id="{{ media.id }}"
            >
              {% if media.media_type == 'image' %}
                {{ media | image_url: width: 1200 | image_tag:
                  class: 'w-full h-full object-cover',
                  loading: 'lazy',
                  decoding: 'async',
                  sizes: '(max-width: 1024px) 100vw, 50vw',
                  widths: '600, 800, 1000, 1200',
                  alt: media.alt | default: product.title
                }}
              {% endif %}
            </div>
          {% else %}
            <div class="fp-gallery-image is-active">
              {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
            </div>
          {% endfor %}
        </div>

        {% if product.media.size > 1 and section.settings.show_thumbnails %}
          <div class="flex flex-wrap gap-2 mt-4" data-fp-thumbnails>
            {% for media in product.media %}
              {% if media.media_type == 'image' %}
                <button
                  type="button"
                  class="fp-thumbnail w-[60px] h-[60px] overflow-hidden opacity-50 border-2 border-transparent transition-all duration-300 cursor-pointer hover:opacity-100{% if forloop.first %} is-active{% endif %}"
                  data-thumbnail-index="{{ forloop.index0 }}"
                  data-media-id="{{ media.id }}"
                  aria-label="{{ 'products.product.media.load_image' | t: index: forloop.index }}"
                >
                  {{ media | image_url: width: 120 | image_tag:
                    class: 'w-full h-full object-cover',
                    loading: 'lazy',
                    decoding: 'async',
                    alt: media.alt | default: product.title
                  }}
                </button>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {%- comment -%} Content {%- endcomment -%}
      <div class="max-w-xl lg:mx-auto {{ content_class }}" data-tween-group="fp-content-{{ section.id }}">
        {% if section.settings.show_vendor and product.vendor != blank %}
          <span class="section-label mb-4" data-tween data-tween-type="fade-up">{{ product.vendor }}</span>
        {% endif %}

        <a href="{{ product.url }}" class="block hover:opacity-70 transition-opacity">
          <h2 class="section-title mb-4" data-tween data-tween-type="fade-up">
            {{ product.title }}
          </h2>
        </a>

        {%- comment -%} Price {%- endcomment -%}
        <div class="text-xl md:text-2xl lg:text-[clamp(1.25rem,3vw,1.75rem)] font-light mb-6" data-tween data-tween-type="fade-up" data-fp-price>
          {% if current_variant.compare_at_price > current_variant.price %}
            <span class="line-through opacity-60 mr-2" data-compare-price>
              {{ current_variant.compare_at_price | money }}
            </span>
          {% endif %}
          <span data-price>{{ current_variant.price | money }}</span>
        </div>

        {% if section.settings.show_description and product.description != blank %}
          <div class="section-description mb-8 line-clamp-3" data-tween data-tween-type="fade-up">
            {{ product.description | strip_html | truncate: 200 }}
          </div>
        {% endif %}

        {%- comment -%} Product Form {%- endcomment -%}
        <form
          method="post"
          action="{{ routes.cart_add_url }}"
          data-fp-form
          data-tween
          data-tween-type="fade-up"
        >
          <input type="hidden" name="id" value="{{ current_variant.id }}" data-variant-id>

          {%- comment -%} Variant Pickers {%- endcomment -%}
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              <div class="mb-6">
                <div class="text-sm font-semibold uppercase tracking-[0.15em] text-[--color-text-secondary] mb-3">
                  {{ option.name }}:
                  <span class="font-normal opacity-70" data-selected-option="{{ option.name }}">{{ option.selected_value }}</span>
                </div>

                {%- comment -%} Check if option has native swatches {%- endcomment -%}
                {%- assign swatch_count = option.values | map: 'swatch' | compact | size -%}

                {% if swatch_count > 0 and section.settings.variant_picker_type == 'buttons' %}
                  {%- comment -%} Native Color Swatches {%- endcomment -%}
                  <div class="flex flex-wrap gap-3">
                    {% for value in option.values %}
                      {%- liquid
                        assign option_disabled = false
                        unless value.available
                          assign option_disabled = true
                        endunless

                        assign swatch_value = null
                        if value.swatch.image
                          assign image_url = value.swatch.image | image_url: width: 50
                          assign swatch_value = 'url(' | append: image_url | append: ')'
                        elsif value.swatch.color
                          assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
                        endif
                      -%}

                      <input
                        type="radio"
                        class="fp-variant-input absolute opacity-0 w-0 h-0"
                        id="fp-{{ section.id }}-{{ option.name | handleize }}-{{ forloop.index }}"
                        name="{{ option.name }}"
                        value="{{ value | escape }}"
                        data-option-position="{{ option.position }}"
                        {% if value.selected %}checked{% endif %}
                        {% if option_disabled %}disabled{% endif %}
                      >
                      <label
                        class="fp-swatch-label inline-block cursor-pointer rounded-full transition-all duration-200{% if option_disabled %} opacity-50 cursor-not-allowed{% endif %}"
                        for="fp-{{ section.id }}-{{ option.name | handleize }}-{{ forloop.index }}"
                        title="{{ value }}"
                      >
                        <span
                          class="block w-10 h-10 rounded-full border border-[--color-border] bg-cover bg-center transition-transform duration-200"
                          {% if swatch_value %}style="background: {{ swatch_value }};"{% endif %}
                        ></span>
                      </label>
                    {% endfor %}
                  </div>
                {% elsif section.settings.variant_picker_type == 'buttons' %}
                  {%- comment -%} Button Picker {%- endcomment -%}
                  <div class="flex flex-wrap gap-2">
                    {% for value in option.values %}
                      {%- liquid
                        assign option_disabled = false
                        unless value.available
                          assign option_disabled = true
                        endunless
                      -%}

                      <input
                        type="radio"
                        class="fp-variant-input absolute opacity-0 w-0 h-0"
                        id="fp-{{ section.id }}-{{ option.name | handleize }}-{{ forloop.index }}"
                        name="{{ option.name }}"
                        value="{{ value | escape }}"
                        data-option-position="{{ option.position }}"
                        {% if value.selected %}checked{% endif %}
                        {% if option_disabled %}disabled{% endif %}
                      >
                      <label
                        class="fp-variant-button inline-flex items-center justify-center px-5 py-3 text-sm font-medium uppercase tracking-wider border border-[--color-border] bg-transparent text-[--color-text] cursor-pointer transition-all duration-200 hover:border-[--color-text]{% if option_disabled %} opacity-50 cursor-not-allowed line-through{% endif %}"
                        for="fp-{{ section.id }}-{{ option.name | handleize }}-{{ forloop.index }}"
                      >
                        {{ value }}
                      </label>
                    {% endfor %}
                  </div>
                {% else %}
                  {%- comment -%} Dropdown Picker {%- endcomment -%}
                  <div class="relative">
                    <select
                      class="w-full py-3.5 pr-10 pl-4 text-sm font-medium text-[--color-text] bg-[--color-background] border border-[--color-border] rounded-[--input-radius] appearance-none cursor-pointer transition-colors duration-200 focus:outline-none focus:border-[--color-text]"
                      name="{{ option.name }}"
                      data-option-position="{{ option.position }}"
                    >
                      {% for value in option.values %}
                        <option
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}selected{% endif %}
                        >
                          {{ value }}
                        </option>
                      {% endfor %}
                    </select>
                    <i class="ph ph-caret-down absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-[--color-text-secondary]"></i>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          {% endunless %}

          {%- comment -%} Quantity {%- endcomment -%}
          {% if section.settings.show_quantity %}
            <div class="mb-6">
              <div class="text-sm font-semibold uppercase tracking-[0.15em] text-[--color-text-secondary] mb-3">{{ 'products.product.quantity' | t }}</div>
              <div class="inline-flex items-center border border-[--color-border] rounded-[--input-radius] overflow-hidden">
                <button type="button" class="w-10 h-10 flex items-center justify-center bg-transparent border-none cursor-pointer text-[--color-text] transition-all duration-300 hover:bg-[--color-primary] hover:text-[--color-primary-contrast]" data-quantity-minus aria-label="{{ 'products.product.decrease_quantity' | t }}">
                  <i class="ph ph-minus"></i>
                </button>
                <input
                  type="number"
                  name="quantity"
                  value="1"
                  min="1"
                  class="fp-quantity-input w-12 h-10 text-center text-base font-semibold bg-transparent !border-none text-[--color-text]"
                  data-quantity-input
                  aria-label="{{ 'products.product.quantity' | t }}"
                >
                <button type="button" class="w-10 h-10 flex items-center justify-center bg-transparent border-none cursor-pointer text-[--color-text] transition-all duration-300 hover:bg-[--color-primary] hover:text-[--color-primary-contrast]" data-quantity-plus aria-label="{{ 'products.product.increase_quantity' | t }}">
                  <i class="ph ph-plus"></i>
                </button>
              </div>
            </div>
          {% endif %}

          {%- comment -%} Add to Cart Button {%- endcomment -%}
          <button
            type="submit"
            class="inline-flex items-center justify-center gap-2 w-full py-4 px-8 text-sm font-semibold uppercase tracking-[0.15em] text-[--color-primary-contrast] bg-[--color-primary] border-none cursor-pointer transition-all duration-300 hover:opacity-90 hover:-translate-y-px disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:translate-y-0"
            data-add-to-cart
            {% unless current_variant.available %}disabled{% endunless %}
          >
            <span data-add-to-cart-text>
              {% if current_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </span>
          </button>

          {% if section.settings.show_view_details %}
            <a href="{{ product.url }}" class="fp-cta inline-flex items-center justify-center gap-3 w-full mt-4 text-sm font-semibold uppercase tracking-[0.1em]">
              <span class="fp-cta-text-wrapper overflow-hidden inline-block">
                <span class="fp-cta-text" data-hover="{{ 'products.product.view_full_details' | t }}">{{ 'products.product.view_full_details' | t }}</span>
              </span>
              <i class="ph ph-arrow-right"></i>
            </a>
          {% endif %}
        </form>
      </div>
    </div>

    <script type="application/json" data-fp-variants>
      {{ product.variants | json }}
    </script>

    <script>
      (function() {
        const section = document.querySelector('[data-fp-section="{{ section.id }}"]');
        if (!section) return;

        const form = section.querySelector('[data-fp-form]');
        const variantIdInput = section.querySelector('[data-variant-id]');
        const priceEl = section.querySelector('[data-price]');
        const comparePriceEl = section.querySelector('[data-compare-price]');
        const addToCartBtn = section.querySelector('[data-add-to-cart]');
        const addToCartText = section.querySelector('[data-add-to-cart-text]');
        const galleryImages = section.querySelectorAll('[data-gallery-image]');
        const thumbnails = section.querySelectorAll('[data-thumbnail-index]');
        const quantityInput = section.querySelector('[data-quantity-input]');
        const quantityMinus = section.querySelector('[data-quantity-minus]');
        const quantityPlus = section.querySelector('[data-quantity-plus]');

        let variants = [];
        try {
          const variantsData = section.querySelector('[data-fp-variants]');
          if (variantsData) {
            variants = JSON.parse(variantsData.textContent);
          }
        } catch (e) {
          console.error('Error parsing variants:', e);
        }

        // Format money using shop settings
        const moneyFormat = {{ shop.money_format | json }};
        function formatMoney(cents) {
          const amount = (cents / 100).toFixed(2);
          const amountWithComma = amount.replace('.', ',');
          const amountNoDecimals = Math.round(cents / 100).toString();
          const amountWithThousandsSeparator = amount.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
          const amountWithApostrophe = amount.replace(/\B(?=(\d{3})+(?!\d))/g, "'");

          return moneyFormat
            .replace(/\{\{\s*amount\s*\}\}/g, amount)
            .replace(/\{\{\s*amount_no_decimals\s*\}\}/g, amountNoDecimals)
            .replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, amountWithComma)
            .replace(/\{\{\s*amount_no_decimals_with_comma_separator\s*\}\}/g, amountNoDecimals.replace(/\B(?=(\d{3})+(?!\d))/g, '.'))
            .replace(/\{\{\s*amount_with_apostrophe_separator\s*\}\}/g, amountWithApostrophe);
        }

        // Get selected options
        function getSelectedOptions() {
          const options = {};
          section.querySelectorAll('[data-option-position]').forEach(input => {
            if (input.type === 'radio' && input.checked) {
              options[input.name] = input.value;
            } else if (input.tagName === 'SELECT') {
              options[input.name] = input.value;
            }
          });
          return options;
        }

        // Find matching variant
        function findVariant(options) {
          return variants.find(variant => {
            return Object.keys(options).every((key, index) => {
              return variant[`option${index + 1}`] === options[key];
            });
          });
        }

        // Update gallery to show variant image
        function updateGallery(variant) {
          if (!variant || !variant.featured_media) return;

          const mediaId = variant.featured_media.id;
          const targetImage = section.querySelector(`[data-media-id="${mediaId}"]`);

          if (targetImage) {
            galleryImages.forEach(img => img.classList.remove('is-active'));
            targetImage.classList.add('is-active');

            // Update thumbnails
            const index = targetImage.dataset.galleryImage;
            thumbnails.forEach(thumb => {
              thumb.classList.toggle('is-active', thumb.dataset.thumbnailIndex === index);
            });
          }
        }

        // Update price display
        function updatePrice(variant) {
          if (!variant || !priceEl) return;

          priceEl.textContent = formatMoney(variant.price);

          if (comparePriceEl) {
            if (variant.compare_at_price > variant.price) {
              comparePriceEl.textContent = formatMoney(variant.compare_at_price);
              comparePriceEl.style.display = '';
            } else {
              comparePriceEl.style.display = 'none';
            }
          }
        }

        // Update add to cart button
        function updateAddToCart(variant) {
          if (!addToCartBtn || !addToCartText) return;

          if (variant && variant.available) {
            addToCartBtn.disabled = false;
            addToCartText.textContent = window.cartStrings?.addToCart || '{{ "products.product.add_to_cart" | t }}';
          } else {
            addToCartBtn.disabled = true;
            addToCartText.textContent = window.cartStrings?.soldOut || '{{ "products.product.sold_out" | t }}';
          }
        }

        // Update selected option labels
        function updateOptionLabels(options) {
          Object.keys(options).forEach(name => {
            const label = section.querySelector(`[data-selected-option="${name}"]`);
            if (label) {
              label.textContent = options[name];
            }
          });
        }

        // Handle variant change
        function onVariantChange() {
          const options = getSelectedOptions();
          const variant = findVariant(options);

          if (variant) {
            variantIdInput.value = variant.id;
            updatePrice(variant);
            updateAddToCart(variant);
            updateGallery(variant);
            updateOptionLabels(options);
          } else {
            addToCartBtn.disabled = true;
            addToCartText.textContent = window.cartStrings?.unavailable || '{{ "products.product.unavailable" | t }}';
          }
        }

        // Bind variant picker events
        section.querySelectorAll('[data-option-position]').forEach(input => {
          input.addEventListener('change', onVariantChange);
        });

        // Thumbnail clicks
        thumbnails.forEach(thumb => {
          thumb.addEventListener('click', () => {
            const index = thumb.dataset.thumbnailIndex;
            galleryImages.forEach(img => {
              img.classList.toggle('is-active', img.dataset.galleryImage === index);
            });
            thumbnails.forEach(t => {
              t.classList.toggle('is-active', t.dataset.thumbnailIndex === index);
            });
          });
        });

        // Quantity buttons
        if (quantityMinus && quantityPlus && quantityInput) {
          quantityMinus.addEventListener('click', () => {
            const val = parseInt(quantityInput.value) || 1;
            if (val > 1) quantityInput.value = val - 1;
          });

          quantityPlus.addEventListener('click', () => {
            const val = parseInt(quantityInput.value) || 1;
            quantityInput.value = val + 1;
          });
        }

        // AJAX add to cart
        form.addEventListener('submit', async (e) => {
          e.preventDefault();

          const formData = new FormData(form);

          addToCartBtn.disabled = true;
          addToCartText.textContent = window.cartStrings?.adding || '{{ "cart.adding" | t }}';

          try {
            const response = await fetch('{{ routes.cart_add_url }}.js', {
              method: 'POST',
              body: formData
            });

            if (response.ok) {
              const data = await response.json();

              // Dispatch cart events
              document.dispatchEvent(new CustomEvent('cart:refresh'));
              document.dispatchEvent(new CustomEvent('cart:open'));

              // Success state
              addToCartText.textContent = window.cartStrings?.added || '{{ "cart.added" | t }}';
              setTimeout(() => {
                const options = getSelectedOptions();
                const variant = findVariant(options);
                updateAddToCart(variant);
              }, 2000);
            } else {
              const error = await response.json();
              addToCartText.textContent = error.description || window.cartStrings?.error || '{{ "cart.error" | t }}';
              setTimeout(() => {
                const options = getSelectedOptions();
                const variant = findVariant(options);
                updateAddToCart(variant);
              }, 3000);
            }
          } catch (error) {
            console.error('Add to cart error:', error);
            addToCartText.textContent = window.cartStrings?.error || '{{ "cart.error" | t }}';
            setTimeout(() => {
              const options = getSelectedOptions();
              const variant = findVariant(options);
              updateAddToCart(variant);
            }, 3000);
          }
        });
      })();
    </script>
  {% else %}
    {%- comment -%} Placeholder when no product selected {%- endcomment -%}
    <div class="fp-container grid grid-cols-1 lg:grid-cols-2 items-center gap-8 lg:gap-16 {{ container_class }}">
      <div class="relative" data-tween data-tween-type="clip-right">
        <div class="fp-gallery relative overflow-hidden bg-[--color-background-secondary]">
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
        </div>
      </div>

      <div class="max-w-xl lg:mx-auto {{ content_class }}" data-tween-group="fp-content-{{ section.id }}">
        <span class="section-label mb-4" data-tween data-tween-type="fade-up">{{ 'onboarding.product_vendor' | t }}</span>
        <h2 class="section-title mb-4" data-tween data-tween-type="fade-up">{{ 'onboarding.product_title' | t }}</h2>
        <div class="text-xl md:text-2xl lg:text-[clamp(1.25rem,3vw,1.75rem)] font-light mb-6" data-tween data-tween-type="fade-up">{{ 9999 | money }}</div>
        <div class="section-description mb-8" data-tween data-tween-type="fade-up">{{ 'onboarding.product_description' | t }}</div>
        <button type="button" class="inline-flex items-center justify-center gap-2 w-full py-4 px-8 text-sm font-semibold uppercase tracking-[0.15em] text-[--color-primary-contrast] bg-[--color-primary] border-none cursor-pointer transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed" disabled data-tween data-tween-type="fade-up">
          {{ 'products.product.add_to_cart' | t }}
        </button>
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Featured Product",
  "tag": "section",
  "class": "section-featured-product",
  "settings": [
