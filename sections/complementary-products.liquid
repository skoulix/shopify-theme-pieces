{%- comment -%}
  Complementary Products Section
  Shows products that are frequently bought together (cross-sell)
  Uses Shopify's Product Recommendations API with section rendering
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif

  case section.settings.columns
    when 2
      assign grid_cols = 'sm:grid-cols-2'
    when 3
      assign grid_cols = 'sm:grid-cols-2 lg:grid-cols-3'
    when 4
      assign grid_cols = 'sm:grid-cols-2 lg:grid-cols-4'
  endcase
-%}

<style>
  .complementary-section-{{ section.id }} {
    --section-bg: {{ section.settings.background_color }};
    --section-text: {{ section.settings.text_color }};
    --card-bg: {{ section.settings.card_background_color }};
    --card-text: {{ section.settings.card_text_color }};
    background-color: var(--section-bg);
    color: var(--section-text);
  }
  .complementary-section-{{ section.id }} .skeleton-bg {
    background-color: var(--section-text);
    opacity: 0.1;
  }
  .complementary-section-{{ section.id }} .complementary-card {
    background-color: var(--card-bg);
    color: var(--card-text);
  }
</style>

<section
  class="complementary-section-{{ section.id }} py-[--section-vertical-padding]"
  data-complementary-section
  data-section-id="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-url="{{ routes.product_recommendations_url }}?intent=complementary&limit={{ section.settings.products_to_show }}"
>
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    {% if section.settings.label != blank or section.settings.title != blank or section.settings.description != blank or section.settings.show_add_all %}
      <header class="mb-6 flex flex-col gap-4 {% if section.settings.alignment == 'center' %}items-center text-center{% elsif section.settings.alignment == 'right' %}items-end text-right{% else %}md:flex-row md:justify-between md:items-end{% endif %}" data-intro>
        <div>
          {% if section.settings.label != blank %}
            <p class="label mb-2">{{ section.settings.label }}</p>
          {% endif %}
          {% if section.settings.title != blank %}
            <h2 class="text-2xl md:text-3xl font-bold font-heading tracking-tight leading-tight">
              {{ section.settings.title }}
            </h2>
          {% endif %}
          {% if section.settings.description != blank %}
            <p class="text-sm opacity-70 mt-2 max-w-2xl">{{ section.settings.description }}</p>
          {% endif %}
        </div>

        {% if section.settings.show_add_all %}
          <button
            type="button"
            class="text-hover-reveal inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.1em] opacity-70 hover:opacity-100 transition-opacity duration-300"
            data-add-all-btn
            style="display: none;"
          >
            <span data-add-all-text data-hover="{{ 'products.complementary.add_all' | t }}">{{ 'products.complementary.add_all' | t }}</span>
            <i class="ph ph-plus" aria-hidden="true"></i>
          </button>
        {% endif %}
      </header>
    {% endif %}

    {%- comment -%} Loading State {%- endcomment -%}
    <div class="grid grid-cols-1 {{ grid_cols }} gap-4" data-complementary-loading data-intro>
      {% for i in (1..section.settings.products_to_show) %}
        <div class="complementary-card flex gap-4 p-4 border border-current/10 rounded-lg animate-pulse">
          <div class="shrink-0 w-20 h-20 rounded skeleton-bg"></div>
          <div class="flex-1">
            <div class="h-4 w-3/4 skeleton-bg rounded"></div>
            <div class="h-3 w-1/2 skeleton-bg rounded mt-2"></div>
          </div>
        </div>
      {% endfor %}
    </div>

    {%- comment -%} Products Grid - rendered via JS fetch {%- endcomment -%}
    <div class="grid grid-cols-1 {{ grid_cols }} gap-4 hidden" data-complementary-grid data-intro>
      {% if recommendations.performed and recommendations.products_count > 0 %}
        {% for recommendation in recommendations.products %}
          <div class="complementary-card flex gap-4 p-4 border border-current/10 rounded-lg hover:border-current/30 transition-colors">
            <a href="{{ recommendation.url }}" class="shrink-0 w-20 h-20 rounded overflow-hidden bg-current/5">
              {% if recommendation.featured_image %}
                {{ recommendation.featured_image | image_url: width: 200 | image_tag:
                  loading: 'lazy',
                  alt: recommendation.title,
                  class: 'w-full h-full object-cover'
                }}
              {% endif %}
            </a>
            <div class="flex-1 min-w-0 flex flex-col justify-center">
              <a href="{{ recommendation.url }}" class="text-sm font-semibold no-underline hover:opacity-70 transition-opacity">
                {{ recommendation.title }}
              </a>
              <p class="text-sm opacity-70 mt-1">
                {% if recommendation.compare_at_price > recommendation.price %}
                  <span class="line-through opacity-60 mr-2">{{ recommendation.compare_at_price | money }}</span>
                {% endif %}
                {{ recommendation.price | money }}
              </p>
              {% if recommendation.available %}
                <div class="mt-2">
                  {% if recommendation.variants.size == 1 %}
                    <button
                      type="button"
                      class="btn btn--secondary btn--sm"
                      data-quick-add="{{ recommendation.variants.first.id }}"
                    >
                      <span data-add-text>{{ 'products.product.add_to_cart' | t }}</span>
                      <span data-adding-text class="hidden">{{ 'cart.adding' | t }}</span>
                      <span data-added-text class="hidden">{{ 'cart.added' | t }}</span>
                    </button>
                  {% else %}
                    <a href="{{ recommendation.url }}" class="btn btn--secondary btn--sm">
                      <i class="ph ph-eye"></i>
                      <span>{{ 'products.product.select_options' | t }}</span>
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<script>
(function() {
  const section = document.querySelector('[data-complementary-section][data-section-id="{{ section.id }}"]');
  if (!section) return;

  const productId = section.dataset.productId;
  const baseUrl = section.dataset.url;
  const sectionId = section.dataset.sectionId;

  const grid = section.querySelector('[data-complementary-grid]');
  const loading = section.querySelector('[data-complementary-loading]');
  const addAllBtn = section.querySelector('[data-add-all-btn]');

  const i18n = {
    addAll: {{ 'products.complementary.add_all' | t | json }},
    adding: {{ 'products.complementary.adding' | t | json }},
    added: {{ 'products.complementary.added' | t | json }},
    error: {{ 'products.complementary.error' | t | json }}
  };

  function loadRecommendations() {
    const url = `${baseUrl}&product_id=${productId}&section_id=${sectionId}`;

    fetch(url)
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');
        const newGrid = doc.querySelector('[data-complementary-grid]');

        if (newGrid && newGrid.children.length > 0) {
          grid.innerHTML = newGrid.innerHTML;
          loading.classList.add('hidden');
          grid.classList.remove('hidden');

          // Trigger intro animation
          grid.classList.add('intro-visible');

          // Show "Add all" button if all products have single variant (quick-add available)
          const quickAddBtns = grid.querySelectorAll('[data-quick-add]');
          if (addAllBtn && quickAddBtns.length > 0 && quickAddBtns.length === newGrid.children.length) {
            addAllBtn.style.display = 'inline-flex';
          }
        } else {
          // No recommendations, hide the entire section
          section.style.display = 'none';
        }
      })
      .catch(error => {
        console.error('Error loading complementary products:', error);
        section.style.display = 'none';
      });
  }

  async function addAllToCart() {
    const items = Array.from(grid.querySelectorAll('[data-quick-add]')).map(btn => ({
      id: parseInt(btn.dataset.quickAdd),
      quantity: 1
    }));

    if (items.length === 0) return;

    const textEl = addAllBtn.querySelector('[data-add-all-text]');
    const originalText = textEl?.textContent;
    addAllBtn.disabled = true;
    if (textEl) textEl.textContent = i18n.adding;

    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ items })
      });

      if (!response.ok) throw new Error('Failed to add to cart');

      const cartResponse = await fetch('/cart.js');
      const cart = await cartResponse.json();
      document.querySelectorAll('[data-cart-count]').forEach(el => {
        el.textContent = cart.item_count;
      });

      const cartType = window.themeSettings?.cartType || 'drawer';
      if (cartType === 'drawer') {
        if (window.refreshCartDrawer) await window.refreshCartDrawer();
        document.dispatchEvent(new CustomEvent('cart:open'));
      }

      if (textEl) textEl.textContent = i18n.added;
      setTimeout(() => {
        if (textEl) textEl.textContent = originalText;
        addAllBtn.disabled = false;
      }, 2000);
    } catch (error) {
      console.error('Add all to cart error:', error);
      if (textEl) textEl.textContent = i18n.error;
      setTimeout(() => {
        if (textEl) textEl.textContent = originalText;
        addAllBtn.disabled = false;
      }, 2000);
    }
  }

  // Setup "Add all" button
  if (addAllBtn) {
    addAllBtn.addEventListener('click', addAllToCart);
  }

  // Initialize with Intersection Observer for lazy loading
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        // Trigger intro animations for header and loading state
        section.querySelectorAll('[data-intro]').forEach(el => {
          el.classList.add('intro-visible');
        });
        loadRecommendations();
        observer.unobserve(section);
      }
    });
  }, { rootMargin: '400px' });

  observer.observe(section);
})();
</script>

{% schema %}
{
  "name": "Complementary Products",
  "tag": "section",
  "class": "complementary-products-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Shows products frequently bought together. To set up complementary products, use the Search & Discovery app."
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "header",
      "content": "Label"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Pairs well with"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Text alignment",
      "default": "left"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "Columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_add_all",
      "label": "Show 'Add all to cart' button",
      "default": true,
      "info": "Only shown when all products have a single variant"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card background color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "card_text_color",
      "label": "Card text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Complementary Products",
      "category": "Products"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
