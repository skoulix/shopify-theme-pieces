{%- comment -%}
  Complementary Products Section
  Shows products that are frequently bought together (cross-sell)
  Uses Shopify's complementary product recommendations
  Required for Shopify Theme Store submission
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .complementary-products-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: var(--section-vertical-padding) 0;
  }

  .complementary-products-{{ section.id }} .complementary-products__title {
    font-size: calc(clamp(1.5rem, 3vw, 2rem) * var(--heading-font-scale, 1));
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .complementary-products-{{ section.id }} .complementary-products__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .complementary-products-{{ section.id }} .complementary-products__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .complementary-products-{{ section.id }} .complementary-products__grid {
      grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    }
  }

  .complementary-products-{{ section.id }} .complementary-product {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid {{ section.settings.text_color }}15;
    border-radius: var(--card-radius);
    transition: border-color 0.3s ease;
  }

  .complementary-products-{{ section.id }} .complementary-product:hover {
    border-color: {{ section.settings.text_color }}30;
  }

  .complementary-products-{{ section.id }} .complementary-product__image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    border-radius: calc(var(--card-radius) * 0.5);
    overflow: hidden;
    background: {{ section.settings.text_color }}05;
  }

  .complementary-products-{{ section.id }} .complementary-product__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .complementary-products-{{ section.id }} .complementary-product__info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .complementary-products-{{ section.id }} .complementary-product__title {
    font-size: 0.875rem;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .complementary-products-{{ section.id }} .complementary-product__price {
    font-size: 0.875rem;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin-top: 0.25rem;
  }

  .complementary-products-{{ section.id }} .complementary-product__add {
    margin-top: 0.5rem;
  }

  .complementary-products-{{ section.id }} .complementary-product__add-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: transparent;
    border: 1px solid {{ section.settings.text_color }}30;
    border-radius: var(--button-radius);
    color: {{ section.settings.text_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .complementary-products-{{ section.id }} .complementary-product__add-btn:hover {
    background: {{ section.settings.text_color }};
    color: {{ section.settings.background_color }};
  }

  .complementary-products-{{ section.id }} .complementary-products__loading {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 1rem;
  }

  .complementary-products-{{ section.id }} .complementary-products__skeleton {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid {{ section.settings.text_color }}10;
    border-radius: var(--card-radius);
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  .complementary-products-{{ section.id }} .skeleton-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    background: {{ section.settings.text_color }}10;
    border-radius: calc(var(--card-radius) * 0.5);
  }

  .complementary-products-{{ section.id }} .skeleton-content {
    flex: 1;
  }

  .complementary-products-{{ section.id }} .skeleton-title {
    height: 1rem;
    width: 80%;
    background: {{ section.settings.text_color }}10;
    border-radius: 0.25rem;
  }

  .complementary-products-{{ section.id }} .skeleton-price {
    height: 0.875rem;
    width: 40%;
    margin-top: 0.5rem;
    background: {{ section.settings.text_color }}10;
    border-radius: 0.25rem;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
</style>

<section
  class="complementary-products-{{ section.id }}"
  data-complementary-products
  data-section-id="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&intent=complementary&limit={{ section.settings.products_to_show }}"
>
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    {% if section.settings.title != blank %}
      <div class="mb-6">
        <h2 class="complementary-products__title font-bold font-heading">
          {{ section.settings.title }}
        </h2>
        {% if section.settings.description != blank %}
          <p class="text-sm opacity-70 mt-2">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} Loading State {%- endcomment -%}
    <div class="complementary-products__loading" data-complementary-loading>
      {% for i in (1..section.settings.products_to_show) %}
        <div class="complementary-products__skeleton">
          <div class="skeleton-image"></div>
          <div class="skeleton-content">
            <div class="skeleton-title"></div>
            <div class="skeleton-price"></div>
          </div>
        </div>
      {% endfor %}
    </div>

    {%- comment -%} Products Grid {%- endcomment -%}
    <div class="complementary-products__grid" data-complementary-grid style="display: none;">
      {% if recommendations.performed and recommendations.products_count > 0 %}
        {% for recommendation in recommendations.products %}
          <div class="complementary-product">
            <a href="{{ recommendation.url }}" class="complementary-product__image">
              {% if recommendation.featured_image %}
                {{ recommendation.featured_image | image_url: width: 200 | image_tag:
                  loading: 'lazy',
                  alt: recommendation.title
                }}
              {% endif %}
            </a>
            <div class="complementary-product__info">
              <a href="{{ recommendation.url }}" class="complementary-product__title hover:opacity-70 transition-opacity">
                {{ recommendation.title }}
              </a>
              <p class="complementary-product__price">
                {% if recommendation.compare_at_price > recommendation.price %}
                  <span class="line-through opacity-60 mr-2">{{ recommendation.compare_at_price | money }}</span>
                {% endif %}
                {{ recommendation.price | money }}
              </p>
              {% if recommendation.available %}
                <div class="complementary-product__add">
                  {% if recommendation.variants.size == 1 %}
                    <button
                      type="button"
                      class="complementary-product__add-btn"
                      data-quick-add="{{ recommendation.variants.first.id }}"
                    >
                      <i class="ph ph-plus"></i>
                      {{ 'products.product.add_to_cart' | t }}
                    </button>
                  {% else %}
                    <a href="{{ recommendation.url }}" class="complementary-product__add-btn">
                      <i class="ph ph-eye"></i>
                      {{ 'products.product.select_options' | t }}
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<script>
(function() {
  const section = document.querySelector('[data-complementary-products][data-section-id="{{ section.id }}"]');
  if (!section) return;

  const productId = section.dataset.productId;
  const baseUrl = section.dataset.url;

  const grid = section.querySelector('[data-complementary-grid]');
  const loading = section.querySelector('[data-complementary-loading]');

  function loadComplementary() {
    // Fetch the section itself with recommendations populated
    const url = `${baseUrl}&product_id=${productId}`;

    fetch(url)
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');

        // Find the grid in the fetched section (which now has recommendations populated)
        const newGrid = doc.querySelector('[data-complementary-grid]');

        if (newGrid && newGrid.children.length > 0) {
          grid.innerHTML = newGrid.innerHTML;
          loading.style.display = 'none';
          grid.style.display = '';

          // Fix: Make dynamically loaded [data-intro] elements visible immediately
          grid.querySelectorAll('[data-intro]').forEach(el => {
            el.classList.add('intro-visible');
          });
        } else {
          // No complementary products, hide the entire section
          section.style.display = 'none';
        }
      })
      .catch(error => {
        console.error('[Complementary] Error:', error);
        section.style.display = 'none';
      });
  }

  // Lazy load with Intersection Observer
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        loadComplementary();
        observer.unobserve(section);
      }
    });
  }, { rootMargin: '200px' });

  observer.observe(section);
})();
</script>

{% schema %}
{
  "name": "Complementary Products",
  "tag": "section",
  "class": "complementary-products-section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Shows products frequently bought together. To set up complementary products, use the Search & Discovery app."
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Pairs well with"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "Columns on desktop"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Complementary Products",
      "category": "Products"
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
{% endschema %}
