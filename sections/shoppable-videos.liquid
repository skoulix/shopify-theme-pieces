{%- comment -%}
  Shoppable Videos - Video carousel with product integration
  Features: Keen Slider carousel, video lightbox, product overlays, add-to-cart
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'w-full'
  else
    assign container_class = 'page-container'
  endif

  assign videos_mobile = section.settings.videos_mobile | default: '1'
  assign videos_tablet = section.settings.videos_tablet | default: '3'
  assign videos_desktop = section.settings.videos_desktop | default: '4'
  assign video_spacing = section.settings.video_spacing | default: 'medium'
  assign video_aspect_ratio = section.settings.video_aspect_ratio | default: '9/16'

  case videos_mobile
    when '2'
      assign video_width_mobile = '48%'
    else
      assign video_width_mobile = '70%'
  endcase

  case videos_tablet
    when '2'
      assign video_width_tablet = '48%'
    when '4'
      assign video_width_tablet = '23.5%'
    else
      assign video_width_tablet = '31%'
  endcase

  case videos_desktop
    when '2'
      assign video_width_desktop = '48%'
    when '3'
      assign video_width_desktop = '31%'
    when '5'
      assign video_width_desktop = '19%'
    when '6'
      assign video_width_desktop = '15.5%'
    else
      assign video_width_desktop = '23.5%'
  endcase
-%}

<!-- Keen Slider CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/keen-slider@6.8.6/keen-slider.min.css">

<style>
  #shoppable-videos-{{ section.id }} {
    padding-top: {{ padding_top_mobile }}px;
    padding-bottom: {{ padding_bottom_mobile }}px;
  }
  @media (min-width: 768px) {
    #shoppable-videos-{{ section.id }} {
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
    }
  }

  /* Video thumbnail styles with CSS variable aspect ratio */
  #shoppable-videos-{{ section.id }} .video-thumbnail {
    position: relative;
    overflow: hidden;
    display: block;
    aspect-ratio: var(--video-aspect-ratio);
    width: 100%;
    height: auto;
  }

  /* Override any conflicting styles */
  #shoppable-videos-{{ section.id }} .keen-slider__slide {
    height: auto !important;
    min-height: 0 !important;
  }

  #shoppable-videos-{{ section.id }} .video-slide {
    width: 100%;
    height: auto !important;
  }

  /* Inner wrapper for spacing */
  .shoppable-video-slide-inner {
    width: 100%;
    height: 100%;
  }

  .shoppable-video-play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 64px;
    height: 64px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 10;
    pointer-events: none;
  }

  .video-thumbnail:hover .shoppable-video-play-button {
    background: rgba(0, 0, 0, 0.9);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .shoppable-video-play-icon {
    width: 0;
    height: 0;
    border-left: 20px solid white;
    border-top: 12px solid transparent;
    border-bottom: 12px solid transparent;
    margin-left: 4px;
  }

  /* Hide scrollbar but keep functionality */
  .shoppable-videos-container {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .shoppable-videos-container::-webkit-scrollbar {
    display: none;
  }

  /* Snap scrolling */
  .shoppable-videos-container {
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
  }

  .video-slide {
    scroll-snap-align: start;
  }

  /* Play button overlay - only for thumbnails with videos */
  .video-thumbnail.cursor-pointer .play-overlay {
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .video-thumbnail.cursor-pointer:hover .play-overlay {
    opacity: 1;
  }

  /* No hover effect for placeholders */
  .video-thumbnail.cursor-default {
    cursor: default !important;
  }

  /* Lightbox styles */
  .shoppable-video-lightbox {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .shoppable-video-lightbox.active {
    display: flex;
  }

  .shoppable-lightbox-content {
    display: flex;
    gap: 2rem;
    max-width: 1400px;
    width: 90%;
    max-height: 85vh;
  }

  .shoppable-lightbox-video {
    flex: 1;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shoppable-lightbox-video video {
    width: 100%;
    height: auto;
    max-height: 75vh;
    max-width: 100%;
    object-fit: contain;
    transition: opacity 0.3s ease;
    opacity: 1;
  }

  .shoppable-lightbox-product {
    width: 320px;
    background: white;
    padding: 1.5rem;
    border-radius: var(--card-radius, 8px);
    overflow-y: auto;
    max-height: 75vh;
    flex-shrink: 0;
  }

  #shoppable-product-info-{{ section.id }} {
    transition: opacity 0.3s ease;
    opacity: 1;
  }

  .shoppable-lightbox-close {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s ease;
    z-index: 10000;
  }

  .shoppable-lightbox-close:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .shoppable-lightbox-close svg {
    width: 24px;
    height: 24px;
    color: white;
  }

  /* Navigation buttons */
  .shoppable-lightbox-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10000;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: white;
    overflow: hidden;
  }

  .shoppable-lightbox-nav:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-50%) scale(1.05);
  }

  .shoppable-lightbox-nav.lightbox-prev {
    left: 2rem;
  }

  .shoppable-lightbox-nav.lightbox-next {
    right: 2rem;
  }

  .shoppable-lightbox-nav svg {
    width: 24px;
    height: 24px;
  }

  .shoppable-lightbox-nav:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .shoppable-lightbox-nav:disabled:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-50%);
  }

  /* Mobile responsive lightbox */
  @media (max-width: 768px) {
    .shoppable-lightbox-close {
      right: 20px;
      top: 20px;
    }

    .shoppable-lightbox-nav {
      width: 40px;
      height: 40px;
      top: auto;
      bottom: auto;
      transform: none;
    }

    .shoppable-lightbox-nav.lightbox-prev {
      top: 20px;
      left: 20px;
    }

    .shoppable-lightbox-nav.lightbox-next {
      top: 20px;
      left: 65px;
    }

    .shoppable-lightbox-nav:hover {
      transform: scale(1.05);
    }

    .shoppable-lightbox-nav:disabled:hover {
      transform: none;
    }

    .shoppable-lightbox-content {
      flex-direction: column;
      width: calc(100% - 1rem);
      max-width: calc(100% - 1rem);
      max-height: calc(100vh - 1rem);
      gap: 0;
      margin: 0.5rem;
      padding: 0;
    }

    .shoppable-lightbox-video {
      width: 100%;
      flex: 1;
      min-height: 0;
    }

    .shoppable-lightbox-video video {
      border-radius: var(--card-radius, 8px) var(--card-radius, 8px) 0 0 !important;
      max-height: 60vh;
      width: 100%;
    }

    .shoppable-lightbox-product {
      width: 100%;
      max-height: 35vh;
      border-radius: 0 0 var(--card-radius, 8px) var(--card-radius, 8px);
      padding: 1rem;
      background: white;
      box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1);
    }
  }

  /* Keen Slider customization */
  #shoppable-videos-{{ section.id }} .keen-slider {
    display: flex;
    overflow: hidden;
    position: relative;
    user-select: none;
    -webkit-touch-callout: none;
    touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;
  }

  #shoppable-videos-{{ section.id }} .keen-slider__slide {
    position: relative;
    overflow: visible;
    width: 100%;
    height: max-content !important;
    min-height: unset !important;
    flex-shrink: 0;
  }

  /* Force aspect ratio on video slides */
  #shoppable-videos-{{ section.id }} .video-slide {
    height: auto !important;
    min-height: 0 !important;
  }

  /* Remove padding when centered mode is active */
  @media (max-width: 767px) {
    #shoppable-videos-{{ section.id }} .keen-slider-wrapper {
      padding-left: 0;
      padding-right: 0;
    }
  }
</style>

<div class="shoppable-videos-section w-full" id="shoppable-videos-{{ section.id }}"
     style="--card-border-radius: {{ settings.card_corner_radius | default: 8 }}px;
            background-color: {{ section.settings.background_color | default: '#ffffff' }};
            --video-aspect-ratio: {{ video_aspect_ratio }};
            --video-width-mobile: {{ video_width_mobile }};
            --video-width-tablet: {{ video_width_tablet }};
            --video-width-desktop: {{ video_width_desktop }};">
  <div class="{{ container_class }}">
    {% if section.settings.heading != blank %}
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-6 font-heading" style="color: {{ section.settings.heading_color | default: '#000000' }};">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="text-lg text-center mb-8" style="color: {{ section.settings.subheading_color | default: '#666666' }};">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    <!-- Videos Carousel -->
    <div class="relative w-full keen-slider-wrapper">
      <div id="shoppable-videos-slider-{{ section.id }}" class="keen-slider">
        {% for block in section.blocks %}
          {% if block.type == 'video' %}
            {%- liquid
              assign video_url = block.settings.video_url
              assign product = block.settings.product

              case video_spacing
                when 'none'
                  assign spacing_px = 0
                when 'small'
                  assign spacing_px = 8
                when 'large'
                  assign spacing_px = 24
                else
                  assign spacing_px = 16
              endcase
            -%}
            <div class="keen-slider__slide video-slide" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              <div class="shoppable-video-slide-inner" {% unless video_spacing == 'none' %}style="padding-right: {{ spacing_px }}px;"{% endunless %}>
                <div class="video-thumbnail bg-gray-100 relative w-full overflow-hidden {% if video_url != blank %}cursor-pointer{% else %}cursor-default{% endif %}"
                     style="border-radius: var(--card-radius, 8px);"
                     data-video-url="{{ video_url }}"
                     {% if product != blank %}
                       data-product-id="{{ product.id }}"
                       data-product-title="{{ product.title | escape }}"
                       data-product-price="{{ product.price }}"
                       data-product-handle="{{ product.handle }}"
                       data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                       {% if product.compare_at_price > product.price %}
                         data-product-compare-price="{{ product.compare_at_price }}"
                       {% endif %}
                       data-product-image="{{ product.featured_image | image_url: width: 400 }}"
                     {% endif %}
                     data-video-index="{{ forloop.index0 }}">

                  <!-- Video or placeholder -->
                  {% if video_url != blank %}
                    <video
                      class="carousel-video absolute inset-0 w-full h-full object-cover block pointer-events-none"
                      style="border-radius: var(--card-radius, 8px);"
                      autoplay
                      muted
                      loop
                      playsinline
                      preload="metadata"
                      src="{{ video_url }}"
                      data-src="{{ video_url }}">
                    </video>
                  {% else %}
                    <!-- Default placeholder when no video -->
                    <div class="absolute inset-0 w-full h-full bg-gradient-to-b from-gray-200 to-gray-300 flex items-center justify-center z-0"
                         style="border-radius: var(--card-radius, 8px);">
                      <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  {% endif %}

                  <!-- Expand/View overlay - only show if video URL exists -->
                  {% if video_url != blank %}
                    <div class="play-overlay absolute inset-0 flex items-center justify-center pointer-events-none">
                      <div class="bg-black/50 rounded-full p-4">
                        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M3.5 8.5v-5h5M20.5 8.5v-5h-5M3.5 15.5v5h5M20.5 15.5v5h-5"/>
                        </svg>
                      </div>
                    </div>
                  {% endif %}

                  <!-- Gradient overlay and product info -->
                  {% if section.settings.show_product_info and product != blank %}
                    <div class="absolute inset-x-0 bottom-0 z-10 bg-gradient-to-t from-black/80 via-black/40 to-transparent p-3 pt-12 pointer-events-none rounded-b-lg">
                      <h3 class="text-white text-sm font-semibold mb-1 line-clamp-2">{{ product.title }}</h3>
                      <div class="text-sm text-white/90 mb-2">
                        {% if product.compare_at_price > product.price %}
                          <span class="text-white/60 line-through mr-1">{{ product.compare_at_price | money }}</span>
                        {% endif %}
                        <span class="font-bold">{{ product.price | money }}</span>
                      </div>
                      <div class="text-xs text-white/90 font-medium uppercase tracking-wider">{{ 'products.product.shop_now' | t | default: 'Shop Now' }} â†’</div>
                    </div>
                  {% endif %}

                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Navigation Buttons -->
      <div class="flex items-center justify-center gap-2 mt-6">
        <button class="shoppable-videos-prev group p-3 rounded-full transition-all overflow-hidden" style="background-color: {{ section.settings.arrow_bg_color | default: '#000000' }};" aria-label="{{ 'accessibility.previous' | t }}">
          <div class="relative w-6 h-6">
            <svg class="absolute inset-0 w-6 h-6 transition-all duration-300 group-hover:opacity-0 group-hover:-translate-x-2" fill="none" stroke="{{ section.settings.arrow_color | default: '#ffffff' }}" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <svg class="absolute inset-0 w-6 h-6 transition-all duration-300 opacity-0 translate-x-2 group-hover:opacity-100 group-hover:translate-x-0" fill="none" stroke="{{ section.settings.arrow_color | default: '#ffffff' }}" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
          </div>
        </button>

        <button class="shoppable-videos-next group p-3 rounded-full transition-all overflow-hidden" style="background-color: {{ section.settings.arrow_bg_color | default: '#000000' }};" aria-label="{{ 'accessibility.next' | t }}">
          <div class="relative w-6 h-6">
            <svg class="absolute inset-0 w-6 h-6 transition-all duration-300 group-hover:opacity-0 group-hover:translate-x-2" fill="none" stroke="{{ section.settings.arrow_color | default: '#ffffff' }}" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <svg class="absolute inset-0 w-6 h-6 transition-all duration-300 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0" fill="none" stroke="{{ section.settings.arrow_color | default: '#ffffff' }}" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </div>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Keen Slider JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/keen-slider@6.8.6/keen-slider.min.js"></script>

