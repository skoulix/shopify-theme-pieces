{%- comment -%}
  Reset Password Page - Tailwind Version
  Modern, minimal design with clean form styling
{%- endcomment -%}

<div class="min-h-[60vh] flex items-center justify-center py-12 lg:py-16 px-4">
  <div class="w-full max-w-md">
    <h1 class="text-2xl lg:text-3xl font-semibold text-neutral-900 text-center mb-2">
      {{ 'customer.reset_password.title' | t }}
    </h1>
    <p class="text-neutral-600 text-center mb-8">
      {{ 'customer.reset_password.subtext' | t }}
    </p>

    {%- form 'reset_customer_password' -%}
      {%- if form.errors -%}
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg" tabindex="-1" autofocus>
          <div class="flex items-center gap-2 text-red-700 mb-2">
            {%- render 'icon', name: 'warning', size: '20' -%}
            <span class="sr-only">{{ 'accessibility.error' | t }}</span>
            <span class="font-medium">{{ 'templates.contact.form.error_heading' | t }}</span>
          </div>
          <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
            {%- for field in form.errors -%}
              <li>
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- else -%}
                  <a href="#{{ field }}" class="underline hover:no-underline">
                    {{ form.errors.translated_fields[field] | capitalize }}
                    {{ form.errors.messages[field] }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      <div class="space-y-4">
        {%- comment -%} New Password {%- endcomment -%}
        <div>
          <label for="password" class="block text-sm font-medium text-neutral-700 mb-1">
            {{ 'customer.reset_password.password' | t }}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors contains 'password' %} border-red-500{% endif %}"
            placeholder="{{ 'customer.reset_password.password' | t }}"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="password-error"
            {% endif %}
          >
          {%- if form.errors contains 'password' -%}
            <p id="password-error" class="mt-2 flex items-center gap-1.5 text-sm text-red-600">
              {%- render 'icon', name: 'warning', size: '16' -%}
              {{ form.errors.translated_fields.password | capitalize }}
              {{ form.errors.messages.password }}
            </p>
          {%- endif -%}
        </div>

        {%- comment -%} Confirm Password {%- endcomment -%}
        <div>
          <label for="password_confirmation" class="block text-sm font-medium text-neutral-700 mb-1">
            {{ 'customer.reset_password.password_confirm' | t }}
          </label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            autocomplete="new-password"
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors contains 'password_confirmation' %} border-red-500{% endif %}"
            placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
            {% if form.errors contains 'password_confirmation' %}
              aria-invalid="true"
              aria-describedby="password_confirmation-error"
            {% endif %}
          >
          {%- if form.errors contains 'password_confirmation' -%}
            <p id="password_confirmation-error" class="mt-2 flex items-center gap-1.5 text-sm text-red-600">
              {%- render 'icon', name: 'warning', size: '16' -%}
              {{ form.errors.translated_fields.password_confirmation | capitalize }}
              {{ form.errors.messages.password_confirmation }}
            </p>
          {%- endif -%}
        </div>

        <button
          type="submit"
          class="w-full py-3 px-6 bg-neutral-900 text-white text-base font-medium rounded-lg hover:bg-neutral-800 transition-colors"
        >
          {{ 'customer.reset_password.submit' | t }}
        </button>
      </div>
    {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-reset-password.name",
  "settings": []
}
{% endschema %}
