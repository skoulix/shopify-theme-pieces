{%- comment -%}
  Password Footer Section - Tailwind version
  Minimal, centered design with social links
{%- endcomment -%}

{% assign scheme1 = settings.color_schemes | first %}
{%- if section.settings.color_scheme == scheme1 -%}
  <hr class="border-neutral-200 m-0">
{%- endif -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <footer class="flex flex-col items-center py-8 px-4">
    {%- comment -%} Social Links {%- endcomment -%}
    {%- liquid
      assign has_social = false
      if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank
        assign has_social = true
      endif
    -%}

    {%- if has_social -%}
      <ul class="flex items-center gap-4 mb-6" role="list">
        {%- if settings.social_twitter_link != blank -%}
          <li>
            <a href="{{ settings.social_twitter_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'twitter', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.twitter' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_facebook_link != blank -%}
          <li>
            <a href="{{ settings.social_facebook_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'facebook', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.facebook' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_pinterest_link != blank -%}
          <li>
            <a href="{{ settings.social_pinterest_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'pinterest', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.pinterest' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <li>
            <a href="{{ settings.social_instagram_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'instagram', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.instagram' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <li>
            <a href="{{ settings.social_tiktok_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'tiktok', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.tiktok' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_tumblr_link != blank -%}
          <li>
            <a href="{{ settings.social_tumblr_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'tumblr', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.tumblr' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_snapchat_link != blank -%}
          <li>
            <a href="{{ settings.social_snapchat_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'snapchat', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.snapchat' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_youtube_link != blank -%}
          <li>
            <a href="{{ settings.social_youtube_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'youtube', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.youtube' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_vimeo_link != blank -%}
          <li>
            <a href="{{ settings.social_vimeo_link }}" class="text-neutral-400 hover:text-neutral-900 transition-colors">
              {%- render 'icon', name: 'vimeo', size: '20' -%}
              <span class="sr-only">{{ 'general.social.links.vimeo' | t }}</span>
            </a>
          </li>
        {%- endif -%}
      </ul>
    {%- endif -%}

    {%- comment -%} Powered by Shopify {%- endcomment -%}
    {% capture shopify %}
      <a
        class="text-neutral-500 hover:text-neutral-900 transition-colors"
        href="//www.shopify.com"
        rel="nofollow"
        target="_blank"
        aria-describedby="a11y-new-window-message"
        aria-label="Shopify"
      >
        {%- render 'icon', name: 'storefront', size: '18' -%}
      </a>
    {% endcapture %}
    <p class="text-xs text-neutral-500 [&_a]:text-neutral-600 [&_a]:hover:text-neutral-900 [&_a]:transition-colors">
      {{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify }}
    </p>

    {%- comment -%} Admin Link {%- endcomment -%}
    <p class="mt-3 pb-8 text-xs text-neutral-500 [&_a]:text-neutral-600 [&_a]:hover:text-neutral-900 [&_a]:transition-colors">
      {{ 'general.password_page.admin_link_html' | t }}
    </p>
  </footer>
</div>

{% schema %}
{
  "name": "t:sections.main-password-footer.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}
