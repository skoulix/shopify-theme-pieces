{%- comment -%}
  Hero Section - Modern Awwwards-style full-screen hero
  Features: Full-screen video/image, large typography, GSAP animations
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  /* Hero Section - requires 100svh with fallback */
  .hero-section {
    min-height: 100svh;
  }

  @supports not (min-height: 100svh) {
    .hero-section {
      min-height: 100vh;
    }
  }

  .hero-section.is-loading .hero-content {
    opacity: 0;
  }

  /* Overlay gradient - requires Liquid dynamic values */
  .hero-media::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%,
      rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 200.0 }}) 50%,
      transparent 100%
    );
    z-index: 1;
  }

  /* Hero Content - requires clamp() for padding */
  .hero-content {
    padding-bottom: clamp(3rem, 10vh, 8rem);
  }

  /* Title - requires clamp() for fluid typography and Liquid color */
  .hero-title {
    font-size: clamp(2.5rem, 12vw, 5rem);
    letter-spacing: -0.04em;
    line-height: 0.85;
    color: {{ section.settings.text_color }};
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: clamp(4rem, 8vw, 7rem);
    }
  }

  @media (min-width: 1536px) {
    .hero-title {
      font-size: clamp(5rem, 8vw, 9rem);
    }
  }

  /* Title line indentation - requires clamp() */
  .hero-title-line:nth-child(2) {
    margin-left: clamp(1rem, 8vw, 5rem);
  }

  .hero-title-line:nth-child(3) {
    margin-left: clamp(2rem, 12vw, 8rem);
  }

  /* Subtitle - requires clamp() and Liquid color */
  .hero-subtitle {
    font-size: clamp(0.75rem, 1.5vw, 1rem);
    color: {{ section.settings.text_color }};
  }

  /* CTA Button - requires Liquid colors */
  .hero-cta {
    color: {{ section.settings.button_text_color }};
    background-color: {{ section.settings.button_background }};
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .hero-cta:hover i {
    transform: translateX(4px);
  }

  /* Scroll Indicator - requires Liquid color */
  .hero-scroll-indicator {
    color: {{ section.settings.text_color }};
  }
</style>

<section
  class="hero-section is-loading relative flex items-end overflow-hidden bg-[--color-background]"
  data-hero-section="{{ section.id }}"
>
  {%- comment -%} Background Media {%- endcomment -%}
  <div class="hero-media absolute inset-0 z-0" data-hero-media>
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        poster: section.settings.image,
        class: 'w-full h-full object-cover absolute inset-0'
      }}
    {% elsif section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2400 | image_tag:
        class: 'w-full h-full object-cover',
        loading: 'eager',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '800, 1200, 1600, 2000, 2400'
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
    {% endif %}
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero-content relative z-10 w-full pt-32 {{ container_class }}">
    {%- comment -%} Title {%- endcomment -%}
    {% if section.settings.title != blank %}
      <h1 class="hero-title font-bold uppercase" data-hero-title>
        {%- assign title_words = section.settings.title | split: ' ' -%}
        {%- assign words_per_line = section.settings.words_per_line | default: 2 -%}
        {%- for word in title_words -%}
          {%- assign word_index = forloop.index0 | modulo: words_per_line -%}
          {%- if word_index == 0 -%}
            <span class="hero-title-line block overflow-hidden">
          {%- endif -%}
          <span class="inline-block">{{ word }}</span>{% unless forloop.last %} {% endunless %}
          {%- assign next_index = forloop.index | modulo: words_per_line -%}
          {%- if next_index == 0 or forloop.last -%}
            </span>
          {%- endif -%}
        {%- endfor -%}
      </h1>
    {% endif %}

    {%- comment -%} Subtitle {%- endcomment -%}
    {% if section.settings.subtitle != blank %}
      <p class="hero-subtitle mt-8 max-w-[480px] uppercase tracking-widest leading-relaxed opacity-80" data-hero-subtitle>
        {{ section.settings.subtitle }}
      </p>
    {% endif %}

    {%- comment -%} CTA Button {%- endcomment -%}
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-cta mt-12 inline-flex items-center gap-4 py-4 px-8 text-xs font-semibold uppercase tracking-[0.15em] border-none cursor-pointer transition-all duration-300" data-hero-cta>
        <span>{{ section.settings.button_text }}</span>
        <i class="ph ph-arrow-right text-[1.25em] transition-transform duration-300"></i>
      </a>
    {% endif %}
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {% if section.settings.show_scroll_indicator %}
    <div class="hero-scroll-indicator absolute bottom-8 right-8 flex flex-col items-center gap-2 opacity-60 z-10" data-hero-scroll>
      <span class="text-[0.65rem] uppercase tracking-[0.2em] [writing-mode:vertical-rl]">Scroll</span>
      <div class="hero-scroll-line w-px h-[60px] bg-current origin-top"></div>
    </div>
  {% endif %}
</section>

<script>
  (function() {
    const section = document.querySelector('[data-hero-section="{{ section.id }}"]');
    if (!section || section.dataset.heroAnimInitialized) return;
    section.dataset.heroAnimInitialized = 'true';

    // Wait for GSAP
    function initAnimation() {
      if (typeof gsap === 'undefined') {
        requestAnimationFrame(initAnimation);
        return;
      }

      // Mark section as ready for animations
      section.dataset.heroAnimReady = 'true';

      const media = section.querySelector('[data-hero-media]');
      const title = section.querySelector('[data-hero-title]');
      const titleSpans = title ? title.querySelectorAll('.hero-title-line .inline-block') : [];
      const subtitle = section.querySelector('[data-hero-subtitle]');
      const cta = section.querySelector('[data-hero-cta]');
      const scroll = section.querySelector('[data-hero-scroll]');

      // Set initial states
      if (media) gsap.set(media, { clipPath: 'inset(0 0 100% 0)' });
      if (titleSpans.length) gsap.set(titleSpans, { yPercent: 100 });
      if (subtitle) gsap.set(subtitle, { opacity: 0, y: 30 });
      if (cta) gsap.set(cta, { opacity: 0, y: 20 });
      if (scroll) gsap.set(scroll, { opacity: 0 });

      // Create timeline
      const tl = gsap.timeline({
        onComplete: () => section.classList.add('is-ready')
      });

      // Media reveal - dramatic vertical clip
      if (media) {
        tl.to(media, {
          clipPath: 'inset(0 0 0% 0)',
          duration: 1.6,
          ease: 'expo.inOut'
        }, 0);
      }

      // Title reveal
      if (titleSpans.length) {
        tl.to(titleSpans, {
          yPercent: 0,
          duration: 1.2,
          ease: 'power4.out',
          stagger: 0.05
        }, 0.6);
      }

      // Subtitle
      if (subtitle) {
        tl.to(subtitle, {
          opacity: 0.8,
          y: 0,
          duration: 0.8,
          ease: 'power3.out'
        }, 1);
      }

      // CTA
      if (cta) {
        tl.to(cta, {
          opacity: 1,
          y: 0,
          duration: 0.6,
          ease: 'power3.out'
        }, 1.1);
      }

      // Scroll indicator
      if (scroll) {
        tl.to(scroll, {
          opacity: 0.6,
          duration: 0.8,
          ease: 'power2.out'
        }, 1.3);

        // Animate scroll line
        const scrollLine = scroll.querySelector('.hero-scroll-line');
        if (scrollLine) {
          tl.fromTo(scrollLine,
            { scaleY: 0 },
            { scaleY: 1, duration: 0.8, ease: 'power2.out' },
            1.4
          );
        }
      }

      // Remove loading class
      section.classList.remove('is-loading');
    }

    // Start animation after a short delay to ensure DOM is ready
    requestAnimationFrame(initAnimation);
  })();
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero-section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background video",
      "info": "Video will autoplay, muted, and loop. Falls back to image if not provided."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Elevate Your Style",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "words_per_line",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Words per line"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "default": "Discover our curated collection of premium products designed for the modern lifestyle.",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Shop Now",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#ffffff",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "button_background",
      "default": "#ffffff",
      "label": "Button background"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "default": "#000000",
      "label": "Button text color"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "default": true,
      "label": "Show scroll indicator"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
