{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .hero-section { height: 100dvh; max-height: 100dvh; min-height: 600px; }
  @supports not (height: 100dvh) { .hero-section { height: 100vh; max-height: 100vh; } }
  .hero-section.is-loading .hero-content { opacity: 0; }
  html.animations-disabled .hero-section.is-loading .hero-content { opacity: 1; }
  .hero-media::after { content: ''; position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 200.0 }}) 50%, transparent 100%); z-index: 1; }
  .hero-content { padding-bottom: clamp(3rem, 10vh, 8rem); }
  .hero-title { font-size: calc(clamp(2.5rem, 12vw, 5rem) * var(--heading-font-scale, 1)); letter-spacing: -0.04em; line-height: 0.85; }
  @media (min-width: 1024px) { .hero-title { font-size: calc(clamp(4rem, 8vw, 7rem) * var(--heading-font-scale, 1)); } }
  @media (min-width: 1536px) { .hero-title { font-size: calc(clamp(5rem, 8vw, 9rem) * var(--heading-font-scale, 1)); } }
  .hero-title-line:nth-child(2) { margin-left: clamp(1rem, 8vw, 5rem); }
  .hero-title-line:nth-child(3) { margin-left: clamp(2rem, 12vw, 8rem); }
  .hero-subtitle { font-size: clamp(0.75rem, 1.5vw, 1rem); }
  .hero-cta { color: {{ section.settings.button_text_color }}; background-color: {{ section.settings.button_background }}; }
  .hero-cta::before { content: ''; position: absolute; inset: 0; background: {{ section.settings.button_text_color }}; transform: scaleX(0); transform-origin: right; transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1); z-index: 0; }
  .hero-cta:hover::before { transform: scaleX(1); transform-origin: left; }
  .hero-cta:hover, .hero-cta:hover span, .hero-cta:hover i { color: {{ section.settings.button_background }}; }
</style>

<section
  class="hero-section is-loading relative flex items-end overflow-hidden bg-[--color-background]"
  data-hero-section="{{ section.id }}"
>
  <div class="hero-media absolute inset-0 z-0" data-hero-media>
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        poster: section.settings.image,
        class: 'w-full h-full object-cover absolute inset-0'
      }}
    {% elsif section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2400 | image_tag:
        class: 'w-full h-full object-cover',
        loading: 'eager',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '800, 1200, 1600, 2000, 2400'
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
    {% endif %}
  </div>

  <div class="hero-content relative z-10 w-full pt-32 {{ container_class }}" style="color: {{ section.settings.text_color }};">
    {% if section.settings.title != blank %}
      <h1 class="hero-title font-bold font-heading" data-hero-title>
        {{ section.settings.title }}
      </h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="hero-subtitle mt-8 max-w-[480px] uppercase tracking-widest leading-relaxed opacity-80" data-hero-subtitle>
        {{ section.settings.subtitle }}
      </p>
    {% endif %}

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-cta section-link mt-12 inline-flex items-center gap-4 py-4 px-8 text-xs font-semibold tracking-[0.15em] border-none rounded-[--button-radius] cursor-pointer relative overflow-hidden" data-hero-cta>
        <span class="relative z-[1] transition-colors duration-400">{{ section.settings.button_text }}</span>
        <i class="ph ph-arrow-right text-[1.25em] relative z-[1] transition-colors duration-400"></i>
      </a>
    {% endif %}
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div class="absolute bottom-8 right-[--page-padding] flex flex-col items-center gap-2 opacity-60 z-10" data-hero-scroll>
      <span class="text-[0.65rem] uppercase tracking-[0.2em] [writing-mode:vertical-rl]">Scroll</span>
      <div class="hero-scroll-line w-px h-[60px] bg-current origin-top"></div>
    </div>
  {% endif %}
</section>

<script>
  (function() {
    const section = document.querySelector('[data-hero-section="{{ section.id }}"]');
    if (!section || section.dataset.heroAnimInitialized) return;
    section.dataset.heroAnimInitialized = 'true';

    // If animations disabled, just show content immediately
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      section.classList.remove('is-loading');
      return;
    }

    // Wait for GSAP and SplitText
    function initAnimation() {
      if (typeof gsap === 'undefined') {
        if (window.pieces && window.pieces.gsap) {
          window.gsap = window.pieces.gsap;
        } else {
          requestAnimationFrame(initAnimation);
          return;
        }
      }

      // Get SplitText from pieces or window
      let SplitText = window.SplitText;
      if (!SplitText && window.pieces && window.pieces.SplitText) {
        SplitText = window.pieces.SplitText;
      }

      if (!SplitText) {
        requestAnimationFrame(initAnimation);
        return;
      }

      // Mark section as ready for animations
      section.dataset.heroAnimReady = 'true';
      section.classList.remove('is-loading');

      const media = section.querySelector('[data-hero-media]');
      const title = section.querySelector('[data-hero-title]');
      const subtitle = section.querySelector('[data-hero-subtitle]');
      const cta = section.querySelector('[data-hero-cta]');
      const scroll = section.querySelector('[data-hero-scroll]');

      const tl = gsap.timeline();

      // Animate media with clip-path swipe
      if (media) {
        gsap.set(media, { clipPath: 'inset(0 0 100% 0)' });
        tl.to(media, {
          clipPath: 'inset(0 0 0% 0)',
          duration: 1.6,
          ease: 'expo.inOut'
        }, 0);
      }

      // Animate title with SplitText line reveal
      if (title) {
        const split = new SplitText(title, { type: 'lines', linesClass: 'hero-title-line' });

        // Wrap each line in an overflow-hidden container for the reveal effect
        split.lines.forEach(line => {
          const lineWrapper = document.createElement('div');
          lineWrapper.style.overflow = 'hidden';
          lineWrapper.style.display = 'block';
          line.parentNode.insertBefore(lineWrapper, line);
          lineWrapper.appendChild(line);
        });

        gsap.set(split.lines, { yPercent: 120 });
        tl.to(split.lines, {
          yPercent: 0,
          duration: 1.2,
          ease: 'power4.out',
          stagger: 0.1
        }, 0.6);
      }

      // Animate subtitle with fade up (delayed after title starts)
      if (subtitle) {
        gsap.set(subtitle, { opacity: 0, y: 30 });
        tl.to(subtitle, {
          opacity: 0.8,
          y: 0,
          duration: 1,
          ease: 'power3.out'
        }, 1.1);
      }

      // Animate CTA with fade up (delayed after subtitle)
      if (cta) {
        gsap.set(cta, { opacity: 0, y: 20 });
        tl.to(cta, {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: 'power3.out'
        }, 1.4);
      }

      // Animate scroll indicator (last element)
      if (scroll) {
        gsap.set(scroll, { opacity: 0 });
        tl.to(scroll, {
          opacity: 0.6,
          duration: 0.8,
          ease: 'power2.out'
        }, 1.7);
      }
    }

    // Start animation after a short delay to ensure DOM is ready
    requestAnimationFrame(initAnimation);
  })();
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero-section-wrapper",
  "category": "Image & media",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background video",
      "info": "Video will autoplay, muted, and loop. Falls back to image if not provided."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Elevate Your Style",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "words_per_line",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2,
      "label": "Words per line"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "default": "Discover our curated collection of premium products designed for the modern lifestyle.",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Shop Now",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#ffffff",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "button_background",
      "default": "#ffffff",
      "label": "Button background"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "default": "#000000",
      "label": "Button text color"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width content",
      "info": "Content uses page padding. Background media is always full bleed."
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "default": true,
      "label": "Show scroll indicator"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
