{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .hero-section-{{ section.id }} { height: 90dvh; max-height: 90dvh; min-height: 600px; }
  @supports not (height: 100dvh) { .hero-section-{{ section.id }} { height: 90vh; max-height: 90vh; } }
  .hero-section-{{ section.id }} .hero-media::after { content: ''; position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 100.0 }}) 0%, rgba(0,0,0,{{ section.settings.overlay_opacity | divided_by: 200.0 }}) 50%, transparent 100%); z-index: 1; }
  .hero-section-{{ section.id }} .hero-content { padding-bottom: clamp(3rem, 10vh, 8rem); }
  .hero-section-{{ section.id }} .hero-title { font-size: calc(clamp(2.5rem, 12vw, 5rem) * var(--heading-font-scale, 1)); letter-spacing: calc(-0.04em + var(--heading-letter-spacing, 0em)); line-height: 0.85; }
  @media (min-width: 1024px) { .hero-section-{{ section.id }} .hero-title { font-size: calc(clamp(4rem, 8vw, 7rem) * var(--heading-font-scale, 1)); } }
  @media (min-width: 1536px) { .hero-section-{{ section.id }} .hero-title { font-size: calc(clamp(5rem, 8vw, 9rem) * var(--heading-font-scale, 1)); } }
  .hero-section-{{ section.id }} .hero-description { font-size: clamp(0.875rem, 1.5vw, 1rem); }

  /* Button styling - adapts to color scheme */
  .hero-section-{{ section.id }} .btn--outline {
    color: var(--color-text);
    border-color: var(--color-text);
  }
  .hero-section-{{ section.id }} .btn--outline::before {
    background: var(--color-text);
  }
  .hero-section-{{ section.id }} .btn--outline:hover,
  .hero-section-{{ section.id }} .btn--outline:hover span,
  .hero-section-{{ section.id }} .btn--outline:hover i {
    color: var(--color-background);
  }
  .hero-section-{{ section.id }} .btn--primary {
    background: var(--color-text);
    border-color: var(--color-text);
    color: var(--color-background);
  }
  .hero-section-{{ section.id }} .btn--primary::before {
    background: var(--color-background);
  }
  .hero-section-{{ section.id }} .btn--primary:hover,
  .hero-section-{{ section.id }} .btn--primary:hover span,
  .hero-section-{{ section.id }} .btn--primary:hover i {
    color: var(--color-text);
  }

  /* Initial clip-path state for media swipe animation */
  [data-hero-section="{{ section.id }}"] [data-hero-media] {
    clip-path: inset(0 0 100% 0);
  }

  /* When animations disabled, show media immediately */
  html.animations-disabled [data-hero-section="{{ section.id }}"] [data-hero-media] {
    clip-path: none;
  }
</style>

<section
  class="hero-section-{{ section.id }} color-{{ section.settings.color_scheme }} relative flex items-end overflow-hidden"
  data-hero-section="{{ section.id }}"
>
  <div class="hero-media absolute inset-0 z-0" data-hero-media>
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        poster: section.settings.image,
        class: 'w-full h-full object-cover absolute inset-0'
      }}
    {% elsif section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2400 | image_tag:
        class: 'w-full h-full object-cover',
        loading: 'eager',
        decoding: 'async',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '800, 1200, 1600, 2000, 2400',
        alt: section.settings.image.alt | default: section.settings.title
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
    {% endif %}
  </div>

  {%- liquid
    case section.settings.content_alignment
      when 'center'
        assign align_class = 'items-center text-center'
        assign title_align = 'text-center'
        assign description_align = 'mx-auto text-center'
        assign scroll_position = 'right-[--page-padding]'
      when 'right'
        assign align_class = 'items-end text-right'
        assign title_align = 'text-right'
        assign description_align = 'ml-auto text-right'
        assign scroll_position = 'left-[--page-padding]'
      else
        assign align_class = 'items-start text-left'
        assign title_align = ''
        assign description_align = ''
        assign scroll_position = 'right-[--page-padding]'
    endcase
  -%}
  {%- comment -%} Hero content - uses global data-tween system for animations with delay after media reveal {%- endcomment -%}
  <div class="hero-content relative z-10 w-full pt-32 flex flex-col {{ align_class }} {{ container_class }}" data-tween-group="hero-content-{{ section.id }}" data-tween-start="top bottom">
    {% if section.settings.label != blank %}
      <span class="section-label mb-6" data-tween data-tween-type="fade-up" data-tween-delay="0.6">{{ section.settings.label }}</span>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="hero-title text-balance max-w-4xl font-bold font-heading {{ title_align }}" data-tween data-tween-type="split-text" data-tween-delay="0.8">
        {{ section.settings.title }}
      </h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="hero-description mt-8 max-w-[480px] leading-relaxed opacity-80 {{ description_align }}" data-tween data-tween-type="fade-up">
        {{ section.settings.description }}
      </p>
    {% endif %}

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn{% if section.settings.button_style == 'solid' %} btn--primary{% else %} btn--outline{% endif %}{% if section.settings.button_size == 'large' %} btn--lg{% endif %} mt-8" data-tween data-tween-type="fade-up">
        <span>{{ section.settings.button_text }}</span>
        <i class="ph ph-arrow-right"></i>
      </a>
    {% endif %}
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div class="absolute bottom-8 {{ scroll_position }} flex flex-col items-center gap-2 z-10" data-tween data-tween-type="fade-up" data-tween-delay="1.2" data-tween-start="top bottom">
      <span class="text-[0.75rem] uppercase tracking-[0.2em] [writing-mode:vertical-rl]">{{ 'accessibility.scroll_down' | t }}</span>
      <div class="hero-scroll-line w-px h-[60px] bg-current origin-top"></div>
    </div>
  {% endif %}
</section>

<script>
  (function() {
    const section = document.querySelector('[data-hero-section="{{ section.id }}"]');
    if (!section || section.dataset.heroAnimInitialized) return;
    section.dataset.heroAnimInitialized = 'true';

    // If animations disabled, media is shown via CSS
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      return;
    }

    // Wait for GSAP
    function initMediaAnimation() {
      const gsap = window.gsap || (window.pieces && window.pieces.gsap);
      if (!gsap) {
        requestAnimationFrame(initMediaAnimation);
        return;
      }

      const media = section.querySelector('[data-hero-media]');

      // Animate media with clip-path swipe (initial state set in CSS)
      // Content animations are handled by global TweenManager via data-tween attributes
      if (media) {
        gsap.to(media, {
          clipPath: 'inset(0 0 0% 0)',
          duration: 1.6,
          ease: 'expo.inOut'
        });
      }
    }

    // Start animation after a short delay to ensure DOM is ready
    requestAnimationFrame(initMediaAnimation);
  })();
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero-section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background video",
      "info": "Video will autoplay, muted, and loop. Falls back to image if not provided."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Elevate Your Style",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Discover our curated collection of premium products designed for the modern lifestyle.",
      "label": "Description"
    },
    {
      "type": "text_alignment",
      "id": "content_alignment",
      "default": "left",
      "label": "Content alignment"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Shop Now",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "outline",
      "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" }
      ]
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button size",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "large", "label": "Large" }
      ],
      "default": "large"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3",
      "info": "Choose a scheme with good contrast for text over images/video"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width content",
      "info": "Content uses page padding. Background media is always full bleed."
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "default": true,
      "label": "Show scroll indicator"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image & media"
    }
  ]
}
