{%- liquid
  capture container_class
    render 'container-class', full_width: section.settings.full_width, full_class: 'container-fluid'
  endcapture
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<div
  class="hero-section color-{{ section.settings.color_scheme }}"
  style="--hero-overlay-opacity: {{ overlay_opacity }};"
  data-hero-section="{{ section.id }}"
>
  <div class="hero-media" data-hero-media>
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        poster: section.settings.image,
        class: 'w-full h-full object-cover absolute inset-0'
      }}
    {% elsif section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2400 | image_tag:
        class: 'w-full h-full object-cover',
        loading: 'eager',
        decoding: 'async',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '800, 1200, 1600, 2000, 2400',
        alt: section.settings.image.alt | default: section.settings.title
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
    {% endif %}
  </div>

  {%- liquid
    case section.settings.content_alignment
      when 'center'
        assign align_class = 'items-center text-center'
        assign title_align = 'text-center'
        assign description_align = 'mx-auto text-center'
        assign scroll_position = 'right-(--page-padding)'
      when 'right'
        assign align_class = 'items-end text-right'
        assign title_align = 'text-right'
        assign description_align = 'ml-auto text-right'
        assign scroll_position = 'left-(--page-padding)'
      else
        assign align_class = 'items-start text-left'
        assign title_align = ''
        assign description_align = ''
        assign scroll_position = 'right-(--page-padding)'
    endcase
  -%}
  {%- comment -%} Hero content - uses global data-tween system for animations with delay after media reveal {%- endcomment -%}
  <div class="hero-content {{ align_class }} {{ container_class }}" data-tween-group="hero-content-{{ section.id }}" data-tween-start="top bottom">
    {% if section.settings.label != blank %}
      <span class="section-label" data-tween data-tween-type="fade-up" data-tween-delay="0.6">{{ section.settings.label }}</span>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="hero-title {{ title_align }}" data-tween data-tween-type="split-text" data-tween-delay="0.8">
        {{ section.settings.title }}
      </h1>
    {% endif %}

    {% if section.settings.text != blank %}
      <p class="hero-description section-description max-w-[480px] {{ description_align }}" data-tween data-tween-type="fade-up">
        {{ section.settings.text }}
      </p>
    {% endif %}

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      {% render 'button',
        text: section.settings.button_text,
        url: section.settings.button_link,
        style: section.settings.button_style,
        color: section.settings.button_color,
        size: section.settings.button_size,
        show_arrow: true,
        class: 'section-cta',
        animate: true
      %}
    {% endif %}
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div class="hero-scroll-indicator {{ scroll_position }}" data-tween data-tween-type="fade-up" data-tween-delay="1.2" data-tween-start="top bottom">
      <span>{{ 'accessibility.scroll_down' | t }}</span>
      <div class="hero-scroll-line"></div>
    </div>
  {% endif %}
</div>

<script>
  (function() {
    const section = document.querySelector('[data-hero-section="{{ section.id }}"]');
    if (!section || section.dataset.heroAnimInitialized) return;
    section.dataset.heroAnimInitialized = 'true';

    // If animations disabled, media is shown via CSS
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      return;
    }

    // Wait for GSAP
    function initMediaAnimation() {
      const gsap = window.gsap || (window.pieces && window.pieces.gsap);
      if (!gsap) {
        requestAnimationFrame(initMediaAnimation);
        return;
      }

      const media = section.querySelector('[data-hero-media]');

      // Animate media with clip-path swipe (initial state set in CSS)
      // Content animations are handled by global TweenManager via data-tween attributes
      if (media) {
        gsap.to(media, {
          clipPath: 'inset(0 0 0% 0)',
          duration: 1.6,
          ease: 'expo.inOut'
        });
      }
    }

    // Start animation after a short delay to ensure DOM is ready
    requestAnimationFrame(initMediaAnimation);
  })();
</script>

{% schema %}
{
  "name": "t:sections.hero.name",
  "tag": "section",
  "class": "hero-section-wrapper no-header-offset",
  "settings": [
    {
      "type": "header",
      "content": "t:shared.headers.media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:shared.settings.image.label"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:shared.settings.video.label",
      "info": "t:shared.info.upload_video"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "%",
      "label": "t:shared.settings.overlay_opacity.label"
    },
    {
      "type": "header",
      "content": "t:shared.headers.content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "t:shared.settings.label.label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "t:sections.hero.settings.title.default",
      "label": "t:shared.settings.title.label"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "t:sections.hero.settings.text.default",
      "label": "t:shared.settings.text.label"
    },
    {
      "type": "text_alignment",
      "id": "content_alignment",
      "default": "left",
      "label": "t:shared.settings.content_alignment.label"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "t:sections.hero.settings.button_text.default",
      "label": "t:shared.settings.button_text.label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:shared.settings.button_link.label"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "t:shared.settings.button_style.label",
      "default": "outline",
      "options": [
        {
          "value": "solid",
          "label": "t:shared.settings.button_style.options__0.label"
        },
        {
          "value": "outline",
          "label": "t:shared.settings.button_style.options__1.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "t:shared.settings.button_color.label",
      "default": "primary",
      "options": [
        {
          "value": "primary",
          "label": "t:shared.settings.button_color.options__0.label"
        },
        {
          "value": "secondary",
          "label": "t:shared.settings.button_color.options__1.label"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "t:shared.settings.button_size.label",
      "options": [
        {
          "value": "small",
          "label": "t:shared.settings.button_size.options__0.label"
        },
        {
          "value": "default",
          "label": "t:shared.settings.button_size.options__1.label"
        },
        {
          "value": "large",
          "label": "t:shared.settings.button_size.options__2.label"
        }
      ],
      "default": "large"
    },
    {
      "type": "header",
      "content": "t:shared.headers.colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:shared.settings.color_scheme.label",
      "default": "scheme-3",
      "info": "t:sections.hero.settings.color_scheme.info"
    },
    {
      "type": "header",
      "content": "t:shared.headers.layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "t:shared.settings.full_width.label",
      "info": "t:shared.info.extends_full_width"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "default": true,
      "label": "t:shared.settings.show_scroll_indicator.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.hero.presets.hero.name",
      "category": "t:sections.hero.presets.hero.category"
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  }
}
{% endschema %}
