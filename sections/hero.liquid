{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
  assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0
-%}

<section
  class="hero-section color-{{ section.settings.color_scheme }}"
  style="--hero-overlay-opacity: {{ overlay_opacity }};"
  data-hero-section="{{ section.id }}"
>
  <div class="hero-media" data-hero-media>
    {% if section.settings.video != blank %}
      {{ section.settings.video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        playsinline: true,
        poster: section.settings.image,
        class: 'w-full h-full object-cover absolute inset-0'
      }}
    {% elsif section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 2400 | image_tag:
        class: 'w-full h-full object-cover',
        loading: 'eager',
        decoding: 'async',
        fetchpriority: 'high',
        sizes: '100vw',
        widths: '800, 1200, 1600, 2000, 2400',
        alt: section.settings.image.alt | default: section.settings.title
      }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
    {% endif %}
  </div>

  {%- liquid
    case section.settings.content_alignment
      when 'center'
        assign align_class = 'items-center text-center'
        assign title_align = 'text-center'
        assign description_align = 'mx-auto text-center'
        assign scroll_position = 'right-(--page-padding)'
      when 'right'
        assign align_class = 'items-end text-right'
        assign title_align = 'text-right'
        assign description_align = 'ml-auto text-right'
        assign scroll_position = 'left-(--page-padding)'
      else
        assign align_class = 'items-start text-left'
        assign title_align = ''
        assign description_align = ''
        assign scroll_position = 'right-(--page-padding)'
    endcase
  -%}
  {%- comment -%} Hero content - uses global data-tween system for animations with delay after media reveal {%- endcomment -%}
  <div class="hero-content {{ align_class }} {{ container_class }}" data-tween-group="hero-content-{{ section.id }}" data-tween-start="top bottom">
    {% if section.settings.label != blank %}
      <span class="section-label" data-tween data-tween-type="fade-up" data-tween-delay="0.6">{{ section.settings.label }}</span>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="hero-title {{ title_align }}" data-tween data-tween-type="split-text" data-tween-delay="0.8">
        {{ section.settings.title }}
      </h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="hero-description section-description max-w-[480px] {{ description_align }}" data-tween data-tween-type="fade-up">
        {{ section.settings.description }}
      </p>
    {% endif %}

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="btn{%- render 'button-class', style: section.settings.button_style, color: section.settings.button_color -%}{% if section.settings.button_size == 'small' %} btn--sm{% elsif section.settings.button_size == 'large' %} btn--lg{% endif %} section-cta" data-tween data-tween-type="fade-up">
        <span>{{ section.settings.button_text }}</span>
        <i class="ph ph-arrow-right"></i>
      </a>
    {% endif %}
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div class="hero-scroll-indicator {{ scroll_position }}" data-tween data-tween-type="fade-up" data-tween-delay="1.2" data-tween-start="top bottom">
      <span>{{ 'accessibility.scroll_down' | t }}</span>
      <div class="hero-scroll-line"></div>
    </div>
  {% endif %}
</section>

<script>
  (function() {
    const section = document.querySelector('[data-hero-section="{{ section.id }}"]');
    if (!section || section.dataset.heroAnimInitialized) return;
    section.dataset.heroAnimInitialized = 'true';

    // If animations disabled, media is shown via CSS
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      return;
    }

    // Wait for GSAP
    function initMediaAnimation() {
      const gsap = window.gsap || (window.pieces && window.pieces.gsap);
      if (!gsap) {
        requestAnimationFrame(initMediaAnimation);
        return;
      }

      const media = section.querySelector('[data-hero-media]');

      // Animate media with clip-path swipe (initial state set in CSS)
      // Content animations are handled by global TweenManager via data-tween attributes
      if (media) {
        gsap.to(media, {
          clipPath: 'inset(0 0 0% 0)',
          duration: 1.6,
          ease: 'expo.inOut'
        });
      }
    }

    // Start animation after a short delay to ensure DOM is ready
    requestAnimationFrame(initMediaAnimation);
  })();
</script>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "hero-section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Background video",
      "info": "Video will autoplay, muted, and loop. Falls back to image if not provided."
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 40,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Elevate Your Style",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Discover our curated collection of premium products designed for the modern lifestyle.",
      "label": "Description"
    },
    {
      "type": "text_alignment",
      "id": "content_alignment",
      "default": "left",
      "label": "Content alignment"
    },
    {
      "type": "text",
      "id": "button_text",
      "default": "Shop Now",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "outline",
      "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" }
      ]
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Button color",
      "default": "primary",
      "options": [
        { "value": "primary", "label": "Primary (accent)" },
        { "value": "secondary", "label": "Secondary (neutral)" }
      ]
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button size",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "default", "label": "Default" },
        { "value": "large", "label": "Large" }
      ],
      "default": "large"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3",
      "info": "Choose a scheme with good contrast for text over images/video"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width content",
      "info": "Content uses page padding. Background media is always full bleed."
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "default": true,
      "label": "Show scroll indicator"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image & media"
    }
  ]
}
{% endschema %}
