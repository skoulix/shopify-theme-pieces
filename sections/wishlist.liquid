{%- comment -%}
  Wishlist Section
  Shows all saved favorite products from localStorage
{%- endcomment -%}

{%- liquid
  capture container_class
    render 'container-class', full_width: section.settings.full_width, full_class: 'container-fluid'
  endcapture
-%}

<div class="wishlist-section page-padding color-{{ section.settings.color_scheme }}" data-wishlist-section data-header-alignment="{{ section.settings.header_alignment }}" id="wishlist-section-{{ section.id }}">
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    <div class="section-header-spacing {% if section.settings.header_alignment == 'center' %}text-center{% elsif section.settings.header_alignment == 'right' %}text-right{% endif %}" data-tween-group="wishlist-header-{{ section.id }}">
      {% if section.settings.label != blank %}
        <span class="section-label" data-tween data-tween-type="fade-up">
          {{ section.settings.label }}
        </span>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="page-title" data-tween data-tween-type="split-text">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      <p class="page-header-subtitle {% if section.settings.header_alignment == 'center' %}justify-center{% elsif section.settings.header_alignment == 'right' %}justify-end{% endif %}">
        <span class="page-header-subtitle-line" data-subtitle-line></span>
        <span class="overflow-hidden"><span class="inline-block" data-wishlist-section-count data-subtitle-text>0 {{ 'products.wishlist.products' | t | default: 'saved items' }}</span></span>
      </p>

      {% if section.settings.description != blank %}
        <p class="section-description max-w-2xl {% if section.settings.header_alignment == 'center' %}mx-auto{% elsif section.settings.header_alignment == 'right' %}ml-auto{% endif %}" data-tween data-tween-type="fade-up">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    {%- comment -%} Content rendered via JS {%- endcomment -%}
    <div data-wishlist-section-content data-tween data-tween-type="fade-up"></div>
  </div>
</div>

<script>
(function() {
  const STORAGE_KEY = 'pieces_wishlist';

  const section = document.getElementById('wishlist-section-{{ section.id }}');
  const content = section?.querySelector('[data-wishlist-section-content]');
  const countEl = section?.querySelector('[data-wishlist-section-count]');

  if (!section || !content) return;

  function getProducts() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      return stored ? JSON.parse(stored) : [];
    } catch {
      return [];
    }
  }

  function saveProducts(products) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
    } catch {}
  }

  function formatMoney(cents) {
    if (typeof cents === 'string') {
      cents = cents.replace(/[^\d.-]/g, '');
      if (cents.includes('.')) {
        cents = Math.round(parseFloat(cents) * 100);
      } else {
        cents = parseInt(cents, 10);
      }
    }
    cents = cents || 0;

    const moneyFormat = window.themeSettings?.moneyFormat || '${{amount}}';
    const value = cents / 100;
    const amountNoDecimals = Math.floor(value);
    const amountFormatted = value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountWithComma = value.toLocaleString('de-DE', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountNoDecimalsWithComma = amountNoDecimals.toLocaleString('de-DE');
    const amountWithApostrophe = value.toLocaleString('de-CH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });

    return moneyFormat
      .replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, amountWithComma)
      .replace(/\{\{\s*amount_no_decimals_with_comma_separator\s*\}\}/g, amountNoDecimalsWithComma)
      .replace(/\{\{\s*amount_with_apostrophe_separator\s*\}\}/g, amountWithApostrophe)
      .replace(/\{\{\s*amount_no_decimals\s*\}\}/g, amountNoDecimals.toLocaleString('en-US'))
      .replace(/\{\{\s*amount\s*\}\}/g, amountFormatted);
  }

  function escapeHtml(str) {
    const div = document.createElement('div');
    div.textContent = str || '';
    return div.innerHTML;
  }

  let isRendering = false;

  function removeProduct(productId) {
    const products = getProducts().filter(p => String(p.id) !== String(productId));
    saveProducts(products);
    isRendering = true;
    render();
    isRendering = false;
    document.dispatchEvent(new CustomEvent('wishlist:removed', { detail: { productId } }));
  }

  function render() {
    const products = getProducts();

    if (countEl) {
      countEl.textContent = `${products.length} {{ 'products.wishlist.products' | t | default: 'saved items' }}`;
    }

    if (products.length === 0) {
      content.innerHTML = `
        <div class="wishlist-empty text-center">
          <div class="wishlist-empty__icon mx-auto">
            <i class="ph ph-heart"></i>
          </div>
          <h2 class="wishlist-empty__title">{{ 'products.wishlist.empty_title' | t | default: 'Your wishlist is empty' }}</h2>
          <p class="wishlist-empty__text mx-auto">{{ 'products.wishlist.empty_text' | t | default: 'Save your favorite products by clicking the heart icon on product cards.' }}</p>
          <div class="wishlist-empty__actions justify-center">
            <a href="/collections/all" class="btn btn--primary">
              {%- if settings.button_hover_slide_text -%}<span data-hover="{{ 'products.wishlist.browse_products' | t | default: 'Browse Products' }}"><span>{{ 'products.wishlist.browse_products' | t | default: 'Browse Products' }}</span></span>{%- else -%}<span>{{ 'products.wishlist.browse_products' | t | default: 'Browse Products' }}</span>{%- endif -%}
            </a>
          </div>
        </div>
      `;
      return;
    }

    let html = `
      <div class="wishlist-grid">
        ${products.map(product => `
          <article class="product-card group relative flex flex-col no-underline text-inherit rounded-(--card-radius) overflow-hidden h-full border-solid border-(--color-border)" style="box-shadow: var(--card-shadow); border-width: var(--card-border-width);">
            <button
              type="button"
              class="absolute top-3 right-3 z-20 w-9 h-9 flex items-center justify-center rounded-full bg-(--color-sale) text-white shadow-md transition-all duration-300 hover:scale-110"
              data-remove-wishlist-page="${product.id}"
              aria-label="{{ 'products.wishlist.remove' | t | default: 'Remove' }}"
            >
              <i class="ph-fill ph-heart text-base" aria-hidden="true"></i>
            </button>
            <a href="${escapeHtml(product.url)}" class="flex flex-col flex-1 cursor-pointer">
              <div class="product-card-image relative overflow-hidden aspect-[3/4]">
                ${product.image ? `
                  <img
                    src="${escapeHtml(product.image)}"
                    alt="${escapeHtml(product.title)}"
                    class="w-full h-full object-cover"
                    loading="lazy"
                    decoding="async"
                  >
                ` : `
                  <div class="w-full h-full flex items-center justify-center bg-(--color-background-secondary)">
                    <i class="ph ph-image text-5xl text-(--color-text-secondary) opacity-30"></i>
                  </div>
                `}
                ${!product.available ? `
                  <span class="absolute top-3 left-3 px-2 py-1 text-[0.8125rem] font-semibold uppercase tracking-wider bg-(--color-background) text-(--color-text-secondary) rounded">
                    {{ 'products.product.sold_out' | t }}
                  </span>
                ` : ''}
                ${product.compareAtPrice && product.compareAtPrice > product.price ? `
                  <span class="absolute bottom-3 left-3 px-2 py-1 text-[0.8125rem] font-semibold uppercase tracking-wider bg-(--color-sale) text-white rounded">
                    {{ 'products.product.on_sale' | t }}
                  </span>
                ` : ''}
              </div>
              <div class="product-card-content flex-1 p-4 bg-(--color-background)">
                ${product.vendor ? `
                  <p class="product-card-vendor text-sm text-(--color-text-secondary) uppercase tracking-wide overflow-hidden">
                    <span class="inline-block">${escapeHtml(product.vendor)}</span>
                  </p>
                ` : ''}
                <h3 class="product-card-title card-title mt-2">
                  ${escapeHtml(product.title)}
                </h3>
                <div class="product-card-price mt-2 text-sm text-(--color-text-secondary)">
                  ${product.compareAtPrice && product.compareAtPrice > product.price ? `
                    <span class="line-through opacity-60 mr-2">${formatMoney(product.compareAtPrice)}</span>
                    <span class="text-(--color-sale)">${formatMoney(product.price)}</span>
                  ` : formatMoney(product.price)}
                </div>
              </div>
            </a>
          </article>
        `).join('')}
      </div>

      <div class="wishlist-actions">
        <button type="button" class="btn btn--secondary btn--lg" data-clear-wishlist>
          <i class="ph ph-trash"></i>
          {%- if settings.button_hover_slide_text -%}<span data-hover="{{ 'products.wishlist.clear_all' | t | default: 'Clear All' }}"><span>{{ 'products.wishlist.clear_all' | t | default: 'Clear All' }}</span></span>{%- else -%}<span>{{ 'products.wishlist.clear_all' | t | default: 'Clear All' }}</span>{%- endif -%}
        </button>
        <a href="/collections/all" class="btn btn--primary btn--lg">
          {%- if settings.button_hover_slide_text -%}<span data-hover="{{ 'products.wishlist.continue_shopping' | t | default: 'Continue Shopping' }}"><span>{{ 'products.wishlist.continue_shopping' | t | default: 'Continue Shopping' }}</span></span>{%- else -%}<span>{{ 'products.wishlist.continue_shopping' | t | default: 'Continue Shopping' }}</span>{%- endif -%}
        </a>
      </div>
    `;

    content.innerHTML = html;

    content.querySelectorAll('[data-remove-wishlist-page]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        removeProduct(btn.dataset.removeWishlistPage);
      });
    });

    content.querySelector('[data-clear-wishlist]')?.addEventListener('click', () => {
      saveProducts([]);
      render();
      document.dispatchEvent(new CustomEvent('wishlist:cleared'));
    });
  }

  render();

  // Animate subtitle line and text
  function initSubtitleAnimation() {
    if (typeof gsap === 'undefined') {
      requestAnimationFrame(initSubtitleAnimation);
      return;
    }

    const subtitleLine = section.querySelector('[data-subtitle-line]');
    const subtitleText = section.querySelector('[data-subtitle-text]');

    if (subtitleLine) {
      gsap.set(subtitleLine, { scaleX: 0, transformOrigin: 'left center' });
      gsap.to(subtitleLine, {
        scaleX: 1,
        duration: 0.8,
        ease: 'power3.out',
        delay: 0.4
      });
    }

    if (subtitleText) {
      gsap.set(subtitleText, { yPercent: 120 });
      gsap.to(subtitleText, {
        yPercent: 0,
        duration: 0.8,
        ease: 'power4.out',
        delay: 0.6
      });
    }
  }

  // Only animate if animations are enabled
  if (typeof window.shouldAnimate === 'function' ? window.shouldAnimate() : true) {
    initSubtitleAnimation();
  }

  window.addEventListener('storage', (e) => {
    if (e.key === STORAGE_KEY) {
      render();
    }
  });

  function handleExternalChange() {
    if (!isRendering) render();
  }
  document.addEventListener('wishlist:added', handleExternalChange);
  document.addEventListener('wishlist:removed', handleExternalChange);
  document.addEventListener('wishlist:cleared', handleExternalChange);
})();

</script>

