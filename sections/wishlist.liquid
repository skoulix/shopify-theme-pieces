{%- comment -%}
  Wishlist Section
  Shows all saved favorite products from localStorage
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .wishlist-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: var(--section-vertical-padding) 0;
    min-height: 60vh;
  }
  .wishlist-section-{{ section.id }} .wishlist-title {
    font-size: calc(clamp(2rem, 5vw, 3.5rem) * var(--heading-font-scale, 1));
    letter-spacing: -0.03em;
    line-height: 0.95;
  }
  @media (min-width: 1024px) {
    .wishlist-section-{{ section.id }} .wishlist-title {
      font-size: calc(clamp(2.5rem, 4vw, 4rem) * var(--heading-font-scale, 1));
    }
  }

  /* Title line reveal animation */
  .wishlist-title-line:nth-child(2) { margin-left: clamp(0.5rem, 4vw, 2rem); }

  /* Hide title initially to prevent FOUC before SplitText animation */
  [data-wishlist-title] { opacity: 0; }
  html.animations-disabled [data-wishlist-title] { opacity: 1; }
  .wishlist-section-{{ section.id }} .wishlist-count {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.6;
  }
  .wishlist-section-{{ section.id }} .wishlist-empty {
    text-align: center;
    padding: 4rem 0;
  }
  .wishlist-section-{{ section.id }} .wishlist-empty__icon {
    font-size: 4rem;
    opacity: 0.3;
    margin-bottom: 1.5rem;
  }
  .wishlist-section-{{ section.id }} .wishlist-empty__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .wishlist-section-{{ section.id }} .wishlist-empty__text {
    opacity: 0.7;
    margin-bottom: 1.5rem;
  }
  .wishlist-section-{{ section.id }} .wishlist-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .wishlist-section-{{ section.id }} .wishlist-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media (min-width: 1024px) {
    .wishlist-section-{{ section.id }} .wishlist-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  /* Reset buttons to use global styles - override section color inheritance */
  .wishlist-section-{{ section.id }} .btn--secondary {
    color: var(--color-text);
    border-color: var(--color-border);
  }
  .wishlist-section-{{ section.id }} .btn--secondary::before {
    background: var(--color-text);
  }
  .wishlist-section-{{ section.id }} .btn--secondary:hover,
  .wishlist-section-{{ section.id }} .btn--secondary:hover span,
  .wishlist-section-{{ section.id }} .btn--secondary:hover i {
    color: var(--color-background);
  }
  .wishlist-section-{{ section.id }} .btn--primary {
    color: var(--color-primary-contrast);
    background: var(--color-primary);
    border-color: var(--color-primary);
  }
  .wishlist-section-{{ section.id }} .btn--primary::before {
    background: var(--color-primary-contrast);
  }
  .wishlist-section-{{ section.id }} .btn--primary:hover,
  .wishlist-section-{{ section.id }} .btn--primary:hover span,
  .wishlist-section-{{ section.id }} .btn--primary:hover i {
    color: var(--color-primary);
  }
  .wishlist-section-{{ section.id }} .wishlist-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 3rem;
  }
</style>

<section class="wishlist-section-{{ section.id }}" data-wishlist-section id="wishlist-section-{{ section.id }}">
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    <div class="mb-12 lg:mb-16 {% if section.settings.header_alignment == 'center' %}text-center{% elsif section.settings.header_alignment == 'right' %}text-right{% endif %}">
      {% if section.settings.label != blank %}
        <span class="inline-block text-[0.65rem] font-semibold uppercase tracking-[0.2em] opacity-60 mb-4" data-intro>
          {{ section.settings.label }}
        </span>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="wishlist-title font-bold font-heading" data-wishlist-title>
          {{ section.settings.title }}
        </h2>
      {% endif %}

      <p class="wishlist-count mt-4" data-wishlist-section-count data-intro>0 {{ 'products.wishlist.products' | t | default: 'saved items' }}</p>

      {% if section.settings.description != blank %}
        <p class="mt-4 text-base lg:text-lg opacity-70 max-w-2xl {% if section.settings.header_alignment == 'center' %}mx-auto{% elsif section.settings.header_alignment == 'right' %}ml-auto{% endif %}" data-intro>
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    {%- comment -%} Content rendered via JS {%- endcomment -%}
    <div data-wishlist-section-content data-intro></div>
  </div>
</section>

<script>
(function() {
  const STORAGE_KEY = 'pieces_wishlist';

  const section = document.getElementById('wishlist-section-{{ section.id }}');
  const content = section?.querySelector('[data-wishlist-section-content]');
  const countEl = section?.querySelector('[data-wishlist-section-count]');

  if (!section || !content) return;

  function getProducts() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      return stored ? JSON.parse(stored) : [];
    } catch {
      return [];
    }
  }

  function saveProducts(products) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
    } catch {}
  }

  function formatMoney(cents) {
    if (typeof cents === 'string') {
      cents = cents.replace(/[^\d.-]/g, '');
      if (cents.includes('.')) {
        cents = Math.round(parseFloat(cents) * 100);
      } else {
        cents = parseInt(cents, 10);
      }
    }
    cents = cents || 0;

    const moneyFormat = window.themeSettings?.moneyFormat || '${{amount}}';
    const value = cents / 100;
    const amountNoDecimals = Math.floor(value);
    const amountFormatted = value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountWithComma = value.toLocaleString('de-DE', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountNoDecimalsWithComma = amountNoDecimals.toLocaleString('de-DE');
    const amountWithApostrophe = value.toLocaleString('de-CH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });

    return moneyFormat
      .replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, amountWithComma)
      .replace(/\{\{\s*amount_no_decimals_with_comma_separator\s*\}\}/g, amountNoDecimalsWithComma)
      .replace(/\{\{\s*amount_with_apostrophe_separator\s*\}\}/g, amountWithApostrophe)
      .replace(/\{\{\s*amount_no_decimals\s*\}\}/g, amountNoDecimals.toLocaleString('en-US'))
      .replace(/\{\{\s*amount\s*\}\}/g, amountFormatted);
  }

  function escapeHtml(str) {
    const div = document.createElement('div');
    div.textContent = str || '';
    return div.innerHTML;
  }

  let isRendering = false;

  function removeProduct(productId) {
    const products = getProducts().filter(p => String(p.id) !== String(productId));
    saveProducts(products);
    isRendering = true;
    render();
    isRendering = false;
    document.dispatchEvent(new CustomEvent('wishlist:removed', { detail: { productId } }));
  }

  function render() {
    const products = getProducts();

    if (countEl) {
      countEl.textContent = `${products.length} {{ 'products.wishlist.products' | t | default: 'saved items' }}`;
    }

    if (products.length === 0) {
      content.innerHTML = `
        <div class="wishlist-empty">
          <div class="wishlist-empty__icon">
            <i class="ph ph-heart"></i>
          </div>
          <h2 class="wishlist-empty__title">{{ 'products.wishlist.empty_title' | t | default: 'Your wishlist is empty' }}</h2>
          <p class="wishlist-empty__text">{{ 'products.wishlist.empty_text' | t | default: 'Save your favorite products by clicking the heart icon on product cards.' }}</p>
          <a href="/collections/all" class="btn btn--primary">
            <span>{{ 'products.wishlist.browse_products' | t | default: 'Browse Products' }}</span>
          </a>
        </div>
      `;
      return;
    }

    let html = `
      <div class="wishlist-grid">
        ${products.map(product => `
          <article class="product-card group relative flex flex-col no-underline text-inherit rounded-[--card-radius] overflow-hidden h-full border-[length:var(--card-border-width)] border-solid border-[--color-border] shadow-[--card-shadow]">
            <button
              type="button"
              class="absolute top-3 right-3 z-20 w-9 h-9 flex items-center justify-center rounded-full bg-[--color-sale] text-white shadow-md transition-all duration-300 hover:scale-110"
              data-remove-wishlist-page="${product.id}"
              aria-label="{{ 'products.wishlist.remove' | t | default: 'Remove' }}"
            >
              <i class="ph-fill ph-heart text-base" aria-hidden="true"></i>
            </button>
            <a href="${escapeHtml(product.url)}" class="flex flex-col flex-1 cursor-pointer">
              <div class="product-card-image relative overflow-hidden aspect-[3/4]">
                ${product.image ? `
                  <img
                    src="${escapeHtml(product.image)}"
                    alt="${escapeHtml(product.title)}"
                    class="w-full h-full object-cover"
                    loading="lazy"
                    decoding="async"
                  >
                ` : `
                  <div class="w-full h-full flex items-center justify-center bg-[--color-background-secondary]">
                    <i class="ph ph-image text-5xl text-[--color-text-secondary] opacity-30"></i>
                  </div>
                `}
                ${!product.available ? `
                  <span class="absolute top-3 left-3 px-2 py-1 text-[0.65rem] font-semibold uppercase tracking-wider bg-[--color-background] text-[--color-text-secondary] rounded">
                    {{ 'products.product.sold_out' | t }}
                  </span>
                ` : ''}
                ${product.compareAtPrice && product.compareAtPrice > product.price ? `
                  <span class="absolute bottom-3 left-3 px-2 py-1 text-[0.65rem] font-semibold uppercase tracking-wider bg-[--color-sale] text-white rounded">
                    {{ 'products.product.on_sale' | t }}
                  </span>
                ` : ''}
              </div>
              <div class="product-card-content flex-1 p-4 bg-[--color-background]">
                ${product.vendor ? `
                  <p class="product-card-vendor text-xs text-[--color-text-secondary] uppercase tracking-wide overflow-hidden">
                    <span class="inline-block">${escapeHtml(product.vendor)}</span>
                  </p>
                ` : ''}
                <h3 class="product-card-title mt-2 text-xs md:text-sm font-semibold tracking-wide text-[--color-text] font-heading">
                  ${escapeHtml(product.title)}
                </h3>
                <div class="product-card-price mt-2 text-sm text-[--color-text-secondary]">
                  ${product.compareAtPrice && product.compareAtPrice > product.price ? `
                    <span class="line-through opacity-60 mr-2">${formatMoney(product.compareAtPrice)}</span>
                    <span class="text-[--color-sale]">${formatMoney(product.price)}</span>
                  ` : formatMoney(product.price)}
                </div>
              </div>
            </a>
          </article>
        `).join('')}
      </div>

      <div class="wishlist-actions">
        <button type="button" class="btn btn--secondary" data-clear-wishlist>
          <i class="ph ph-trash"></i>
          <span>{{ 'products.wishlist.clear_all' | t | default: 'Clear All' }}</span>
        </button>
        <a href="/collections/all" class="btn btn--primary">
          <span>{{ 'products.wishlist.continue_shopping' | t | default: 'Continue Shopping' }}</span>
        </a>
      </div>
    `;

    content.innerHTML = html;

    content.querySelectorAll('[data-remove-wishlist-page]').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        removeProduct(btn.dataset.removeWishlistPage);
      });
    });

    content.querySelector('[data-clear-wishlist]')?.addEventListener('click', () => {
      saveProducts([]);
      render();
      document.dispatchEvent(new CustomEvent('wishlist:cleared'));
    });
  }

  render();

  window.addEventListener('storage', (e) => {
    if (e.key === STORAGE_KEY) {
      render();
    }
  });

  function handleExternalChange() {
    if (!isRendering) render();
  }
  document.addEventListener('wishlist:added', handleExternalChange);
  document.addEventListener('wishlist:removed', handleExternalChange);
  document.addEventListener('wishlist:cleared', handleExternalChange);
})();

// Title SplitText animation
(function() {
  function initTitleAnimation() {
    const section = document.getElementById('wishlist-section-{{ section.id }}');
    if (!section || section.dataset.wishlistAnimInitialized) return;
    section.dataset.wishlistAnimInitialized = 'true';

    // If animations disabled, show title immediately
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      const title = section.querySelector('[data-wishlist-title]');
      if (title) title.style.opacity = '1';
      return;
    }

    function initAnimation() {
      let gsap = window.gsap;
      if (!gsap && window.pieces && window.pieces.gsap) {
        gsap = window.pieces.gsap;
      }

      let SplitText = window.SplitText;
      if (!SplitText && window.pieces && window.pieces.SplitText) {
        SplitText = window.pieces.SplitText;
      }

      const ScrollTrigger = window.ScrollTrigger || (window.pieces && window.pieces.ScrollTrigger);

      if (!gsap || !SplitText || !ScrollTrigger) {
        setTimeout(initAnimation, 50);
        return;
      }

      const title = section.querySelector('[data-wishlist-title]');
      if (!title) return;

      const split = new SplitText(title, { type: 'lines', linesClass: 'wishlist-title-line' });

      split.lines.forEach(line => {
        const lineWrapper = document.createElement('div');
        lineWrapper.style.overflow = 'hidden';
        lineWrapper.style.display = 'block';
        line.parentNode.insertBefore(lineWrapper, line);
        lineWrapper.appendChild(line);
      });

      gsap.set(split.lines, { yPercent: 120 });

      const scrollStart = window.getScrollStart ? window.getScrollStart('top 70%') : 'top 70%';

      gsap.to(split.lines, {
        yPercent: 0,
        duration: 1.2,
        ease: 'power4.out',
        stagger: 0.1,
        scrollTrigger: {
          trigger: section,
          start: scrollStart,
          once: true,
          onEnter: () => {
            title.style.opacity = '1';
          }
        }
      });
    }

    if (document.readyState === 'complete') {
      initAnimation();
    } else {
      window.addEventListener('load', initAnimation);
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTitleAnimation);
  } else {
    requestAnimationFrame(initTitleAnimation);
  }

  // Re-init on Swup navigation
  if (window.onSwupContentReplaced) {
    window.onSwupContentReplaced('wishlist_title_anim_{{ section.id }}', () => {
      requestAnimationFrame(initTitleAnimation);
    });
  }
})();
</script>

{% schema %}
