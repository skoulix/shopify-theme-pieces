    {
      "name": "t:sections.faq.presets.faq.name",
      "category": "t:sections.faq.presets.faq.category",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "t:sections.faq.presets.faq.blocks.faq_item.0.question",
            "answer": "t:sections.faq.presets.faq.blocks.faq_item.0.answer"
