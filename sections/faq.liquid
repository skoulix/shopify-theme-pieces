      "content": "t:shared.headers.content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "t:sections.faq.settings.label.label",
      "default": "t:sections.faq.settings.label.default"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:shared.settings.title.label",
      "default": "t:sections.faq.settings.title.default"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "t:shared.settings.description.label",
      "default": "t:sections.faq.settings.description.default"
    },
    {
      "type": "header",
      "content": "t:shared.headers.layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:shared.settings.full_width.label",
      "default": false
    },
    {
      "type": "text_alignment",
