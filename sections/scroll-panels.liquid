{
  "name": "t:sections.scroll_panels.name",
  "tag": "section",
  "class": "scroll-panels-section no-header-offset",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.scroll_panels.settings.header__display.content"
    },
    {
      "type": "checkbox",
      "id": "show_numbers",
      "default": true,
      "label": "t:sections.scroll_panels.settings.show_numbers.label"
    },
    {
      "type": "text_alignment",
      "id": "content_alignment",
      "default": "center",
      "label": "t:shared.settings.content_alignment.label"
    },
    {
      "type": "checkbox",
      "id": "show_progress",
      "default": true,
      "label": "t:sections.scroll_panels.settings.show_progress.label"
    },
