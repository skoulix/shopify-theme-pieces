{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .blog-hero-title { font-size: calc(clamp(2.5rem, 10vw, 4.5rem) * var(--heading-font-scale, 1)); letter-spacing: calc(-0.04em + var(--heading-letter-spacing, 0em)); line-height: 0.85; }
  @media (min-width: 1024px) { .blog-hero-title { font-size: calc(clamp(3.5rem, 7vw, 6rem) * var(--heading-font-scale, 1)); } }
  @media (min-width: 1536px) { .blog-hero-title { font-size: calc(clamp(4.5rem, 6vw, 8rem) * var(--heading-font-scale, 1)); } }
  .tween-split-line:nth-child(2) { margin-left: clamp(1.5rem, 8vw, 6rem); }
  .blog-item--featured .blog-item-title { font-size: clamp(1.5rem, 3vw, 2.5rem); line-height: 1.1; letter-spacing: calc(-0.02em + var(--heading-letter-spacing, 0em)); font-weight: 700; }
  .blog-item-author::before { content: ''; display: inline-block; width: 4px; height: 4px; border-radius: 50%; background: var(--color-text-secondary); margin-right: 0.5rem; vertical-align: middle; }
  /* blog-item-image animation handled by TweenManager */
  .blog-item-cta-text-wrapper { overflow: hidden; display: inline-block; }
  .blog-item-cta .blog-item-cta-text { display: inline-block; position: relative; transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
  .blog-item-cta .blog-item-cta-text::after { content: attr(data-hover); position: absolute; left: 0; top: 100%; white-space: nowrap; }
  .blog-item-cta:hover .blog-item-cta-text { transform: translateY(-100%); }
</style>

<section class="blog-wrapper py-[--page-vertical-padding]" data-blog-wrapper>
  <div class="mb-12 lg:mb-16" data-tween-group="blog-header-{{ section.id }}">
    <div class="{{ container_class }}">
      <h1 class="blog-hero-title font-bold text-[--color-text] font-heading" data-tween data-tween-type="split-text">
        {{ blog.title }}
      </h1>

      {% if section.settings.show_article_count %}
        <p class="page-header-subtitle mt-6">
          <span class="page-header-subtitle-line" data-subtitle-line></span>
          <span class="overflow-hidden"><span class="inline-block" data-subtitle-text>{{ blog.articles_count }} {{ blog.articles_count | pluralize: 'Article', 'Articles' }}</span></span>
        </p>
      {% endif %}
    </div>
  </div>

  {% paginate blog.articles by section.settings.articles_per_page %}
    <div class="{{ container_class }}">
      <div class="grid gap-12 md:grid-cols-2 md:gap-8 lg:grid-cols-3 lg:gap-10" data-blog-grid>
        {% for article in blog.articles %}
          {%- assign is_featured = false -%}
          {%- if forloop.first and section.settings.feature_first -%}
            {%- assign is_featured = true -%}
          {%- endif -%}
          <article
            class="blog-item flex flex-col bg-[--color-background-secondary] rounded-[--card-radius] overflow-hidden border-[length:var(--card-border-width)] border-solid border-[--color-border] shadow-[--card-shadow]{% if is_featured %} blog-item--featured col-span-full lg:grid lg:grid-cols-2 lg:gap-16 lg:items-stretch{% endif %}"
            data-blog-item="{{ forloop.index0 }}"
            data-article-url="{{ article.url }}"
          >
            <a href="{{ article.url }}" class="blog-item-image block aspect-[16/10] overflow-hidden{% if is_featured %} aspect-[16/9] lg:aspect-auto lg:h-full{% endif %}" aria-label="{{ article.title }}" data-tween data-tween-type="clip-right">
              {% if article.image %}
                {{ article.image | image_url: width: 1200 | image_tag:
                  class: 'w-full h-full object-cover transition-transform duration-700 ease-out hover:scale-105',
                  loading: 'lazy',
                  decoding: 'async',
                  sizes: '(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw',
                  widths: '400, 600, 800, 1200',
                  alt: article.image.alt | default: article.title
                }}
              {% else %}
                <div class="w-full h-full flex items-center justify-center bg-[--color-background-secondary]">
                  <i class="ph ph-article text-5xl text-[--color-text-secondary] opacity-30"></i>
                </div>
              {% endif %}
            </a>

            <div class="p-6 flex flex-col flex-1{% if is_featured %} lg:py-8 lg:pr-8 lg:pl-0 lg:justify-center{% endif %}" data-tween data-tween-type="fade-up">
              {% if article.tags.size > 0 %}
                <p class="blog-item-category text-[0.8125rem] font-semibold uppercase tracking-[0.15em] text-[--color-text-secondary] mb-3 overflow-hidden">
                  <span class="inline-block">{{ article.tags.first }}</span>
                </p>
              {% endif %}

              <h2 class="blog-item-title text-lg font-semibold leading-tight text-[--color-text] font-heading">
                <a href="{{ article.url }}" class="hover:text-[--color-primary] transition-colors">
                  {%- assign title_words = article.title | split: ' ' -%}
                  {%- for word in title_words -%}
                    <span class="overflow-hidden inline-block"><span class="inline-block">{{ word }}</span></span>{% unless forloop.last %} {% endunless %}
                  {%- endfor -%}
                </a>
              </h2>

              {% if section.settings.show_excerpt %}
                <p class="blog-item-excerpt mt-3 text-sm leading-relaxed text-[--color-text-secondary] line-clamp-3{% if is_featured %} lg:text-[0.9375rem] lg:line-clamp-6{% endif %}">
                  {{ article.excerpt_or_content | strip_html | truncate: 160 }}
                </p>
              {% endif %}

              <div class="blog-item-meta mt-4 text-xs text-[--color-text-secondary] overflow-hidden">
                <span class="inline-block">
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: '%b %d, %Y' }}
                  </time>
                </span>
                {% if section.settings.show_author %}
                  <span class="blog-item-author inline-block">{{ article.author }}</span>
                {% endif %}
              </div>

              <a href="{{ article.url }}" class="blog-item-cta inline-flex items-center gap-2 mt-auto pt-4 text-sm font-semibold tracking-widest text-[--color-text] uppercase">
                <span class="blog-item-cta-text-wrapper"><span class="blog-item-cta-text" data-hover="{{ 'blog.read_article' | t }}">{{ 'blog.read_article' | t }}</span></span>
                <span class="sr-only">: {{ article.title }}</span>
                <i class="ph ph-arrow-right" aria-hidden="true"></i>
              </a>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>

    {% if paginate.pages > 1 %}
      <nav class="{{ container_class }} flex items-center justify-center gap-2 mt-12">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="w-10 h-10 flex items-center justify-center rounded-full border border-[--color-border] text-[--color-text] hover:bg-[--color-background-secondary] transition-colors" aria-label="{{ 'accessibility.previous_page' | t }}">
            <i class="ph ph-arrow-left"></i>
          </a>
        {% endif %}

        {% for part in paginate.parts %}
          {% if part.is_link %}
            <a href="{{ part.url }}" class="w-10 h-10 flex items-center justify-center text-sm text-[--color-text-secondary] hover:text-[--color-text] transition-colors">{{ part.title }}</a>
          {% else %}
            {% if part.title == paginate.current_page %}
              <span class="w-10 h-10 flex items-center justify-center text-sm font-semibold text-[--color-text] bg-[--color-background-secondary] rounded-full">{{ part.title }}</span>
            {% else %}
              <span class="w-10 h-10 flex items-center justify-center text-sm text-[--color-text-secondary]">{{ part.title }}</span>
            {% endif %}
          {% endif %}
        {% endfor %}

        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="w-10 h-10 flex items-center justify-center rounded-full border border-[--color-border] text-[--color-text] hover:bg-[--color-background-secondary] transition-colors" aria-label="{{ 'accessibility.next_page' | t }}">
            <i class="ph ph-arrow-right"></i>
          </a>
        {% endif %}
      </nav>
    {% endif %}
  {% endpaginate %}
</section>

<script>
(function() {
  if (document.documentElement.classList.contains('animations-disabled')) return;

  const wrapper = document.querySelector('[data-blog-wrapper]');
  if (!wrapper) return;

  const initAnimation = () => {
    if (typeof gsap === 'undefined') {
      requestAnimationFrame(initAnimation);
      return;
    }

    const tl = gsap.timeline();

    // Subtitle line draw animation
    const subtitleLine = wrapper.querySelector('[data-subtitle-line]');
    if (subtitleLine) {
      gsap.set(subtitleLine, { scaleX: 0, transformOrigin: 'left center' });
      tl.to(subtitleLine, {
        scaleX: 1,
        duration: 0.8,
        ease: 'power3.out'
      }, 0.4);
    }

    // Subtitle text reveal
    const subtitleText = wrapper.querySelector('[data-subtitle-text]');
    if (subtitleText) {
      gsap.set(subtitleText, { yPercent: 120 });
      tl.to(subtitleText, {
        yPercent: 0,
        duration: 0.8,
        ease: 'power4.out'
      }, 0.6);
    }
  };

  initAnimation();
})();
</script>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width"
    },
    {
      "type": "range",
      "id": "articles_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Articles per page"
    },
    {
      "type": "checkbox",
      "id": "feature_first",
      "default": true,
      "label": "Feature first article"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "default": true,
      "label": "Show excerpt"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "show_article_count",
      "default": true,
      "label": "Show article count"
    }
  ]
}
{% endschema %}
