{%- comment -%}
  Blog Section - Modern Editorial Grid Layout
  Awwwards-style design with creative typography and animations
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  /* Blog Hero Header */
  .blog-hero {
    padding: 8rem 0 4rem;
    position: relative;
    overflow: hidden;
  }

  .blog-hero-title {
    font-size: clamp(2.5rem, 10vw, 4.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.04em;
    line-height: 0.85;
    color: var(--color-text);
  }

  @media (min-width: 1024px) {
    .blog-hero-title {
      font-size: clamp(3.5rem, 7vw, 6rem);
    }
  }

  @media (min-width: 1536px) {
    .blog-hero-title {
      font-size: clamp(4.5rem, 6vw, 8rem);
    }
  }

  .blog-hero-title-line {
    display: block;
    overflow: hidden;
  }

  .blog-hero-title-line:nth-child(2) {
    margin-left: clamp(1.5rem, 8vw, 6rem);
  }

  /* Blog Grid - Editorial Layout */
  .blog-grid {
    display: grid;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  /* Featured Article - spans full width */
  .blog-item--featured {
    grid-column: 1 / -1;
  }

  /* Blog Item - card styles use CSS vars for theme compatibility */
  .blog-item {
    position: relative;
  }

  .blog-item-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16 / 10;
    background: var(--color-background-secondary);
  }

  .blog-item--featured .blog-item-image {
    aspect-ratio: 16 / 9;
  }

  @media (min-width: 1024px) {
    .blog-item--featured .blog-item-image {
      aspect-ratio: unset;
    }
  }

  .blog-item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-item:hover .blog-item-image img {
    transform: scale(1.05);
  }

  /* Image reveal animation */
  .blog-item-image {
    clip-path: inset(0 100% 0 0);
  }


  .blog-item-category {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
  }

  .blog-item-title {
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--color-text);
    margin-bottom: 0.75rem;
  }

  .blog-item--featured .blog-item-title {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 700;
    line-height: 1.1;
  }


  .blog-item-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 1.5rem;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .blog-item-date {
    font-weight: 500;
  }

  .blog-item-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .blog-item-author::before {
    content: '';
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--color-text-secondary);
  }

  /* Pagination */
  .blog-pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 4rem 0;
  }

  .blog-pagination-item {
    min-width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text);
    border: 1px solid transparent;
    transition: all 0.3s ease;
  }

  .blog-pagination-item:hover {
    border-color: var(--color-border);
  }

  .blog-pagination-item.is-active {
    background: var(--color-primary);
    color: var(--color-primary-contrast);
  }

  .blog-pagination-arrow {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }

  .blog-pagination-arrow:hover {
    background: var(--color-primary);
    color: var(--color-primary-contrast);
    border-color: var(--color-primary);
  }

  /* Loading state */
  .blog-wrapper.is-loading .blog-item-image {
    clip-path: inset(0 100% 0 0);
  }
</style>

<section class="blog-wrapper is-loading" data-blog-wrapper>
  {%- comment -%} Hero Header {%- endcomment -%}
  <div class="blog-hero">
    <div class="{{ container_class }}">
      <h1 class="blog-hero-title">
        {%- assign title_words = blog.title | split: ' ' -%}
        {%- for word in title_words -%}
          <span class="blog-hero-title-line">
            <span class="inline-block">{{ word }}</span>
          </span>
        {%- endfor -%}
      </h1>

      {% if section.settings.show_article_count %}
        <p class="page-header-subtitle">
          <span class="page-header-subtitle-line" data-subtitle-line></span>
          <span class="overflow-hidden"><span class="inline-block" data-subtitle-text>{{ blog.articles_count }} {{ blog.articles_count | pluralize: 'Article', 'Articles' }}</span></span>
        </p>
      {% endif %}
    </div>
  </div>

  {%- comment -%} Articles Grid {%- endcomment -%}
  {% paginate blog.articles by section.settings.articles_per_page %}
    <div class="{{ container_class }} pb-8">
      <div class="blog-grid" data-blog-grid>
        {% for article in blog.articles %}
          {%- assign is_featured = false -%}
          {%- if forloop.first and section.settings.feature_first -%}
            {%- assign is_featured = true -%}
          {%- endif -%}
          <article
            class="blog-item bg-[--color-background-secondary] rounded-[--card-radius] overflow-hidden{% if is_featured %} blog-item--featured lg:grid lg:grid-cols-2 lg:gap-16 lg:items-stretch{% endif %}"
            data-blog-item="{{ forloop.index0 }}"
            data-article-url="{{ article.url }}"
          >
            <a href="{{ article.url }}" class="blog-item-image block{% if is_featured %} lg:h-full{% endif %}">
              {% if article.image %}
                {{ article.image | image_url: width: 1200 | image_tag:
                  class: 'w-full h-full object-cover',
                  loading: forloop.first | default: 'lazy',
                  sizes: '(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw',
                  widths: '400, 600, 800, 1200'
                }}
              {% else %}
                <div class="w-full h-full flex items-center justify-center">
                  <i class="ph ph-article text-5xl text-gray-300"></i>
                </div>
              {% endif %}
            </a>

            <div class="blog-item-content p-6{% if is_featured %} lg:py-8 lg:pr-8 lg:pl-0 lg:flex lg:flex-col lg:justify-center{% endif %}">
              {% if article.tags.size > 0 %}
                <p class="blog-item-category overflow-hidden">
                  <span class="inline-block">{{ article.tags.first }}</span>
                </p>
              {% endif %}

              <h2 class="blog-item-title">
                <a href="{{ article.url }}">
                  {%- assign title_words = article.title | split: ' ' -%}
                  {%- for word in title_words -%}
                    <span class="overflow-hidden inline-block"><span class="inline-block">{{ word }}</span></span>{% unless forloop.last %} {% endunless %}
                  {%- endfor -%}
                </a>
              </h2>

              {% if section.settings.show_excerpt %}
                <p class="blog-item-excerpt text-sm leading-relaxed text-[--color-text-secondary] line-clamp-3{% if is_featured %} lg:text-[0.9375rem] lg:line-clamp-6{% endif %}">
                  {{ article.excerpt_or_content | strip_html | truncate: 160 }}
                </p>
              {% endif %}

              <div class="blog-item-meta overflow-hidden">
                <span class="blog-item-date inline-block">
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: '%b %d, %Y' }}
                  </time>
                </span>
                {% if section.settings.show_author %}
                  <span class="blog-item-author inline-block">{{ article.author }}</span>
                {% endif %}
              </div>

              <a href="{{ article.url }}" class="text-hover-reveal inline-flex items-center gap-2 mt-6 text-xs font-semibold uppercase tracking-widest text-[--color-text]">
                <span data-hover="Read Article">Read Article</span>
                <i class="ph ph-arrow-right"></i>
              </a>
            </div>
          </article>
        {% endfor %}
      </div>
    </div>

    {%- comment -%} Pagination {%- endcomment -%}
    {% if paginate.pages > 1 %}
      <nav class="blog-pagination {{ container_class }}">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="blog-pagination-arrow" aria-label="Previous page">
            <i class="ph ph-arrow-left"></i>
          </a>
        {% endif %}

        {% for part in paginate.parts %}
          {% if part.is_link %}
            <a href="{{ part.url }}" class="blog-pagination-item">{{ part.title }}</a>
          {% else %}
            {% if part.title == paginate.current_page %}
              <span class="blog-pagination-item is-active">{{ part.title }}</span>
            {% else %}
              <span class="blog-pagination-item">{{ part.title }}</span>
            {% endif %}
          {% endif %}
        {% endfor %}

        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="blog-pagination-arrow" aria-label="Next page">
            <i class="ph ph-arrow-right"></i>
          </a>
        {% endif %}
      </nav>
    {% endif %}
  {% endpaginate %}
</section>

<script>
/**
 * Blog Grid Animation
 * Awwwards-style reveal with GSAP
 */
(function() {
  function initBlogAnimation() {
    const wrapper = document.querySelector('[data-blog-wrapper]');
    if (!wrapper) return;
    if (wrapper.dataset.blogAnimInitialized) return;

    let gsap = window.gsap;
    if (!gsap && window.pieces && window.pieces.gsap) {
      gsap = window.pieces.gsap;
    }

    if (!gsap) {
      setTimeout(initBlogAnimation, 50);
      return;
    }

    wrapper.dataset.blogAnimInitialized = 'true';

    const heroTitle = wrapper.querySelectorAll('.blog-hero-title-line > span');
    const subtitleLine = wrapper.querySelector('[data-subtitle-line]');
    const subtitleText = wrapper.querySelector('[data-subtitle-text]');
    const blogItems = wrapper.querySelectorAll('[data-blog-item]');

    // Set initial states
    if (heroTitle.length) {
      gsap.set(heroTitle, { yPercent: 100 });
    }
    if (subtitleLine) {
      gsap.set(subtitleLine, { scaleX: 0 });
    }
    if (subtitleText) {
      gsap.set(subtitleText, { yPercent: 100 });
    }

    blogItems.forEach(item => {
      const image = item.querySelector('.blog-item-image');
      const category = item.querySelector('.blog-item-category span');
      const titleSpans = item.querySelectorAll('.blog-item-title .overflow-hidden span');
      const excerpt = item.querySelector('.blog-item-excerpt');
      const meta = item.querySelector('.blog-item-meta');
      const readLink = item.querySelector('.text-hover-reveal');

      if (category) gsap.set(category, { yPercent: 100 });
      if (titleSpans.length) gsap.set(titleSpans, { yPercent: 100 });
      if (excerpt) gsap.set(excerpt, { opacity: 0, y: 20 });
      if (meta) gsap.set(meta.querySelectorAll('.inline-block'), { yPercent: 100 });
      if (readLink) gsap.set(readLink, { opacity: 0, y: 10 });
    });

    // Create intro timeline
    const tl = gsap.timeline({
      onComplete: () => wrapper.classList.remove('is-loading')
    });

    // Animate hero title
    if (heroTitle.length) {
      tl.to(heroTitle, {
        yPercent: 0,
        duration: 1.2,
        ease: 'power4.out',
        stagger: 0.1
      }, 0);
    }

    // Animate subtitle line (draw from left)
    if (subtitleLine) {
      tl.to(subtitleLine, {
        scaleX: 1,
        duration: 0.8,
        ease: 'power3.out'
      }, 0.4);
    }

    // Animate subtitle text
    if (subtitleText) {
      tl.to(subtitleText, {
        yPercent: 0,
        duration: 0.8,
        ease: 'power4.out'
      }, 0.6);
    }

    // Animate blog items with stagger
    blogItems.forEach((item, index) => {
      const image = item.querySelector('.blog-item-image');
      const category = item.querySelector('.blog-item-category span');
      const titleSpans = item.querySelectorAll('.blog-item-title .overflow-hidden span');
      const excerpt = item.querySelector('.blog-item-excerpt');
      const meta = item.querySelector('.blog-item-meta');
      const readLink = item.querySelector('.text-hover-reveal');

      const delay = 0.5 + index * 0.1;

      // Image reveal
      tl.to(image, {
        clipPath: 'inset(0 0% 0 0)',
        duration: 1.6,
        ease: 'expo.inOut'
      }, delay);

      // Category
      if (category) {
        tl.to(category, {
          yPercent: 0,
          duration: 0.6,
          ease: 'power4.out'
        }, delay + 0.2);
      }

      // Title
      if (titleSpans.length) {
        tl.to(titleSpans, {
          yPercent: 0,
          duration: 0.8,
          ease: 'power4.out',
          stagger: 0.03
        }, delay + 0.25);
      }

      // Excerpt
      if (excerpt) {
        tl.to(excerpt, {
          opacity: 1,
          y: 0,
          duration: 0.6,
          ease: 'power3.out'
        }, delay + 0.35);
      }

      // Meta
      if (meta) {
        tl.to(meta.querySelectorAll('.inline-block'), {
          yPercent: 0,
          duration: 0.6,
          ease: 'power4.out',
          stagger: 0.05
        }, delay + 0.4);
      }

      // Read link
      if (readLink) {
        tl.to(readLink, {
          opacity: 1,
          y: 0,
          duration: 0.5,
          ease: 'power3.out'
        }, delay + 0.5);
      }
    });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBlogAnimation);
  } else {
    initBlogAnimation();
  }

  // Reinitialize after Swup
  window.addEventListener('swup:contentReplaced', () => {
    requestAnimationFrame(initBlogAnimation);
  });
})();
</script>

{% schema %}
{
  "name": "Blog",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width"
    },
    {
      "type": "range",
      "id": "articles_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Articles per page"
    },
    {
      "type": "checkbox",
      "id": "feature_first",
      "default": true,
      "label": "Feature first article"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "default": true,
      "label": "Show excerpt"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "show_article_count",
      "default": true,
      "label": "Show article count"
    }
  ]
}
{% endschema %}
