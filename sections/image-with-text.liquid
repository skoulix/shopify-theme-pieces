{%- comment -%}
  Image with Text Section - Tailwind Version
  Modern two-column layout with image and content
{%- endcomment -%}

{%- liquid
  assign image_position = section.settings.layout
  assign content_alignment = section.settings.desktop_content_alignment
  assign mobile_alignment = section.settings.mobile_content_alignment
  assign content_position = section.settings.desktop_content_position
-%}

<section class="py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      {%- comment -%} Image {%- endcomment -%}
      <div class="{% if image_position == 'text_first' %}lg:order-2{% endif %}">
        <div class="relative rounded-xl overflow-hidden bg-neutral-100
          {% if section.settings.height == 'small' %}aspect-[4/3]
          {% elsif section.settings.height == 'medium' %}aspect-square
          {% elsif section.settings.height == 'large' %}aspect-[3/4]
          {% endif %}">
          {%- if section.settings.image != blank -%}
            {{
              section.settings.image
              | image_url: width: 1200
              | image_tag:
                class: 'w-full h-full object-cover',
                loading: 'lazy',
                widths: '400, 600, 800, 1000, 1200'
            }}
          {%- else -%}
            <div class="w-full h-full min-h-[300px] flex items-center justify-center text-neutral-400">
              {%- render 'icon', name: 'image', size: '64' -%}
            </div>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Content {%- endcomment -%}
      <div class="{% if image_position == 'text_first' %}lg:order-1{% endif %}
        {% if content_position == 'top' %}lg:self-start
        {% elsif content_position == 'bottom' %}lg:self-end
        {% endif %}
        {% if content_alignment == 'center' %}lg:text-center
        {% elsif content_alignment == 'right' %}lg:text-right
        {% endif %}
        {% if mobile_alignment == 'center' %}text-center lg:text-{{ content_alignment }}
        {% elsif mobile_alignment == 'right' %}text-right lg:text-{{ content_alignment }}
        {% else %}text-left lg:text-{{ content_alignment }}
        {% endif %}">

        <div class="space-y-4 lg:space-y-6">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'caption' -%}
                <p
                  class="text-sm font-medium uppercase tracking-wider text-neutral-500"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.caption | escape }}
                </p>

              {%- when 'heading' -%}
                <h2
                  class="text-2xl lg:text-4xl font-semibold text-neutral-900"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>

              {%- when 'text' -%}
                <div
                  class="text-neutral-600 prose prose-neutral max-w-none"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.text }}
                </div>

              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="pt-2" {{ block.shopify_attributes }}>
                    <a
                      {% if block.settings.button_link != blank %}
                        href="{{ block.settings.button_link }}"
                      {% else %}
                        role="link" aria-disabled="true"
                      {% endif %}
                      class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium rounded-lg transition-colors
                        {% if block.settings.button_style_secondary %}
                          bg-white text-neutral-900 border border-neutral-300 hover:bg-neutral-50
                        {% else %}
                          bg-neutral-900 text-white hover:bg-neutral-800
                        {% endif %}"
                    >
                      {{ block.settings.button_label | escape }}
                      {%- render 'icon', name: 'arrow-right', size: '16' -%}
                    </a>
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
