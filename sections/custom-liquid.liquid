{%- comment -%}
  Custom Liquid Section
  Allows merchants to add custom Liquid code anywhere in their theme
  Required for Shopify Theme Store submission
{%- endcomment -%}

{%- liquid
  capture container_class
    render 'container-class', full_width: section.settings.full_width, full_class: 'container-fluid'
  endcapture
-%}

<div class="custom-liquid-section section-padding{% unless section.settings.padding == 'default' %}-{{ section.settings.padding }}{% endunless %}">
  <div class="{{ container_class }}">
    {{ section.settings.liquid }}
  </div>
</div>

{% schema %}
  {
    "name": "Custom Liquid",
    "tag": "section",
    "class": "section-custom-liquid",
    "settings": [
      {
        "type": "liquid",
        "id": "liquid",
        "label": "Liquid",
        "info": "Add custom Liquid code. [Learn more](https://shopify.dev/docs/api/liquid)"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": false
      },
      {
        "type": "select",
        "id": "padding",
        "label": "Section padding",
        "info": "Default padding is set in global theme settings",
        "default": "default",
        "options": [
          { "value": "default", "label": "Default" },
          { "value": "small", "label": "Small" },
          { "value": "large", "label": "Large" },
          { "value": "none", "label": "None" }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Liquid",
        "category": "Text & content"
      }
    ],
    "disabled_on": {
      "groups": ["header", "footer"]
    }
    }
{% endschema %}