{%- comment -%}
  Login Page - Tailwind Version
  Modern, minimal design with clean form styling
{%- endcomment -%}

{%- if section.settings.enable_shop_login_button == false -%}
  {%- assign hide_shop_login_button = true -%}
{%- endif -%}

<div class="min-h-[60vh] flex items-center justify-center py-12 lg:py-16 px-4">
  <div class="w-full max-w-md">
    {%- comment -%} Password Recovery Form {%- endcomment -%}
    <div id="recover" class="hidden target:block" tabindex="-1">
      <h1 class="text-2xl lg:text-3xl font-semibold text-neutral-900 text-center mb-2">
        {{ 'customer.recover_password.title' | t }}
      </h1>
      <p class="text-neutral-600 text-center mb-8">
        {{ 'customer.recover_password.subtext' | t }}
      </p>

      {%- form 'recover_customer_password' -%}
        {% assign recover_success = form.posted_successfully? %}

        <div class="space-y-4">
          <div>
            <label for="RecoverEmail" class="block text-sm font-medium text-neutral-700 mb-1">
              {{ 'customer.login_page.email' | t }}
            </label>
            <input
              type="email"
              name="email"
              id="RecoverEmail"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors %} border-red-500{% endif %}"
              placeholder="{{ 'customer.login_page.email' | t }}"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="RecoverEmail-email-error"
                autofocus
              {% endif %}
            >
            {%- if form.errors -%}
              <p id="RecoverEmail-email-error" class="mt-2 flex items-center gap-1.5 text-sm text-red-600">
                {%- render 'icon', name: 'warning', size: '16' -%}
                {{ form.errors.messages.form }}
              </p>
            {%- endif -%}
          </div>

          <button
            type="submit"
            class="w-full py-3 px-6 bg-neutral-900 text-white text-base font-medium rounded-lg hover:bg-neutral-800 transition-colors"
          >
            {{ 'customer.login_page.submit' | t }}
          </button>

          <a
            href="#login"
            class="block text-center text-sm text-neutral-600 hover:text-neutral-900 transition-colors"
          >
            {{ 'customer.login_page.cancel' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>

    {%- comment -%} Login Form {%- endcomment -%}
    <div id="login" class="target:hidden" tabindex="-1">
      <h1 class="text-2xl lg:text-3xl font-semibold text-neutral-900 text-center mb-8">
        {{ 'customer.login_page.title' | t }}
      </h1>

      {%- if recover_success == true -%}
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center gap-2 text-green-700" tabindex="-1" autofocus>
          {%- render 'icon', name: 'check-circle', size: '20' -%}
          <span class="text-sm">{{ 'customer.recover_password.success' | t }}</span>
        </div>
      {%- endif -%}

      {%- form 'customer_login', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg" tabindex="-1" autofocus>
            <div class="flex items-center gap-2 text-red-700 mb-2">
              {%- render 'icon', name: 'warning', size: '20' -%}
              <span class="sr-only">{{ 'accessibility.error' | t }}</span>
              <span class="font-medium">{{ 'templates.contact.form.error_heading' | t }}</span>
            </div>
            <div class="text-sm text-red-600">
              {{ form.errors | default_errors }}
            </div>
          </div>
        {%- endif -%}

        {%- comment -%} Shop Login Button {%- endcomment -%}
        {%- if shop.features.login_with_shop_classic_customer_accounts? -%}
          <div class="mb-6">
            {{ shop | login_button: hide_button: hide_shop_login_button }}

            {%- unless hide_shop_login_button -%}
              <div class="relative my-6">
                <div class="absolute inset-0 flex items-center">
                  <div class="w-full border-t border-neutral-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                  <span class="px-4 bg-white text-neutral-500">
                    {{ 'customer.login_page.alternate_provider_separator' | t }}
                  </span>
                </div>
              </div>
            {%- endunless -%}
          </div>
        {%- endif -%}

        <div class="space-y-4">
          <div>
            <label for="CustomerEmail" class="block text-sm font-medium text-neutral-700 mb-1">
              {{ 'customer.login_page.email' | t }}
            </label>
            <input
              type="email"
              name="customer[email]"
              id="CustomerEmail"
              autocomplete="email"
              autocorrect="off"
              autocapitalize="off"
              class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors contains 'form' %} border-red-500{% endif %}"
              placeholder="{{ 'customer.login_page.email' | t }}"
              {% if form.errors contains 'form' %}aria-invalid="true"{% endif %}
            >
          </div>

          {%- if form.password_needed -%}
            <div>
              <label for="CustomerPassword" class="block text-sm font-medium text-neutral-700 mb-1">
                {{ 'customer.login_page.password' | t }}
              </label>
              <input
                type="password"
                name="customer[password]"
                id="CustomerPassword"
                autocomplete="current-password"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors contains 'form' %} border-red-500{% endif %}"
                placeholder="{{ 'customer.login_page.password' | t }}"
                {% if form.errors contains 'form' %}aria-invalid="true"{% endif %}
              >
            </div>

            <div class="text-right">
              <a href="#recover" class="text-sm text-neutral-600 hover:text-neutral-900 underline transition-colors">
                {{ 'customer.login_page.forgot_password' | t }}
              </a>
            </div>
          {%- endif -%}

          <button
            type="submit"
            class="w-full py-3 px-6 bg-neutral-900 text-white text-base font-medium rounded-lg hover:bg-neutral-800 transition-colors"
          >
            {{ 'customer.login_page.sign_in' | t }}
          </button>
        </div>

        <p class="mt-6 text-center text-sm text-neutral-600">
          {{ 'customer.login_page.create_account' | t | replace: 'Create account', '<a href="' | append: routes.account_register_url | append: '" class="text-neutral-900 font-medium underline hover:text-neutral-600 transition-colors">Create account</a>' }}
          <a href="{{ routes.account_register_url }}" class="text-neutral-900 font-medium underline hover:text-neutral-600 transition-colors">
            {{ 'customer.login_page.create_account' | t }}
          </a>
        </p>
      {%- endform -%}
    </div>

    {%- comment -%} Guest Checkout {%- endcomment -%}
    {%- if shop.checkout.guest_login -%}
      <div class="mt-8 pt-8 border-t border-neutral-200">
        <h2 class="text-lg font-medium text-neutral-900 text-center mb-4">
          {{ 'customer.login_page.guest_title' | t }}
        </h2>

        {%- form 'guest_login' -%}
          <button
            type="submit"
            class="w-full py-3 px-6 bg-white text-neutral-900 text-base font-medium rounded-lg border border-neutral-300 hover:bg-neutral-50 transition-colors"
          >
            {{ 'customer.login_page.guest_continue' | t }}
          </button>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_shop_login_button",
      "label": "t:sections.main-login.shop_login_button.enable",
      "default": true
    }
  ]
}
{% endschema %}
