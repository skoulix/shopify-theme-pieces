    },
    {
      "type": "header",
      "content": "Social & Payment"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social links",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "grayscale_payment_icons",
      "label": "Grayscale payment icons",
      "default": false,
      "info": "Display payment icons in grayscale for a more minimal look"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#f5f5f5",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#000000",
      "label": "Text color"
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
