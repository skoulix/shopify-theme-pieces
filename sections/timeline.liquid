      "default": "Our Journey",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "title",
      "default": "How We Got Here",
      "label": "Title"
    },
    {
      "type": "text_alignment",
      "id": "header_alignment",
      "default": "center",
      "label": "Header alignment"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "card_radius",
      "min": 0,
      "max": 24,
      "step": 4,
      "default": 8,
      "unit": "px",
      "label": "Image corner radius"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": false,
      "label": "Full width"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "accent_color",
      "default": "#6366f1",
      "label": "Accent color"
    }
  ],
