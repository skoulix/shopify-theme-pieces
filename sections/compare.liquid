{%- comment -%}
  Compare Products Section
  Shows a side-by-side comparison of products stored in localStorage
{%- endcomment -%}

<style>
  .compare-page {
    min-height: 60vh;
    padding: var(--page-vertical-padding) var(--page-padding);
  }
  .compare-page__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .compare-page__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1;
    margin-bottom: 1rem;
  }
  .compare-page__subtitle {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
  }
  .compare-page__empty {
    text-align: center;
    padding: 4rem 0;
  }
  .compare-page__empty-icon {
    font-size: 4rem;
    color: var(--color-text-secondary);
    opacity: 0.3;
    margin-bottom: 1.5rem;
  }
  .compare-page__empty-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .compare-page__empty-text {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .compare-table {
    width: 100%;
    overflow-x: auto;
    margin-bottom: 2rem;
  }
  .compare-table__inner {
    display: grid;
    min-width: 600px;
  }
  .compare-table__row {
    display: contents;
  }
  .compare-table__header-cell {
    padding: 1rem;
    background: var(--color-background-secondary);
    border-bottom: 1px solid var(--color-border);
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    position: sticky;
    left: 0;
  }
  .compare-table__cell {
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
    text-align: center;
  }
  .compare-table__product-image {
    width: 100%;
    max-width: 200px;
    aspect-ratio: 3/4;
    margin: 0 auto 1rem;
    border-radius: var(--card-radius);
    overflow: hidden;
    background: var(--color-background-secondary);
  }
  .compare-table__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .compare-table__product-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .compare-table__product-title a {
    color: inherit;
    text-decoration: none;
  }
  .compare-table__product-title a:hover {
    text-decoration: underline;
  }
  .compare-table__product-price {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  .compare-table__product-price .compare-price {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 0.5rem;
  }
  .compare-table__product-price .sale-price {
    color: var(--color-sale);
  }
  .compare-table__remove {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 1rem;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    background: none;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .compare-table__remove:hover {
    border-color: var(--color-text);
    color: var(--color-text);
  }
  .compare-table__value {
    font-size: 0.875rem;
  }
  .compare-table__value--available {
    color: var(--color-success, #22c55e);
  }
  .compare-table__value--unavailable {
    color: var(--color-error, #ef4444);
  }

  .compare-page__actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>

<div class="compare-page page-container" data-compare-page>
  <header class="compare-page__header">
    <h1 class="compare-page__title font-heading">{{ section.settings.title | default: page.title | default: 'Compare Products' }}</h1>
    <p class="compare-page__subtitle" data-compare-page-count>0 {{ 'products.compare.products' | t | default: 'products' }}</p>
  </header>

  <div data-compare-page-content>
    {%- comment -%} Content rendered via JS {%- endcomment -%}
  </div>
</div>

<script>
(function() {
  const STORAGE_KEY = 'pieces_compare_products';

  const page = document.querySelector('[data-compare-page]');
  const content = document.querySelector('[data-compare-page-content]');
  const countEl = document.querySelector('[data-compare-page-count]');

  if (!page || !content) return;

  function getProducts() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      return stored ? JSON.parse(stored) : [];
    } catch {
      return [];
    }
  }

  function saveProducts(products) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
    } catch {}
  }

  function formatMoney(cents) {
    if (typeof cents === 'string') {
      cents = cents.replace(/[^\d.-]/g, '');
      if (cents.includes('.')) {
        cents = Math.round(parseFloat(cents) * 100);
      } else {
        cents = parseInt(cents, 10);
      }
    }
    cents = cents || 0;

    const moneyFormat = window.themeSettings?.moneyFormat || '${{amount}}';
    const value = cents / 100;
    const amountNoDecimals = Math.floor(value);
    const amountFormatted = value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountWithComma = value.toLocaleString('de-DE', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountNoDecimalsWithComma = amountNoDecimals.toLocaleString('de-DE');
    const amountWithApostrophe = value.toLocaleString('de-CH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });

    return moneyFormat
      .replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, amountWithComma)
      .replace(/\{\{\s*amount_no_decimals_with_comma_separator\s*\}\}/g, amountNoDecimalsWithComma)
      .replace(/\{\{\s*amount_with_apostrophe_separator\s*\}\}/g, amountWithApostrophe)
      .replace(/\{\{\s*amount_no_decimals\s*\}\}/g, amountNoDecimals.toLocaleString('en-US'))
      .replace(/\{\{\s*amount\s*\}\}/g, amountFormatted);
  }

  function escapeHtml(str) {
    const div = document.createElement('div');
    div.textContent = str || '';
    return div.innerHTML;
  }

  function removeProduct(productId) {
    const products = getProducts().filter(p => String(p.id) !== String(productId));
    saveProducts(products);
    render();
    document.dispatchEvent(new CustomEvent('compare:removed', { detail: { productId } }));
  }

  function render() {
    const products = getProducts();

    // Update count
    if (countEl) {
      countEl.textContent = `${products.length} {{ 'products.compare.products' | t | default: 'products' }}`;
    }

    if (products.length === 0) {
      content.innerHTML = `
        <div class="compare-page__empty">
          <div class="compare-page__empty-icon">
            <i class="ph ph-scales"></i>
          </div>
          <h2 class="compare-page__empty-title">{{ 'products.compare.empty_title' | t | default: 'No products to compare' }}</h2>
          <p class="compare-page__empty-text">{{ 'products.compare.empty_text' | t | default: 'Add products to compare by clicking the compare icon on product cards.' }}</p>
          <a href="/collections/all" class="btn btn--primary">
            <span>{{ 'products.compare.browse_products' | t | default: 'Browse Products' }}</span>
          </a>
        </div>
      `;
      return;
    }

    let html = `
      <div class="compare-table">
        <div class="compare-table__inner" style="grid-template-columns: 150px repeat(${products.length}, 1fr);">
          <!-- Product Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell">{{ 'products.compare.product' | t | default: 'Product' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <div class="compare-table__product-image">
                  ${p.image ? `<img src="${escapeHtml(p.image)}" alt="${escapeHtml(p.title)}" loading="lazy" decoding="async">` : ''}
                </div>
                <h3 class="compare-table__product-title">
                  <a href="${escapeHtml(p.url)}">${escapeHtml(p.title)}</a>
                </h3>
                <div class="compare-table__product-price">
                  ${p.compareAtPrice && p.compareAtPrice > p.price ? `
                    <span class="compare-price">${formatMoney(p.compareAtPrice)}</span>
                    <span class="sale-price">${formatMoney(p.price)}</span>
                  ` : formatMoney(p.price)}
                </div>
                <button type="button" class="compare-table__remove" data-remove-compare="${p.id}">
                  <i class="ph ph-x"></i>
                  {{ 'products.compare.remove' | t | default: 'Remove' }}
                </button>
              </div>
            `).join('')}
          </div>

          <!-- Vendor Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell">{{ 'products.compare.vendor' | t | default: 'Vendor' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(p.vendor) || '-'}</span>
              </div>
            `).join('')}
          </div>

          <!-- Availability Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell">{{ 'products.compare.availability' | t | default: 'Availability' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                ${p.available
                  ? `<span class="compare-table__value compare-table__value--available">{{ 'products.product.in_stock' | t | default: 'In Stock' }}</span>`
                  : `<span class="compare-table__value compare-table__value--unavailable">{{ 'products.product.sold_out' | t | default: 'Sold Out' }}</span>`
                }
              </div>
            `).join('')}
          </div>

          <!-- Add to Cart Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell"></div>
            ${products.map(p => `
              <div class="compare-table__cell">
                ${p.available
                  ? `<a href="${escapeHtml(p.url)}" class="btn btn--primary">{{ 'products.product.view_product' | t | default: 'View Product' }}</a>`
                  : `<button type="button" class="btn btn--secondary" disabled>{{ 'products.product.sold_out' | t | default: 'Sold Out' }}</button>`
                }
              </div>
            `).join('')}
          </div>
        </div>
      </div>

      <div class="compare-page__actions">
        <button type="button" class="btn btn--secondary" data-clear-compare>
          <i class="ph ph-trash"></i>
          <span>{{ 'products.compare.clear_all' | t | default: 'Clear All' }}</span>
        </button>
        <a href="/collections/all" class="btn btn--primary">
          <span>{{ 'products.compare.continue_shopping' | t | default: 'Continue Shopping' }}</span>
        </a>
      </div>
    `;

    content.innerHTML = html;

    // Add event listeners
    content.querySelectorAll('[data-remove-compare]').forEach(btn => {
      btn.addEventListener('click', () => {
        removeProduct(btn.dataset.removeCompare);
      });
    });

    content.querySelector('[data-clear-compare]')?.addEventListener('click', () => {
      saveProducts([]);
      render();
      document.dispatchEvent(new CustomEvent('compare:cleared'));
    });
  }

  // Initial render
  render();

  // Listen for changes
  window.addEventListener('storage', (e) => {
    if (e.key === STORAGE_KEY) {
      render();
    }
  });

  document.addEventListener('compare:added', render);
  document.addEventListener('compare:removed', render);
  document.addEventListener('compare:cleared', render);
})();
</script>

{% schema %}
{
  "name": "Compare Products",
  "tag": "section",
  "class": "section-compare",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Compare Products"
    }
  ],
  "presets": [
    {
      "name": "Compare Products"
    }
  ]
}
{% endschema %}
