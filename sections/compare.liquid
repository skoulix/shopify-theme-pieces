{%- comment -%}
  Compare Section
  Shows a side-by-side comparison of products stored in localStorage
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<section class="compare-section page-padding color-{{ section.settings.color_scheme }}" data-compare-section id="compare-section-{{ section.id }}">
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    <div class="section-header-spacing {% if section.settings.header_alignment == 'center' %}text-center{% elsif section.settings.header_alignment == 'right' %}text-right{% endif %}" data-tween-group="compare-header-{{ section.id }}">
      {% if section.settings.label != blank %}
        <span class="section-label" data-tween data-tween-type="fade-up">
          {{ section.settings.label }}
        </span>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="page-title" data-tween data-tween-type="split-text">
          {{ section.settings.title }}
        </h2>
      {% endif %}

      <p class="page-header-subtitle {% if section.settings.header_alignment == 'center' %}justify-center{% elsif section.settings.header_alignment == 'right' %}justify-end{% endif %}">
        <span class="page-header-subtitle-line" data-subtitle-line></span>
        <span class="overflow-hidden"><span class="inline-block" data-compare-section-count data-subtitle-text>0 {{ 'products.compare.products' | t | default: 'products' }}</span></span>
      </p>

      {% if section.settings.description != blank %}
        <p class="mt-4 text-base lg:text-lg opacity-70 max-w-2xl {% if section.settings.header_alignment == 'center' %}mx-auto{% elsif section.settings.header_alignment == 'right' %}ml-auto{% endif %}" data-tween data-tween-type="fade-up">
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    {%- comment -%} Content rendered via JS {%- endcomment -%}
    <div data-compare-section-content data-tween data-tween-type="fade-up"></div>
  </div>
</section>

<script>
(function() {
  const STORAGE_KEY = 'pieces_compare_products';

  const section = document.getElementById('compare-section-{{ section.id }}');
  const content = section?.querySelector('[data-compare-section-content]');
  const countEl = section?.querySelector('[data-compare-section-count]');

  if (!section || !content) return;

  // Cache for fetched product details (metafields, tags, options)
  const productDetailsCache = new Map();

  function getProducts() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      return stored ? JSON.parse(stored) : [];
    } catch {
      return [];
    }
  }

  function saveProducts(products) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
    } catch {}
  }

  function formatMoney(cents) {
    if (typeof cents === 'string') {
      cents = cents.replace(/[^\d.-]/g, '');
      if (cents.includes('.')) {
        cents = Math.round(parseFloat(cents) * 100);
      } else {
        cents = parseInt(cents, 10);
      }
    }
    cents = cents || 0;

    const moneyFormat = window.themeSettings?.moneyFormat || '${{amount}}';
    const value = cents / 100;
    const amountNoDecimals = Math.floor(value);
    const amountFormatted = value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountWithComma = value.toLocaleString('de-DE', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountNoDecimalsWithComma = amountNoDecimals.toLocaleString('de-DE');
    const amountWithApostrophe = value.toLocaleString('de-CH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });

    return moneyFormat
      .replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, amountWithComma)
      .replace(/\{\{\s*amount_no_decimals_with_comma_separator\s*\}\}/g, amountNoDecimalsWithComma)
      .replace(/\{\{\s*amount_with_apostrophe_separator\s*\}\}/g, amountWithApostrophe)
      .replace(/\{\{\s*amount_no_decimals\s*\}\}/g, amountNoDecimals.toLocaleString('en-US'))
      .replace(/\{\{\s*amount\s*\}\}/g, amountFormatted);
  }

  function escapeHtml(str) {
    const div = document.createElement('div');
    div.textContent = str || '';
    return div.innerHTML;
  }

  /**
   * Fetch product details via Section Rendering API
   * This gives us access to metafields that aren't available via /products/{handle}.json
   */
  async function fetchProductDetails(handle) {
    if (productDetailsCache.has(handle)) {
      return productDetailsCache.get(handle);
    }

    try {
      // Use Section Rendering API to get full product data including metafields
      const res = await fetch(`/products/${handle}?sections=compare-product-data`);
      if (!res.ok) return null;

      const sectionsData = await res.json();
      const sectionHtml = sectionsData['compare-product-data'];

      if (!sectionHtml) return null;

      // Parse the JSON from the section response
      const parser = new DOMParser();
      const doc = parser.parseFromString(sectionHtml, 'text/html');
      const jsonScript = doc.querySelector('[data-compare-product-data]');

      if (!jsonScript) return null;

      const productData = JSON.parse(jsonScript.textContent);
      productDetailsCache.set(handle, productData);
      return productData;
    } catch (err) {
      console.warn('Compare: Failed to fetch product details for', handle, err);
      return null;
    }
  }

  /**
   * Fetch all product details in parallel
   */
  async function fetchAllProductDetails(products) {
    const handles = products.map(p => p.handle).filter(Boolean);
    const results = await Promise.allSettled(handles.map(h => fetchProductDetails(h)));
    const detailsMap = new Map();

    results.forEach((result, index) => {
      if (result.status === 'fulfilled' && result.value) {
        detailsMap.set(handles[index], result.value);
      }
    });

    return detailsMap;
  }

  /**
   * Extract comparable attributes from product details
   * Includes options (Size, Color, Material), weight, and metafields
   */
  function extractComparableAttributes(detailsMap, products) {
    const attributes = {
      options: new Map(),      // option name -> Map of productId -> values
      weight: new Map(),       // productId -> weight string
      metafields: new Map()    // metafield key -> Map of productId -> value
    };

    // Known metafield labels for display
    const metafieldLabels = {
      'material': '{{ "products.compare.material" | t | default: "Material" }}',
      'fabric': '{{ "products.compare.fabric" | t | default: "Fabric" }}',
      'care_guide': '{{ "products.compare.care" | t | default: "Care Instructions" }}',
      'subtitle': '{{ "products.compare.subtitle" | t | default: "Subtitle" }}',
      'rating': '{{ "products.compare.rating" | t | default: "Rating" }}'
    };

    detailsMap.forEach((details, handle) => {
      const product = products.find(p => p.handle === handle);
      if (!product) return;

      const productId = String(product.id);

      // Collect options
      if (details.options) {
        details.options.forEach(opt => {
          if (opt.name && opt.name !== 'Title') {
            if (!attributes.options.has(opt.name)) {
              attributes.options.set(opt.name, new Map());
            }
            attributes.options.get(opt.name).set(productId, opt.values.join(', '));
          }
        });
      }

      // Collect weight from variant data
      if (details.variant && details.variant.weight && details.variant.weight > 0) {
        const weightUnit = details.variant.weight_unit || 'g';
        attributes.weight.set(productId, `${details.variant.weight} ${weightUnit}`);
      }

      // Collect metafields from all namespaces
      if (details.metafields) {
        // Process each namespace
        ['custom', 'descriptors', 'product'].forEach(namespace => {
          const nsData = details.metafields[namespace];
          if (nsData && typeof nsData === 'object') {
            Object.entries(nsData).forEach(([key, value]) => {
              if (value === null || value === undefined || value === '') return;

              // Handle both simple values and {value, type} objects
              const actualValue = typeof value === 'object' && value.value !== undefined
                ? value.value
                : value;

              if (!actualValue || actualValue === '') return;

              // Create a display key
              const displayKey = metafieldLabels[key] || key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());

              if (!attributes.metafields.has(displayKey)) {
                attributes.metafields.set(displayKey, new Map());
              }
              attributes.metafields.get(displayKey).set(productId, String(actualValue));
            });
          }
        });
      }
    });

    return attributes;
  }

  let isRendering = false;

  function removeProduct(productId) {
    const products = getProducts().filter(p => String(p.id) !== String(productId));
    saveProducts(products);
    isRendering = true;
    render();
    isRendering = false;
    document.dispatchEvent(new CustomEvent('compare:removed', { detail: { productId } }));
  }

  async function render() {
    const products = getProducts();

    if (countEl) {
      countEl.textContent = `${products.length} {{ 'products.compare.products' | t | default: 'products' }}`;
    }

    if (products.length === 0) {
      content.innerHTML = `
        <div class="compare-empty">
          <div class="compare-empty__icon">
            <i class="ph ph-scales"></i>
          </div>
          <h2 class="compare-empty__title">{{ 'products.compare.empty_title' | t | default: 'No products to compare' }}</h2>
          <p class="compare-empty__text">{{ 'products.compare.empty_text' | t | default: 'Add products to compare by clicking the compare icon on product cards.' }}</p>
          <a href="/collections/all" class="btn btn--primary">
            <span>{{ 'products.compare.browse_products' | t | default: 'Browse Products' }}</span>
          </a>
        </div>
      `;
      return;
    }

    // Show loading state
    content.innerHTML = `
      <div class="compare-empty">
        <div class="compare-empty__icon">
          <i class="ph ph-spinner animate-spin"></i>
        </div>
        <p class="compare-empty__text">{{ 'products.compare.loading' | t | default: 'Loading comparison data...' }}</p>
      </div>
    `;

    // Fetch additional product details (options, tags, weight)
    const detailsMap = await fetchAllProductDetails(products);
    const attributes = extractComparableAttributes(detailsMap, products);

    // Build options rows HTML
    let optionsRowsHtml = '';
    attributes.options.forEach((productValues, optionName) => {
      optionsRowsHtml += `
        <div class="compare-table__row">
          <div class="compare-table__header-cell text-label-sm">${escapeHtml(optionName)}</div>
          ${products.map(p => {
            const value = productValues.get(String(p.id));
            return `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(value) || '-'}</span>
              </div>
            `;
          }).join('')}
        </div>
      `;
    });

    // Build weight row if any product has weight
    let weightRowHtml = '';
    if (attributes.weight.size > 0) {
      weightRowHtml = `
        <div class="compare-table__row">
          <div class="compare-table__header-cell text-label-sm">{{ 'products.compare.weight' | t | default: 'Weight' }}</div>
          ${products.map(p => {
            const value = attributes.weight.get(String(p.id));
            return `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(value) || '-'}</span>
              </div>
            `;
          }).join('')}
        </div>
      `;
    }

    // Build metafields rows HTML
    let metafieldsRowsHtml = '';
    if (attributes.metafields && attributes.metafields.size > 0) {
      attributes.metafields.forEach((productValues, fieldLabel) => {
        metafieldsRowsHtml += `
          <div class="compare-table__row">
            <div class="compare-table__header-cell text-label-sm">${escapeHtml(fieldLabel)}</div>
            ${products.map(p => {
              const value = productValues.get(String(p.id));
              return `
                <div class="compare-table__cell">
                  <span class="compare-table__value">${escapeHtml(value) || '-'}</span>
                </div>
              `;
            }).join('')}
          </div>
        `;
      });
    }

    let html = `
      <div class="compare-table">
        <div class="compare-table__inner" style="grid-template-columns: 150px repeat(${products.length}, 1fr);">
          <!-- Product Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell text-label-sm">{{ 'products.compare.product' | t | default: 'Product' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <div class="compare-table__product-image">
                  <button type="button" class="compare-table__remove-icon" data-remove-compare="${p.id}" aria-label="{{ 'products.compare.remove' | t | default: 'Remove' }}">
                    <i class="ph ph-x"></i>
                  </button>
                  ${p.image ? `<img src="${escapeHtml(p.image)}" alt="${escapeHtml(p.title)}" loading="lazy" decoding="async">` : ''}
                </div>
                <h3 class="compare-table__product-title">
                  <a href="${escapeHtml(p.url)}">${escapeHtml(p.title)}</a>
                </h3>
                <div class="compare-table__product-price">
                  ${p.compareAtPrice && p.compareAtPrice > p.price ? `
                    <span class="compare-price">${formatMoney(p.compareAtPrice)}</span>
                    <span class="sale-price">${formatMoney(p.price)}</span>
                  ` : formatMoney(p.price)}
                </div>
              </div>
            `).join('')}
          </div>

          <!-- Vendor Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell text-label-sm">{{ 'products.compare.vendor' | t | default: 'Vendor' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(p.vendor) || '-'}</span>
              </div>
            `).join('')}
          </div>

          <!-- Product Type Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell text-label-sm">{{ 'products.compare.type' | t | default: 'Type' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(p.type) || '-'}</span>
              </div>
            `).join('')}
          </div>

          <!-- Dynamic Options Rows (Size, Color, Material, etc.) -->
          ${optionsRowsHtml}

          <!-- Weight Row -->
          ${weightRowHtml}

          <!-- Metafields Rows (Material, Fabric, Care Instructions, etc.) -->
          ${metafieldsRowsHtml}

          <!-- SKU Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell text-label-sm">{{ 'products.compare.sku' | t | default: 'SKU' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(p.sku) || '-'}</span>
              </div>
            `).join('')}
          </div>

          <!-- Availability Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell text-label-sm">{{ 'products.compare.availability' | t | default: 'Availability' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                ${p.available
                  ? `<span class="compare-table__value compare-table__value--available">{{ 'products.product.in_stock' | t | default: 'In Stock' }}</span>`
                  : `<span class="compare-table__value compare-table__value--unavailable">{{ 'products.product.sold_out' | t | default: 'Sold Out' }}</span>`
                }
              </div>
            `).join('')}
          </div>

          <!-- Add to Cart Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell"></div>
            ${products.map(p => `
              <div class="compare-table__cell">
                ${p.available
                  ? `<a href="${escapeHtml(p.url)}" class="btn btn--secondary btn--sm"><span>{{ 'products.product.view_product' | t | default: 'View Product' }}</span></a>`
                  : `<button type="button" class="btn btn--secondary btn--sm" disabled><span>{{ 'products.product.sold_out' | t | default: 'Sold Out' }}</span></button>`
                }
              </div>
            `).join('')}
          </div>
        </div>
      </div>

      <div class="compare-actions">
        <button type="button" class="btn btn--secondary btn--lg" data-clear-compare>
          <i class="ph ph-trash"></i>
          <span>{{ 'products.compare.clear_all' | t | default: 'Clear All' }}</span>
        </button>
        <a href="/collections/all" class="btn btn--primary btn--lg">
          <span>{{ 'products.compare.continue_shopping' | t | default: 'Continue Shopping' }}</span>
        </a>
      </div>
    `;

    content.innerHTML = html;

    content.querySelectorAll('[data-remove-compare]').forEach(btn => {
      btn.addEventListener('click', () => {
        removeProduct(btn.dataset.removeCompare);
      });
    });

    content.querySelector('[data-clear-compare]')?.addEventListener('click', () => {
      saveProducts([]);
      render();
      document.dispatchEvent(new CustomEvent('compare:cleared'));
    });
  }

  render();

  // Animate subtitle line and text
  function initSubtitleAnimation() {
    if (typeof gsap === 'undefined') {
      requestAnimationFrame(initSubtitleAnimation);
      return;
    }

    const subtitleLine = section.querySelector('[data-subtitle-line]');
    const subtitleText = section.querySelector('[data-subtitle-text]');

    if (subtitleLine) {
      gsap.set(subtitleLine, { scaleX: 0, transformOrigin: 'left center' });
      gsap.to(subtitleLine, {
        scaleX: 1,
        duration: 0.8,
        ease: 'power3.out',
        delay: 0.4
      });
    }

    if (subtitleText) {
      gsap.set(subtitleText, { yPercent: 120 });
      gsap.to(subtitleText, {
        yPercent: 0,
        duration: 0.8,
        ease: 'power4.out',
        delay: 0.6
      });
    }
  }

  // Only animate if animations are enabled
  if (typeof window.shouldAnimate === 'function' ? window.shouldAnimate() : true) {
    initSubtitleAnimation();
  }

  window.addEventListener('storage', (e) => {
    if (e.key === STORAGE_KEY) {
      render();
    }
  });

  function handleExternalChange() {
    if (!isRendering) render();
  }
  document.addEventListener('compare:added', handleExternalChange);
  document.addEventListener('compare:removed', handleExternalChange);
  document.addEventListener('compare:cleared', handleExternalChange);
})();

</script>

