{%- comment -%}
  Compare Section
  Shows a side-by-side comparison of products stored in localStorage
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'page-full'
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .compare-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: var(--section-vertical-padding) 0;
    min-height: 60vh;
  }
  .compare-section-{{ section.id }} .compare-title {
    font-size: calc(clamp(2rem, 5vw, 3.5rem) * var(--heading-font-scale, 1));
    letter-spacing: -0.03em;
    line-height: 0.95;
  }
  @media (min-width: 1024px) {
    .compare-section-{{ section.id }} .compare-title {
      font-size: calc(clamp(2.5rem, 4vw, 4rem) * var(--heading-font-scale, 1));
    }
  }

  /* Title line reveal animation */
  .compare-title-line:nth-child(2) { margin-left: clamp(0.5rem, 4vw, 2rem); }

  /* Hide title initially to prevent FOUC before SplitText animation */
  [data-compare-title] { opacity: 0; }
  html.animations-disabled [data-compare-title] { opacity: 1; }
  .compare-section-{{ section.id }} .compare-count {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.6;
  }
  .compare-section-{{ section.id }} .compare-empty {
    text-align: center;
    padding: 4rem 0;
  }
  .compare-section-{{ section.id }} .compare-empty__icon {
    font-size: 4rem;
    opacity: 0.3;
    margin-bottom: 1.5rem;
  }
  .compare-section-{{ section.id }} .compare-empty__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .compare-section-{{ section.id }} .compare-empty__text {
    opacity: 0.7;
    margin-bottom: 1.5rem;
  }
  .compare-section-{{ section.id }} .compare-table {
    width: 100%;
    overflow-x: auto;
    margin-bottom: 2rem;
  }
  .compare-section-{{ section.id }} .compare-table__inner {
    display: grid;
    min-width: 600px;
  }
  .compare-section-{{ section.id }} .compare-table__row {
    display: contents;
  }
  .compare-section-{{ section.id }} .compare-table__header-cell {
    padding: 1rem;
    background: {{ section.settings.background_color }};
    border-bottom: 1px solid {{ section.settings.text_color }}15;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.6;
    position: sticky;
    left: 0;
    z-index: 1;
    vertical-align: middle;
  }
  .compare-section-{{ section.id }} .compare-table__cell {
    padding: 1rem;
    border-bottom: 1px solid {{ section.settings.text_color }}15;
    text-align: center;
  }
  .compare-section-{{ section.id }} .compare-table__product-image {
    width: 100%;
    max-width: 200px;
    aspect-ratio: 3/4;
    margin: 0 auto 1rem;
    border-radius: var(--card-radius);
    overflow: hidden;
    background: {{ section.settings.background_color | color_mix: section.settings.text_color, 5 }};
  }
  .compare-section-{{ section.id }} .compare-table__product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .compare-section-{{ section.id }} .compare-table__product-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .compare-section-{{ section.id }} .compare-table__product-title a {
    color: inherit;
    text-decoration: none;
  }
  .compare-section-{{ section.id }} .compare-table__product-title a:hover {
    text-decoration: underline;
  }
  .compare-section-{{ section.id }} .compare-table__product-price {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  .compare-section-{{ section.id }} .compare-table__product-price .compare-price {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 0.5rem;
  }
  .compare-section-{{ section.id }} .compare-table__product-price .sale-price {
    color: var(--color-sale);
  }
  .compare-section-{{ section.id }} .compare-table__remove {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 1rem;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
    background: none;
    border: 1px solid {{ section.settings.text_color }}30;
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .compare-section-{{ section.id }} .compare-table__remove:hover {
    border-color: {{ section.settings.text_color }};
    opacity: 1;
  }
  .compare-section-{{ section.id }} .compare-table__value {
    font-size: 0.875rem;
  }
  .compare-section-{{ section.id }} .compare-table__value--available {
    color: var(--color-success, #22c55e);
  }
  .compare-section-{{ section.id }} .compare-table__value--unavailable {
    color: var(--color-error, #ef4444);
  }
  /* Reset buttons to use global styles - override section color inheritance */
  .compare-section-{{ section.id }} .btn--secondary {
    color: var(--color-text);
    border-color: var(--color-border);
  }
  .compare-section-{{ section.id }} .btn--secondary::before {
    background: var(--color-text);
  }
  .compare-section-{{ section.id }} .btn--secondary:hover,
  .compare-section-{{ section.id }} .btn--secondary:hover span,
  .compare-section-{{ section.id }} .btn--secondary:hover i {
    color: var(--color-background);
  }
  .compare-section-{{ section.id }} .btn--primary {
    color: var(--color-primary-contrast);
    background: var(--color-primary);
    border-color: var(--color-primary);
  }
  .compare-section-{{ section.id }} .btn--primary::before {
    background: var(--color-primary-contrast);
  }
  .compare-section-{{ section.id }} .btn--primary:hover,
  .compare-section-{{ section.id }} .btn--primary:hover span,
  .compare-section-{{ section.id }} .btn--primary:hover i {
    color: var(--color-primary);
  }
  .compare-section-{{ section.id }} .compare-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>

<section class="compare-section-{{ section.id }}" data-compare-section id="compare-section-{{ section.id }}">
  <div class="{{ container_class }}">
    {%- comment -%} Header {%- endcomment -%}
    <div class="mb-12 lg:mb-16 {% if section.settings.header_alignment == 'center' %}text-center{% elsif section.settings.header_alignment == 'right' %}text-right{% endif %}">
      {% if section.settings.label != blank %}
        <span class="inline-block text-[0.65rem] font-semibold uppercase tracking-[0.2em] opacity-60 mb-4" data-intro>
          {{ section.settings.label }}
        </span>
      {% endif %}

      {% if section.settings.title != blank %}
        <h2 class="compare-title font-bold font-heading" data-compare-title>
          {{ section.settings.title }}
        </h2>
      {% endif %}

      <p class="compare-count mt-4" data-compare-section-count data-intro>0 {{ 'products.compare.products' | t | default: 'products' }}</p>

      {% if section.settings.description != blank %}
        <p class="mt-4 text-base lg:text-lg opacity-70 max-w-2xl {% if section.settings.header_alignment == 'center' %}mx-auto{% elsif section.settings.header_alignment == 'right' %}ml-auto{% endif %}" data-intro>
          {{ section.settings.description }}
        </p>
      {% endif %}
    </div>

    {%- comment -%} Content rendered via JS {%- endcomment -%}
    <div data-compare-section-content data-intro></div>
  </div>
</section>

<script>
(function() {
  const STORAGE_KEY = 'pieces_compare_products';

  const section = document.getElementById('compare-section-{{ section.id }}');
  const content = section?.querySelector('[data-compare-section-content]');
  const countEl = section?.querySelector('[data-compare-section-count]');

  if (!section || !content) return;

  function getProducts() {
    try {
      const stored = localStorage.getItem(STORAGE_KEY);
      return stored ? JSON.parse(stored) : [];
    } catch {
      return [];
    }
  }

  function saveProducts(products) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(products));
    } catch {}
  }

  function formatMoney(cents) {
    if (typeof cents === 'string') {
      cents = cents.replace(/[^\d.-]/g, '');
      if (cents.includes('.')) {
        cents = Math.round(parseFloat(cents) * 100);
      } else {
        cents = parseInt(cents, 10);
      }
    }
    cents = cents || 0;

    const moneyFormat = window.themeSettings?.moneyFormat || '${{amount}}';
    const value = cents / 100;
    const amountNoDecimals = Math.floor(value);
    const amountFormatted = value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountWithComma = value.toLocaleString('de-DE', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    const amountNoDecimalsWithComma = amountNoDecimals.toLocaleString('de-DE');
    const amountWithApostrophe = value.toLocaleString('de-CH', { minimumFractionDigits: 2, maximumFractionDigits: 2 });

    return moneyFormat
      .replace(/\{\{\s*amount_with_comma_separator\s*\}\}/g, amountWithComma)
      .replace(/\{\{\s*amount_no_decimals_with_comma_separator\s*\}\}/g, amountNoDecimalsWithComma)
      .replace(/\{\{\s*amount_with_apostrophe_separator\s*\}\}/g, amountWithApostrophe)
      .replace(/\{\{\s*amount_no_decimals\s*\}\}/g, amountNoDecimals.toLocaleString('en-US'))
      .replace(/\{\{\s*amount\s*\}\}/g, amountFormatted);
  }

  function escapeHtml(str) {
    const div = document.createElement('div');
    div.textContent = str || '';
    return div.innerHTML;
  }

  let isRendering = false;

  function removeProduct(productId) {
    const products = getProducts().filter(p => String(p.id) !== String(productId));
    saveProducts(products);
    isRendering = true;
    render();
    isRendering = false;
    document.dispatchEvent(new CustomEvent('compare:removed', { detail: { productId } }));
  }

  function render() {
    const products = getProducts();

    if (countEl) {
      countEl.textContent = `${products.length} {{ 'products.compare.products' | t | default: 'products' }}`;
    }

    if (products.length === 0) {
      content.innerHTML = `
        <div class="compare-empty">
          <div class="compare-empty__icon">
            <i class="ph ph-scales"></i>
          </div>
          <h2 class="compare-empty__title">{{ 'products.compare.empty_title' | t | default: 'No products to compare' }}</h2>
          <p class="compare-empty__text">{{ 'products.compare.empty_text' | t | default: 'Add products to compare by clicking the compare icon on product cards.' }}</p>
          <a href="/collections/all" class="btn btn--primary">
            <span>{{ 'products.compare.browse_products' | t | default: 'Browse Products' }}</span>
          </a>
        </div>
      `;
      return;
    }

    let html = `
      <div class="compare-table">
        <div class="compare-table__inner" style="grid-template-columns: 150px repeat(${products.length}, 1fr);">
          <!-- Product Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell">{{ 'products.compare.product' | t | default: 'Product' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <div class="compare-table__product-image">
                  ${p.image ? `<img src="${escapeHtml(p.image)}" alt="${escapeHtml(p.title)}" loading="lazy" decoding="async">` : ''}
                </div>
                <h3 class="compare-table__product-title">
                  <a href="${escapeHtml(p.url)}">${escapeHtml(p.title)}</a>
                </h3>
                <div class="compare-table__product-price">
                  ${p.compareAtPrice && p.compareAtPrice > p.price ? `
                    <span class="compare-price">${formatMoney(p.compareAtPrice)}</span>
                    <span class="sale-price">${formatMoney(p.price)}</span>
                  ` : formatMoney(p.price)}
                </div>
                <button type="button" class="compare-table__remove" data-remove-compare="${p.id}">
                  <i class="ph ph-x"></i>
                  {{ 'products.compare.remove' | t | default: 'Remove' }}
                </button>
              </div>
            `).join('')}
          </div>

          <!-- Vendor Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell">{{ 'products.compare.vendor' | t | default: 'Vendor' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                <span class="compare-table__value">${escapeHtml(p.vendor) || '-'}</span>
              </div>
            `).join('')}
          </div>

          <!-- Availability Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell">{{ 'products.compare.availability' | t | default: 'Availability' }}</div>
            ${products.map(p => `
              <div class="compare-table__cell">
                ${p.available
                  ? `<span class="compare-table__value compare-table__value--available">{{ 'products.product.in_stock' | t | default: 'In Stock' }}</span>`
                  : `<span class="compare-table__value compare-table__value--unavailable">{{ 'products.product.sold_out' | t | default: 'Sold Out' }}</span>`
                }
              </div>
            `).join('')}
          </div>

          <!-- Add to Cart Row -->
          <div class="compare-table__row">
            <div class="compare-table__header-cell"></div>
            ${products.map(p => `
              <div class="compare-table__cell">
                ${p.available
                  ? `<a href="${escapeHtml(p.url)}" class="btn btn--secondary btn--sm">{{ 'products.product.view_product' | t | default: 'View Product' }}</a>`
                  : `<button type="button" class="btn btn--secondary btn--sm" disabled>{{ 'products.product.sold_out' | t | default: 'Sold Out' }}</button>`
                }
              </div>
            `).join('')}
          </div>
        </div>
      </div>

      <div class="compare-actions">
        <button type="button" class="btn btn--secondary" data-clear-compare>
          <i class="ph ph-trash"></i>
          <span>{{ 'products.compare.clear_all' | t | default: 'Clear All' }}</span>
        </button>
        <a href="/collections/all" class="btn btn--primary">
          <span>{{ 'products.compare.continue_shopping' | t | default: 'Continue Shopping' }}</span>
        </a>
      </div>
    `;

    content.innerHTML = html;

    content.querySelectorAll('[data-remove-compare]').forEach(btn => {
      btn.addEventListener('click', () => {
        removeProduct(btn.dataset.removeCompare);
      });
    });

    content.querySelector('[data-clear-compare]')?.addEventListener('click', () => {
      saveProducts([]);
      render();
      document.dispatchEvent(new CustomEvent('compare:cleared'));
    });
  }

  render();

  window.addEventListener('storage', (e) => {
    if (e.key === STORAGE_KEY) {
      render();
    }
  });

  function handleExternalChange() {
    if (!isRendering) render();
  }
  document.addEventListener('compare:added', handleExternalChange);
  document.addEventListener('compare:removed', handleExternalChange);
  document.addEventListener('compare:cleared', handleExternalChange);
})();

// Title SplitText animation
(function() {
  function initTitleAnimation() {
    const section = document.getElementById('compare-section-{{ section.id }}');
    if (!section || section.dataset.compareAnimInitialized) return;
    section.dataset.compareAnimInitialized = 'true';

    // If animations disabled, show title immediately
    if (typeof window.shouldAnimate === 'function' && !window.shouldAnimate()) {
      const title = section.querySelector('[data-compare-title]');
      if (title) title.style.opacity = '1';
      return;
    }

    function initAnimation() {
      let gsap = window.gsap;
      if (!gsap && window.pieces && window.pieces.gsap) {
        gsap = window.pieces.gsap;
      }

      let SplitText = window.SplitText;
      if (!SplitText && window.pieces && window.pieces.SplitText) {
        SplitText = window.pieces.SplitText;
      }

      const ScrollTrigger = window.ScrollTrigger || (window.pieces && window.pieces.ScrollTrigger);

      if (!gsap || !SplitText || !ScrollTrigger) {
        setTimeout(initAnimation, 50);
        return;
      }

      const title = section.querySelector('[data-compare-title]');
      if (!title) return;

      const split = new SplitText(title, { type: 'lines', linesClass: 'compare-title-line' });

      split.lines.forEach(line => {
        const lineWrapper = document.createElement('div');
        lineWrapper.style.overflow = 'hidden';
        lineWrapper.style.display = 'block';
        line.parentNode.insertBefore(lineWrapper, line);
        lineWrapper.appendChild(line);
      });

      gsap.set(split.lines, { yPercent: 120 });

      const scrollStart = window.getScrollStart ? window.getScrollStart('top 70%') : 'top 70%';

      gsap.to(split.lines, {
        yPercent: 0,
        duration: 1.2,
        ease: 'power4.out',
        stagger: 0.1,
        scrollTrigger: {
          trigger: section,
          start: scrollStart,
          once: true,
          onEnter: () => {
            title.style.opacity = '1';
          }
        }
      });
    }

    if (document.readyState === 'complete') {
      initAnimation();
    } else {
      window.addEventListener('load', initAnimation);
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTitleAnimation);
  } else {
    requestAnimationFrame(initTitleAnimation);
  }

  // Re-init on Swup navigation
  if (window.onSwupContentReplaced) {
    window.onSwupContentReplaced('compare_title_anim_{{ section.id }}', () => {
      requestAnimationFrame(initTitleAnimation);
    });
  }
})();
</script>

