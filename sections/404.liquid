{%- comment -%}
  404 Section - Simple, clean design with creative background
{%- endcomment -%}

{%- liquid
  capture container_class
    render 'container-class', full_width: section.settings.full_width
  endcapture
-%}

<div class="min-h-screen flex items-center relative overflow-hidden">
  {%- comment -%} Creative Background Text {%- endcomment -%}
  <span class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-[clamp(20rem,50vw,60rem)] font-black tracking-tighter leading-none opacity-[0.03] pointer-events-none select-none whitespace-nowrap text-(--color-text) font-heading">404</span>

  <div class="{{ container_class }} page-padding w-full relative z-10">
    <div class="max-w-4xl mx-auto text-center" data-tween-group="error-content" data-tween-start="top bottom">
      {%- comment -%} Content {%- endcomment -%}
      <h1 class="section-title" data-tween data-tween-type="split-text">
        {{ '404.title' | t }}
      </h1>
      <p class="mt-4 text-lg text-(--color-text-secondary) max-w-md mx-auto" data-tween data-tween-type="fade-up">
        {{ '404.description' | t }}
      </p>

      {%- comment -%} Actions {%- endcomment -%}
      <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4 w-full max-w-xs sm:max-w-none mx-auto" data-tween data-tween-type="fade-up">
        <a href="{{ routes.root_url }}" class="btn btn--primary btn--lg w-full sm:w-auto">
          <i class="ph ph-house"></i>
          <span>{{ '404.back_home' | t }}</span>
        </a>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--secondary btn--lg w-full sm:w-auto">
          <i class="ph ph-storefront"></i>
          <span>{{ '404.browse_products' | t }}</span>
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    }
  ]
}
{% endschema %}
