{%- comment -%}
  404 Section - Skeleton + Tailwind
{%- endcomment -%}

<section class="bg-[--color-background]">
  <div class="page-container section-spacing">
    <div class="text-center">
      <p class="text-base font-semibold text-[--color-primary]">404</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-[--color-text] sm:text-5xl">{{ '404.title' | t }}</h1>
      <p class="mt-6 text-base leading-7 text-[--color-text-secondary]">{{ '404.not_found' | t }}</p>
      <div class="mt-10">
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
          <i class="ph ph-arrow-left"></i>
          <span>{{ '404.back_to_shopping' | t }}</span>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "404",
  "settings": []
}
{% endschema %}
