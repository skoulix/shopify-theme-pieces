{%- comment -%}
  Video Section - Displays a video with optional looping
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign container_class = ''
  else
    assign container_class = 'page-container'
  endif
-%}

<style>
  .video-section-{{ section.id }} {
    background-color: var(--color-background);
    color: var(--color-text);
    {% unless section.settings.remove_padding %}
    padding: var(--section-vertical-padding) 0;
    {% endunless %}
  }

  .video-container-{{ section.id }} {
    position: relative;
    aspect-ratio: {{ section.settings.aspect_ratio }};
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  /* Allow controls to be visible when enabled */
  {% if section.settings.show_controls %}
  .video-container-{{ section.id }} {
    overflow: visible;
  }
  {% endif %}

  .video-container-{{ section.id }} video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .video-placeholder-{{ section.id }} {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #0a0a0a;
    overflow: hidden;
  }

  .video-placeholder-{{ section.id }}::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(120, 119, 198, 0.2), transparent),
      radial-gradient(ellipse 60% 40% at 80% 50%, rgba(255, 119, 198, 0.12), transparent),
      radial-gradient(ellipse 60% 40% at 20% 80%, rgba(120, 200, 255, 0.12), transparent);
  }

  .video-placeholder-pattern-{{ section.id }} {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.06'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    background-size: 60px 60px;
  }

  .video-placeholder-grid-{{ section.id }} {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.04) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 80% 80% at 50% 50%, black, transparent);
  }

  .video-placeholder-glow-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(120, 119, 198, 0.15) 0%, transparent 70%);
    filter: blur(60px);
    animation: video-glow-pulse-{{ section.id }} 4s ease-in-out infinite;
  }

  @keyframes video-glow-pulse-{{ section.id }} {
    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
  }

  .video-placeholder-content-{{ section.id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .video-placeholder-icon-{{ section.id }} {
    position: relative;
    width: 6rem;
    height: 6rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-placeholder-icon-{{ section.id }}::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.02));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255,255,255,0.1);
  }

  .video-placeholder-icon-{{ section.id }}::after {
    content: '';
    position: absolute;
    inset: -20px;
    border-radius: 50%;
    border: 1px dashed rgba(255,255,255,0.1);
    animation: video-spin-{{ section.id }} 20s linear infinite;
  }

  .video-placeholder-icon-{{ section.id }} i {
    position: relative;
    font-size: 1.75rem;
    color: rgba(255, 255, 255, 0.8);
    margin-left: 3px;
    filter: drop-shadow(0 0 20px rgba(255,255,255,0.3));
  }

  .video-placeholder-text-{{ section.id }} {
    text-align: center;
  }

  .video-placeholder-text-{{ section.id }} p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    {% if settings.headings_uppercase %}text-transform: uppercase;{% endif %}
  }

  .video-placeholder-bars-{{ section.id }} {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    gap: 3px;
    height: 20px;
    margin-top: 1rem;
  }

  .video-placeholder-bars-{{ section.id }} span {
    width: 3px;
    background: linear-gradient(to top, rgba(120, 119, 198, 0.6), rgba(255, 119, 198, 0.6));
    border-radius: 2px;
    animation: video-bar-{{ section.id }} 1s ease-in-out infinite;
  }

  .video-placeholder-bars-{{ section.id }} span:nth-child(1) { height: 40%; animation-delay: 0s; }
  .video-placeholder-bars-{{ section.id }} span:nth-child(2) { height: 70%; animation-delay: 0.1s; }
  .video-placeholder-bars-{{ section.id }} span:nth-child(3) { height: 50%; animation-delay: 0.2s; }
  .video-placeholder-bars-{{ section.id }} span:nth-child(4) { height: 90%; animation-delay: 0.3s; }
  .video-placeholder-bars-{{ section.id }} span:nth-child(5) { height: 60%; animation-delay: 0.4s; }

  @keyframes video-spin-{{ section.id }} {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes video-bar-{{ section.id }} {
    0%, 100% { transform: scaleY(1); }
    50% { transform: scaleY(0.5); }
  }

  /* Overlay */
  .video-overlay-{{ section.id }} {
    position: absolute;
    inset: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 1;
  }

  /* Content */
  .video-content-{{ section.id }} {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: {% if section.settings.content_alignment == 'left' %}flex-start{% elsif section.settings.content_alignment == 'right' %}flex-end{% else %}center{% endif %};
    justify-content: {{ section.settings.content_position }};
    padding: clamp(2rem, 5vw, 4rem);
    color: var(--color-text);
    text-align: {{ section.settings.content_alignment }};
    pointer-events: none;
    z-index: 2;
  }

  .video-content-{{ section.id }} a,
  .video-content-{{ section.id }} button {
    pointer-events: auto;
  }

  /* Title and description use global .section-* classes from utilities.css */
  .video-content-{{ section.id }} .section-title {
    color: var(--color-text);
  }

  .video-content-{{ section.id }} .section-description {
    color: var(--color-text);
    opacity: 0.9;
  }

  /* Button styling - adapts to color scheme */
  .video-section-{{ section.id }} .btn--outline {
    color: var(--color-text);
    border-color: var(--color-text);
  }
  .video-section-{{ section.id }} .btn--outline::before {
    background: var(--color-text);
  }
  .video-section-{{ section.id }} .btn--outline:hover,
  .video-section-{{ section.id }} .btn--outline:hover span,
  .video-section-{{ section.id }} .btn--outline:hover i {
    color: var(--color-background);
  }
  .video-section-{{ section.id }} .btn--primary {
    background: var(--color-text);
    border-color: var(--color-text);
    color: var(--color-background);
  }
  .video-section-{{ section.id }} .btn--primary::before {
    background: var(--color-background);
  }
  .video-section-{{ section.id }} .btn--primary:hover,
  .video-section-{{ section.id }} .btn--primary:hover span,
  .video-section-{{ section.id }} .btn--primary:hover i {
    color: var(--color-text);
  }

</style>

<section class="video-section-{{ section.id }} color-{{ section.settings.color_scheme }}" data-video-section="{{ section.id }}">
  <div class="{{ container_class }}">
    <div class="video-container-{{ section.id }}">
      {% if section.settings.video != blank %}
        {{ section.settings.video | video_tag:
          autoplay: true,
          muted: true,
          playsinline: true,
          preload: 'auto',
          loop: section.settings.loop,
          controls: section.settings.show_controls
        }}
      {% else %}
        <div class="video-placeholder-{{ section.id }}">
          <div class="video-placeholder-pattern-{{ section.id }}"></div>
          <div class="video-placeholder-grid-{{ section.id }}"></div>
          <div class="video-placeholder-glow-{{ section.id }}"></div>
          <div class="video-placeholder-content-{{ section.id }}">
            <div class="video-placeholder-icon-{{ section.id }}">
              <i class="ph ph-play"></i>
            </div>
            <div class="video-placeholder-text-{{ section.id }}">
              <p>Select a video</p>
              <div class="video-placeholder-bars-{{ section.id }}">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <span></span>
              </div>
            </div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.overlay_opacity > 0 %}
        <div class="video-overlay-{{ section.id }}"></div>
      {% endif %}

      {% if section.settings.title != blank or section.settings.description != blank or section.settings.button_text != blank %}
        <div class="video-content-{{ section.id }}" data-tween-group="video-content-{{ section.id }}">
          {% if section.settings.label != blank %}
            <span class="section-label mb-4" data-tween data-tween-type="fade-up">
              {{ section.settings.label }}
            </span>
          {% endif %}

          {% if section.settings.title != blank %}
            <h2 class="section-title font-heading" data-tween data-tween-type="split-text">
              {{ section.settings.title }}
            </h2>
          {% endif %}

          {% if section.settings.description != blank %}
            <p class="section-description mt-4" data-tween data-tween-type="fade-up">
              {{ section.settings.description }}
            </p>
          {% endif %}

          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <a
              href="{{ section.settings.button_link }}"
              class="btn{% if section.settings.button_style == 'solid' %} btn--primary{% else %} btn--outline{% endif %}{% if section.settings.button_size == 'large' %} btn--lg{% endif %} mt-8"
              data-tween data-tween-type="fade-up"
            >
              <span>{{ section.settings.button_text }}</span>
              <i class="ph ph-arrow-right"></i>
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{%- comment -%} Animations handled by global TweenManager via data-tween attributes {%- endcomment -%}

{% schema %}
{
  "name": "Video",
  "tag": "section",
  "class": "video-section",
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Video will autoplay and be muted"
    },
    {
      "type": "checkbox",
      "id": "loop",
      "default": true,
      "label": "Loop video"
    },
    {
      "type": "checkbox",
      "id": "show_controls",
      "default": false,
      "label": "Show video controls"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "options": [
        { "value": "16/9", "label": "Landscape (16:9)" },
        { "value": "21/9", "label": "Cinematic (21:9)" },
        { "value": "4/3", "label": "Standard (4:3)" },
        { "value": "1/1", "label": "Square (1:1)" },
        { "value": "9/16", "label": "Portrait (9:16)" }
      ],
      "default": "16/9",
      "label": "Aspect ratio"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "default": 0,
      "unit": "px",
      "label": "Border radius"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "default": "#000000",
      "label": "Overlay color"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text_alignment",
      "id": "header_alignment",
      "default": "left",
      "label": "Header alignment"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button style",
      "default": "outline",
      "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" }
      ]
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button size",
      "default": "large",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "large", "label": "Large" }
      ]
    },
    {
      "type": "select",
      "id": "content_position",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" }
      ],
      "default": "center",
      "label": "Content vertical position"
    },
    {
      "type": "text_alignment",
      "id": "content_alignment",
      "default": "center",
      "label": "Content alignment"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width"
    },
    {
      "type": "checkbox",
      "id": "remove_padding",
      "default": true,
      "label": "Remove vertical padding"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Video",
      "category": "Image & media"
    }
  ]
}
{% endschema %}
