        currentSlide = index;
      }

      function nextSlide() {
        const next = (currentSlide + 1) % slides.length;
        showSlide(next);
      }

      function prevSlide() {
        const prev = (currentSlide - 1 + slides.length) % slides.length;
        showSlide(prev);
      }

      // Auto rotation
      if (slides.length > 1 && rotationSpeed > 0) {
        autoRotateInterval = setInterval(nextSlide, rotationSpeed);

        // Pause on hover
        announcementBar.addEventListener('mouseenter', () => clearInterval(autoRotateInterval));
        announcementBar.addEventListener('mouseleave', () => {
          autoRotateInterval = setInterval(nextSlide, rotationSpeed);
        });
