      const previousPanelId = panelHistory[panelHistory.length - 1];

      const currentPanel = panelsContainer.querySelector(`[data-panel="${currentPanelId}"]`);
      const previousPanel = panelsContainer.querySelector(`[data-panel="${previousPanelId}"]`);

