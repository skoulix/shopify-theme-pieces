{%- comment -%}
  Header Section - Minimal Skeleton + Tailwind UI Design
  Integrates with Swup page transitions and Lenis smooth scroll
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign nav_class = 'page-full'
  else
    assign nav_class = 'page-container'
  endif
-%}

<style>
  /* Active nav link styles */
  .nav-link {
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: currentColor;
    transition: width 0.3s ease;
  }

  .nav-link.is-active::after {
    width: 100%;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:hover {
    color: var(--color-primary);
  }

  /* Mobile active state */
  .nav-link-mobile.is-active {
    background-color: var(--color-background-secondary);
    color: var(--color-primary);
  }

  /* Header styling */
  .header {
    background-color: var(--color-background);
    border-color: var(--color-border);
  }
</style>

<header class="header sticky top-0 z-40 border-b" data-header>
  <nav class="{{ nav_class }} flex items-center justify-between py-4">
    {%- comment -%} Logo {%- endcomment -%}
    <div class="flex lg:flex-1">
      <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
        <span class="sr-only">{{ shop.name }}</span>
        {% if settings.logo != blank %}
          {{ settings.logo | image_url: width: 300 | image_tag:
            class: 'h-8 w-auto',
            alt: shop.name,
            loading: 'eager'
          }}
        {% else %}
          <span class="text-xl font-bold text-gray-900">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {%- comment -%} Mobile menu button {%- endcomment -%}
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        onclick="document.getElementById('mobile-menu').classList.remove('hidden')"
      >
        <span class="sr-only">Open menu</span>
        <i class="ph ph-list text-2xl"></i>
      </button>
    </div>

    {%- comment -%} Desktop Navigation {%- endcomment -%}
    <div class="hidden lg:flex lg:gap-x-8">
      {% for link in section.settings.menu.links %}
        {%- liquid
          assign is_active = false
          if link.url == request.path
            assign is_active = true
          elsif link.url != '/' and request.path contains link.url
            assign is_active = true
          endif
        -%}
        <a
          href="{{ link.url }}"
          class="nav-link text-sm font-semibold leading-6 transition-colors{% if is_active %} is-active{% endif %}"
          style="--hover-color: var(--color-primary);"
          data-nav-link
        >
          {{ link.title }}
        </a>
      {% endfor %}
    </div>

    {%- comment -%} Desktop Icons {%- endcomment -%}
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4">
      {%- comment -%} Search {%- endcomment -%}
      <a href="{{ routes.search_url }}" class="p-2 text-gray-400 hover:text-gray-500 transition-colors">
        <span class="sr-only">Search</span>
        <i class="ph ph-magnifying-glass text-xl"></i>
      </a>

      {%- comment -%} Account {%- endcomment -%}
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="p-2 text-gray-400 hover:text-gray-500 transition-colors">
          <span class="sr-only">Account</span>
          <i class="ph ph-user text-xl"></i>
        </a>
      {% endif %}

      {%- comment -%} Cart {%- endcomment -%}
      <a href="{{ routes.cart_url }}" class="group p-2 flex items-center text-gray-400 hover:text-gray-500 transition-colors">
        <i class="ph ph-bag text-xl"></i>
        <span class="ml-1 text-sm font-medium text-gray-700 group-hover:text-gray-800">{{ cart.item_count }}</span>
        <span class="sr-only">items in cart</span>
      </a>
    </div>
  </nav>

  {%- comment -%} Mobile Menu {%- endcomment -%}
  <div id="mobile-menu" class="hidden lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-50 bg-black/25" onclick="document.getElementById('mobile-menu').classList.add('hidden')"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
          <span class="sr-only">{{ shop.name }}</span>
          {% if settings.logo != blank %}
            {{ settings.logo | image_url: width: 200 | image_tag:
              class: 'h-8 w-auto',
              alt: shop.name
            }}
          {% else %}
            <span class="text-lg font-bold text-gray-900">{{ shop.name }}</span>
          {% endif %}
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-gray-700"
          onclick="document.getElementById('mobile-menu').classList.add('hidden')"
        >
          <span class="sr-only">Close menu</span>
          <i class="ph ph-x text-2xl"></i>
        </button>
      </div>

      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            {% for link in section.settings.menu.links %}
              {%- liquid
                assign is_active = false
                if link.url == request.path
                  assign is_active = true
                elsif link.url != '/' and request.path contains link.url
                  assign is_active = true
                endif
              -%}
              <a
                href="{{ link.url }}"
                class="nav-link-mobile -mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50{% if is_active %} is-active{% endif %}"
                data-nav-link
              >
                {{ link.title }}
              </a>
            {% endfor %}
          </div>

          <div class="py-6 space-y-2">
            {% if shop.customer_accounts_enabled %}
              <a href="{{ routes.account_url }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">
                <i class="ph ph-user mr-2"></i>Account
              </a>
            {% endif %}
            <a href="{{ routes.cart_url }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">
              <i class="ph ph-bag mr-2"></i>Cart ({{ cart.item_count }})
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
(function() {
  /**
   * Update active nav links based on current URL
   * Called on initial load and after Swup page transitions
   */
  function updateActiveLinks() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('[data-nav-link]');

    navLinks.forEach(link => {
      const linkPath = new URL(link.href, window.location.origin).pathname;

      // Remove trailing slashes for comparison
      const normalizedCurrent = currentPath.replace(/\/$/, '') || '/';
      const normalizedLink = linkPath.replace(/\/$/, '') || '/';

      let isActive = false;

      // Exact match
      if (normalizedCurrent === normalizedLink) {
        isActive = true;
      }
      // Partial match for nested pages (e.g., /collections matches /collections/all)
      else if (normalizedLink !== '/' && normalizedCurrent.startsWith(normalizedLink + '/')) {
        isActive = true;
      }
      // Special case: collection pages should match /collections link
      else if (normalizedLink !== '/' && normalizedCurrent.startsWith(normalizedLink)) {
        isActive = true;
      }

      link.classList.toggle('is-active', isActive);
    });
  }

  // Update on initial page load
  updateActiveLinks();

  // Update after Swup page transitions
  window.addEventListener('swup:contentReplaced', updateActiveLinks);

  // Also listen for popstate (browser back/forward)
  window.addEventListener('popstate', updateActiveLinks);
})();
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
