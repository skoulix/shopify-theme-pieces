{%- comment -%}
  Header Section - Minimal Skeleton + Tailwind UI Design
  Integrates with Swup page transitions and Lenis smooth scroll
  Includes announcement bar as first row
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign nav_class = 'page-full'
  else
    assign nav_class = 'page-container'
  endif

  assign is_transparent = false
  if section.settings.transparent_home and request.page_type == 'index'
    assign is_transparent = true
  endif

  # Get announcement bar blocks
  assign announcement_blocks = section.blocks | where: 'type', 'announcement'
  assign show_announcement = section.settings.show_announcement_bar
-%}

<style>
  /* Header wrapper - contains announcement bar + nav */
  .header-wrapper {
    position: relative;
    z-index: 40;
  }

  /* When mobile menu is open, raise z-index above all fixed elements */
  body.mobile-menu-open .header-wrapper,
  body.mobile-menu-open #shopify-section-header {
    z-index: 110;
  }

  /* Fixed header with hide/reveal uses position: fixed */
  .header-wrapper.is-sticky {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .header-wrapper.is-hidden {
    transform: translateY(-100%);
  }

  /* Spacer to prevent content jump when header becomes fixed */
  /* Uses :has() selector plus JavaScript fallback for dynamic updates */
  .header-spacer {
    display: none;
  }

  /* Show spacer when header is sticky but NOT transparent */
  body:has(.header-wrapper.is-sticky:not(.is-transparent)) .header-spacer {
    display: block;
  }

  /* Header inner styles */
  .header-inner {
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  /* Transparent header styles */
  .header-wrapper.is-transparent .header-inner {
    background: transparent;
    border-color: transparent;
  }

  /* Transparent header colors - only apply to main nav bar, not dropdowns/mega menus */
  .header-wrapper.is-transparent .header-inner > nav,
  .header-wrapper.is-transparent .header-inner > nav > div > a,
  .header-wrapper.is-transparent .header-inner > nav > div > .dropdown-wrapper > button,
  .header-wrapper.is-transparent .header-inner > nav > div > .mega-menu-wrapper > button,
  .header-wrapper.is-transparent .header-inner > nav > div > div > a[data-nav-link],
  .header-wrapper.is-transparent .header-inner > nav > div > div > .dropdown-wrapper > button,
  .header-wrapper.is-transparent .header-inner > nav > div > div > .mega-menu-wrapper > button,
  .header-wrapper.is-transparent .header-inner > nav button[data-cart-drawer-toggle],
  .header-wrapper.is-transparent .header-inner > nav button[data-search-drawer-toggle],
  .header-wrapper.is-transparent .header-inner > nav button[data-wishlist-open],
  .header-wrapper.is-transparent .header-inner > nav a[href*="/search"],
  .header-wrapper.is-transparent .header-inner > nav button[data-mobile-nav-open],
  .header-wrapper.is-transparent .header-inner > nav [data-cart-count],
  .header-wrapper.is-transparent .header-inner > nav [data-wishlist-count] {
    color: {{ section.settings.transparent_text_color }};
  }

  /* Dropdown and mega menu panels should always use normal text colors, even in transparent mode */
  .header-wrapper.is-transparent .dropdown-panel,
  .header-wrapper.is-transparent .dropdown-panel a,
  .header-wrapper.is-transparent .mega-menu-panel,
  .header-wrapper.is-transparent .mega-menu-panel a,
  .header-wrapper.is-transparent .mega-menu-panel button {
    color: var(--color-text);
  }

  /* When scrolled, revert to solid background */
  .header-wrapper.is-transparent.is-scrolled .header-inner {
    background: var(--color-background);
    border-color: var(--color-border);
  }

  /* When mega menu is open on transparent header, show solid background */
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner {
    background: var(--color-background);
    border-color: var(--color-border);
  }

  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > a,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > .dropdown-wrapper > button,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > .mega-menu-wrapper > button,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > div > a[data-nav-link],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > div > .dropdown-wrapper > button,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > div > .mega-menu-wrapper > button,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav button[data-cart-drawer-toggle],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav button[data-search-drawer-toggle],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav button[data-wishlist-open],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav button[data-mobile-nav-open],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav a[href*="/search"],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav [data-cart-count],
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav [data-wishlist-count] {
    color: var(--color-text);
  }

  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > a:hover,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > .dropdown-wrapper > button:hover,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > .mega-menu-wrapper > button:hover,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > div > a[data-nav-link]:hover,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > div > .dropdown-wrapper > button:hover,
  .header-wrapper.is-transparent.has-mega-menu-open .header-inner > nav > div > div > .mega-menu-wrapper > button:hover {
    color: var(--color-primary);
  }

  .header-wrapper.is-transparent.is-scrolled .header-inner > nav,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > a,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > .dropdown-wrapper > button,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > .mega-menu-wrapper > button,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > div > a[data-nav-link],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > div > .dropdown-wrapper > button,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > div > .mega-menu-wrapper > button,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav button[data-cart-drawer-toggle],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav button[data-search-drawer-toggle],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav button[data-wishlist-open],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav button[data-mobile-nav-open],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav a[href*="/search"],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav [data-cart-count],
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav [data-wishlist-count] {
    color: var(--color-text);
  }

  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > a:hover,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > .dropdown-wrapper > button:hover,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > .mega-menu-wrapper > button:hover,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > div > a[data-nav-link]:hover,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > div > .dropdown-wrapper > button:hover,
  .header-wrapper.is-transparent.is-scrolled .header-inner > nav > div > div > .mega-menu-wrapper > button:hover {
    color: var(--color-primary);
  }

  /* Transparent header spacer should be hidden - controlled via JS */

  /* Announcement bar styles */
  .header-announcement {
    background-color: var(--color-background);
    color: var(--color-text);
    min-height: {{ section.settings.announcement_height }}px;
  }

  .header-announcement a {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .header-announcement a:hover {
    opacity: 0.8;
  }

  .header-announcement__slide {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }

  .header-announcement__slide.is-active {
    position: relative;
    opacity: 1;
    visibility: visible;
  }

  .header-announcement.is-dismissed {
    display: none;
  }

  .header-announcement__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    color: var(--color-text);
    padding: 0.5rem;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s;
    z-index: 1;
  }

  .header-announcement__arrow:hover {
    opacity: 1;
  }

  .header-announcement__arrow--prev {
    left: 0.5rem;
  }

  .header-announcement__arrow--next {
    right: {% if section.settings.announcement_dismissible %}2.5rem{% else %}0.5rem{% endif %};
  }

  .header-announcement__close {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    color: var(--color-text);
    padding: 0.5rem;
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .header-announcement__close:hover {
    opacity: 1;
  }

  .header-announcement__countdown {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 0.75rem;
    font-variant-numeric: tabular-nums;
  }

  .header-announcement__countdown-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 2rem;
  }

  .header-announcement__countdown-value {
  }

  .header-announcement__countdown-label {
    opacity: 0.7;
  }
</style>

<div class="header-wrapper{% if section.settings.sticky_header %} is-sticky{% endif %}{% if is_transparent %} is-transparent{% endif %}" data-header-wrapper{% if section.settings.hide_on_scroll %} data-hide-on-scroll{% endif %}{% if is_transparent %} data-transparent-header{% endif %}>
  {%- comment -%} Announcement Bar Row {%- endcomment -%}
  {% if show_announcement and announcement_blocks.size > 0 %}
    <div class="header-announcement color-{{ section.settings.announcement_color_scheme }} relative flex items-center justify-center px-10 py-2 text-center text-sm" role="region" aria-label="Announcement" data-announcement-bar>
      {%- comment -%} Navigation Arrows {%- endcomment -%}
      {% if section.settings.announcement_arrows and announcement_blocks.size > 1 %}
        <button type="button" class="header-announcement__arrow header-announcement__arrow--prev" data-announcement-prev aria-label="{{ 'accessibility.previous' | t }}">
          <i class="ph ph-caret-left"></i>
        </button>
        <button type="button" class="header-announcement__arrow header-announcement__arrow--next" data-announcement-next aria-label="{{ 'accessibility.next' | t }}">
          <i class="ph ph-caret-right"></i>
        </button>
      {% endif %}

      {%- comment -%} Slides {%- endcomment -%}
      <div class="header-announcement__slides relative w-full">
        {% for block in announcement_blocks %}
          <div
            class="header-announcement__slide{% if forloop.first %} is-active{% endif %}"
            data-announcement-slide="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            <div class="flex items-center justify-center flex-wrap gap-x-2">
              {% if block.settings.icon != 'none' %}
                <i class="ph ph-{{ block.settings.icon }}"></i>
              {% endif %}

              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
              {% else %}
                <span>{{ block.settings.text }}</span>
              {% endif %}

              {% if block.settings.show_countdown and block.settings.countdown_date != blank %}
                <div class="header-announcement__countdown" data-countdown="{{ block.settings.countdown_date | date: '%Y-%m-%dT%H:%M:%S' }}">
                  <div class="header-announcement__countdown-unit" data-countdown-days>
                    <span class="header-announcement__countdown-value text-counter">00</span>
                    <span class="header-announcement__countdown-label text-label-sm">Days</span>
                  </div>
                  <span>:</span>
                  <div class="header-announcement__countdown-unit" data-countdown-hours>
                    <span class="header-announcement__countdown-value text-counter">00</span>
                    <span class="header-announcement__countdown-label text-label-sm">Hrs</span>
                  </div>
                  <span>:</span>
                  <div class="header-announcement__countdown-unit" data-countdown-mins>
                    <span class="header-announcement__countdown-value text-counter">00</span>
                    <span class="header-announcement__countdown-label text-label-sm">Min</span>
                  </div>
                  <span>:</span>
                  <div class="header-announcement__countdown-unit" data-countdown-secs>
                    <span class="header-announcement__countdown-value text-counter">00</span>
                    <span class="header-announcement__countdown-label text-label-sm">Sec</span>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      {%- comment -%} Close Button {%- endcomment -%}
      {% if section.settings.announcement_dismissible %}
        <button type="button" class="header-announcement__close" data-announcement-close aria-label="{{ 'accessibility.close' | t }}">
          <i class="ph ph-x"></i>
        </button>
      {% endif %}
    </div>
  {% endif %}

  {%- comment -%} Header Nav Row {%- endcomment -%}
  {%- liquid
    assign header_layout = section.settings.header_layout | default: 'logo_left'
    assign nav_position = section.settings.nav_position | default: 'center'
  -%}
  <header class="header-inner border-b bg-(--color-background) border-(--color-border)" data-header>
  <nav class="{{ nav_class }} relative flex items-center justify-between py-4">

    {% if header_layout == 'logo_center' %}
      {%- comment -%} ========== LOGO CENTERED LAYOUT ========== {%- endcomment -%}

      {%- comment -%} Left: Mobile hamburger / Desktop navigation {%- endcomment -%}
      <div class="flex lg:flex-1 items-center">
        {%- comment -%} Mobile hamburger {%- endcomment -%}
        <button
          type="button"
          class="lg:hidden -m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-(--color-text) cursor-pointer"
          data-mobile-nav-open
        >
          <span class="sr-only">{{ 'accessibility.open_menu' | t }}</span>
          <i class="ph ph-list text-2xl"></i>
        </button>

        {%- comment -%} Desktop Navigation {%- endcomment -%}
        <div class="hidden lg:flex lg:gap-x-8{% if section.settings.nav_uppercase %} uppercase{% endif %}">
          {% for link in section.settings.menu.links %}
            {%- liquid
              assign is_active = false
              if link.url == request.path
                assign is_active = true
              elsif link.url != '/' and request.path contains link.url
                assign is_active = true
              endif
              assign has_children = false
              if link.links.size > 0
                assign has_children = true
              endif

              assign mega_menu_block = nil
              assign link_handle = link.title | handleize
              for block in section.blocks
                if block.type == 'mega_menu'
                  assign block_handle = block.settings.menu_item | handleize
                  if block_handle == link_handle
                    assign mega_menu_block = block
                    break
                  endif
                endif
              endfor
            -%}
            {% if mega_menu_block != nil and has_children %}
              {% render 'mega-menu', link: link, block: mega_menu_block, position: forloop.index0 %}
            {% elsif has_children %}
              <div class="dropdown-wrapper relative" data-dropdown>
                <button
                  type="button"
                  class="dropdown-trigger group relative flex items-center gap-1 text-sm font-semibold leading-6 text-(--color-text) hover:text-(--color-primary) transition-colors"
                  data-dropdown-trigger
                  aria-expanded="false"
                >
                  <span>{{ link.title }}</span>
                  <i class="ph ph-caret-down text-xs transition-transform duration-300 group-aria-expanded:rotate-180"></i>
                </button>
                <div class="dropdown-panel" data-dropdown-panel>
                  <div class="dropdown-panel__inner">
                    {% if link.url != '#' and link.url != '' %}
                      <a href="{{ link.url }}" class="dropdown-featured" data-dropdown-item>
                        <span class="dropdown-featured__label">{{ 'accessibility.explore' | t }}</span>
                        <span class="dropdown-featured__title font-heading">{{ link.title }}</span>
                        <i class="ph ph-arrow-right dropdown-featured__arrow"></i>
                      </a>
                    {% endif %}
                    <div class="dropdown-links">
                      {% for child in link.links %}
                        {% if child.links.size > 0 %}
                          {%- comment -%} Child with grandchildren - show flyout submenu {%- endcomment -%}
                          <div class="dropdown-link-wrapper" data-dropdown-nested>
                            <button type="button" class="dropdown-link dropdown-link--parent" data-dropdown-nested-trigger style="--item-index: {{ forloop.index0 }}">
                              <span class="dropdown-link__text">{{ child.title }}</span>
                              <i class="ph ph-caret-right dropdown-link__arrow"></i>
                            </button>
                            <div class="dropdown-submenu" data-dropdown-submenu>
                              <div class="dropdown-submenu__inner">
                                {% if child.url != '#' and child.url != '' %}
                                  <a href="{{ child.url }}" class="dropdown-submenu__header">
                                    <span class="dropdown-submenu__title">{{ child.title }}</span>
                                    <i class="ph ph-arrow-right"></i>
                                  </a>
                                {% endif %}
                                <div class="dropdown-submenu__links">
                                  {% for grandchild in child.links %}
                                    <a href="{{ grandchild.url }}" class="dropdown-submenu__link" style="--subitem-index: {{ forloop.index0 }}">
                                      {{ grandchild.title }}
                                    </a>
                                  {% endfor %}
                                </div>
                              </div>
                            </div>
                          </div>
                        {% else %}
                          <a href="{{ child.url }}" class="dropdown-link" data-dropdown-item style="--item-index: {{ forloop.index0 }}">
                            <span class="dropdown-link__text">{{ child.title }}</span>
                            <span class="dropdown-link__line"></span>
                          </a>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            {% else %}
              <a
                href="{{ link.url }}"
                class="nav-link{% if is_active %} is-active{% endif %}"
                data-nav-link
                {% if is_active %}aria-current="page"{% endif %}
              >
                <span class="nav-link__text">{{ link.title }}</span>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      {%- comment -%} Center: Logo (absolute positioned for true center) {%- endcomment -%}
      <div class="absolute left-1/2 -translate-x-1/2">
        <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
          <span class="sr-only">{{ shop.name }}</span>
          {% render 'logo', loading: 'eager' %}
        </a>
      </div>

      {%- comment -%} Right: Icons {%- endcomment -%}
      <div class="flex lg:flex-1 justify-end gap-x-1 lg:gap-x-2">
        {%- comment -%} Mobile Cart Icon {%- endcomment -%}
        {% if section.settings.show_cart %}
          {% if settings.cart_type == 'drawer' %}
            <button type="button" class="header-icon group lg:hidden" data-cart-drawer-toggle>
              <i class="ph ph-bag"></i>
              <span class="ml-1 text-sm font-medium text-(--color-text){% if cart.item_count == 0 %} hidden{% endif %}" data-cart-count>{{ cart.item_count }}</span>
              <span class="sr-only">{{ 'accessibility.cart' | t }}</span>
            </button>
          {% else %}
            <a href="{{ routes.cart_url }}" class="header-icon group lg:hidden">
              <i class="ph ph-bag"></i>
              <span class="ml-1 text-sm font-medium text-(--color-text){% if cart.item_count == 0 %} hidden{% endif %}" data-cart-count>{{ cart.item_count }}</span>
              <span class="sr-only">{{ 'accessibility.cart' | t }}</span>
            </a>
          {% endif %}
        {% endif %}

        {%- comment -%} Desktop Icons {%- endcomment -%}
        {% if section.settings.show_search %}
          {% if section.settings.search_type == 'drawer' %}
            <button type="button" class="header-icon hidden lg:flex" data-search-drawer-toggle>
              <span class="sr-only">{{ 'accessibility.search' | t }}</span>
              <i class="ph ph-magnifying-glass"></i>
            </button>
          {% else %}
            <a href="{{ routes.search_url }}" class="header-icon hidden lg:flex">
              <span class="sr-only">{{ 'accessibility.search' | t }}</span>
              <i class="ph ph-magnifying-glass"></i>
            </a>
          {% endif %}
        {% endif %}
        {% if shop.customer_accounts_enabled %}
          <a href="{{ routes.account_url }}" class="header-icon hidden lg:flex">
            <span class="sr-only">{{ 'accessibility.account' | t }}</span>
            <i class="ph ph-user"></i>
          </a>
        {% endif %}
        {% if section.settings.show_wishlist %}
          <button type="button" class="header-icon hidden lg:flex" data-wishlist-open aria-label="{{ 'accessibility.wishlist' | t | default: 'Open wishlist' }}">
            <i class="ph ph-heart"></i>
            <span class="ml-1 text-sm font-medium text-(--color-text) hidden" data-wishlist-count></span>
          </button>
        {% endif %}
        {% if section.settings.show_cart %}
          {% if settings.cart_type == 'drawer' %}
            <button type="button" class="header-icon group hidden lg:flex" data-cart-drawer-toggle>
              <i class="ph ph-bag"></i>
              <span class="ml-1 text-sm font-medium text-(--color-text) group-hover:text-(--color-primary){% if cart.item_count == 0 %} hidden{% endif %}" data-cart-count>{{ cart.item_count }}</span>
              <span class="sr-only">{{ 'accessibility.cart' | t }}</span>
            </button>
          {% else %}
            <a href="{{ routes.cart_url }}" class="header-icon group hidden lg:flex">
              <i class="ph ph-bag"></i>
              <span class="ml-1 text-sm font-medium text-(--color-text) group-hover:text-(--color-primary){% if cart.item_count == 0 %} hidden{% endif %}" data-cart-count>{{ cart.item_count }}</span>
              <span class="sr-only">{{ 'accessibility.cart' | t }}</span>
            </a>
          {% endif %}
        {% endif %}
      </div>

    {% else %}
      {%- comment -%} ========== LOGO LEFT LAYOUT (default) ========== {%- endcomment -%}

      {%- comment -%} Mobile: Hamburger (left) | Desktop: Logo (left) {%- endcomment -%}
      <div class="flex {% if nav_position == 'center' %}lg:flex-1{% endif %}">
        {%- comment -%} Mobile hamburger {%- endcomment -%}
        <button
          type="button"
          class="lg:hidden -m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-(--color-text) cursor-pointer"
          data-mobile-nav-open
        >
          <span class="sr-only">{{ 'accessibility.open_menu' | t }}</span>
          <i class="ph ph-list text-2xl"></i>
        </button>

        {%- comment -%} Desktop logo {%- endcomment -%}
        <a href="{{ routes.root_url }}" class="hidden lg:block -m-1.5 p-1.5">
          <span class="sr-only">{{ shop.name }}</span>
          {% render 'logo', loading: 'eager' %}
        </a>
      </div>

      {%- comment -%} Mobile: Centered Logo {%- endcomment -%}
