{%- comment -%}
  Header Section - Modern Tailwind Version
  Minimal, clean design with sticky behavior
{%- endcomment -%}

<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>

{%- liquid
  assign header_tag = 'div'
  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif
-%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}data-sticky-type="{{ section.settings.sticky_header_type }}"{% endif %}
  class="section-header bg-white {% if section.settings.show_line_separator %}border-b border-neutral-200{% endif %}"
>
  <header class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">

      {%- comment -%} Mobile Menu Button {%- endcomment -%}
      {%- if section.settings.menu != blank -%}
        <button
          type="button"
          class="lg:hidden p-2 -ml-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors"
          onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          aria-label="{{ 'sections.header.menu' | t }}"
        >
          {%- render 'icon', name: 'menu', size: '24' -%}
        </button>
      {%- endif -%}

      {%- comment -%} Logo {%- endcomment -%}
      <div class="flex-shrink-0 {% if section.settings.mobile_logo_position == 'center' %}absolute left-1/2 transform -translate-x-1/2 lg:static lg:transform-none{% endif %}">
        {%- if request.page_type == 'index' -%}
          <h1 class="m-0">
        {%- endif -%}
        <a href="{{ routes.root_url }}" class="flex items-center">
          {%- if settings.logo != blank -%}
            {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
            {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
            <img
              src="{{ settings.logo | image_url: width: 300 }}"
              alt="{{ logo_alt }}"
              class="h-8 md:h-10 w-auto"
              width="{{ settings.logo_width }}"
              height="{{ logo_height }}"
              loading="eager"
            >
          {%- else -%}
            <span class="text-xl font-semibold text-neutral-900">{{ shop.name }}</span>
          {%- endif -%}
        </a>
        {%- if request.page_type == 'index' -%}
          </h1>
        {%- endif -%}
      </div>

      {%- comment -%} Desktop Navigation {%- endcomment -%}
      {%- if section.settings.menu != blank -%}
        <nav class="hidden lg:flex items-center gap-8 ml-10">
          {%- for link in section.settings.menu.links -%}
            {%- if link.links != blank -%}
              <div class="relative group">
                <a
                  href="{{ link.url }}"
                  class="flex items-center gap-1 text-sm font-medium text-neutral-700 hover:text-neutral-900 transition-colors py-2"
                >
                  {{ link.title | escape }}
                  {%- render 'icon', name: 'caret-down', size: '12' -%}
                </a>
                <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                  <div class="bg-white rounded-lg shadow-lg border border-neutral-200 py-2 min-w-[200px]">
                    {%- for childlink in link.links -%}
                      <a
                        href="{{ childlink.url }}"
                        class="block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-100 hover:text-neutral-900 transition-colors"
                      >
                        {{ childlink.title | escape }}
                      </a>
                    {%- endfor -%}
                  </div>
                </div>
              </div>
            {%- else -%}
              <a
                href="{{ link.url }}"
                class="text-sm font-medium text-neutral-700 hover:text-neutral-900 transition-colors"
                {% if link.current %}aria-current="page"{% endif %}
              >
                {{ link.title | escape }}
              </a>
            {%- endif -%}
          {%- endfor -%}
        </nav>
      {%- endif -%}

      {%- comment -%} Right Side Icons {%- endcomment -%}
      <div class="flex items-center gap-2 md:gap-4">
        {%- comment -%} Search {%- endcomment -%}
        <button
          type="button"
          class="p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors"
          onclick="document.getElementById('search-modal').classList.remove('hidden')"
          aria-label="{{ 'general.search.search' | t }}"
        >
          {%- render 'icon', name: 'search', size: '22' -%}
        </button>

        {%- comment -%} Account {%- endcomment -%}
        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="hidden sm:flex p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors"
            aria-label="{%- if customer -%}{{ 'customer.account_fallback' | t }}{%- else -%}{{ 'customer.log_in' | t }}{%- endif -%}"
          >
            {%- render 'icon', name: 'user', size: '22' -%}
          </a>
        {%- endif -%}

        {%- comment -%} Cart {%- endcomment -%}
        <a
          href="{{ routes.cart_url }}"
          class="relative p-2 text-neutral-700 hover:text-neutral-900 hover:bg-neutral-100 rounded-lg transition-colors"
          id="cart-icon-bubble"
          aria-label="{{ 'templates.cart.cart' | t }}"
        >
          {%- render 'icon', name: 'shopping-bag', size: '22' -%}
          {%- if cart != empty -%}
            <span class="absolute -top-0.5 -right-0.5 flex items-center justify-center w-5 h-5 text-[10px] font-medium text-white bg-neutral-900 rounded-full">
              {{ cart.item_count }}
            </span>
          {%- endif -%}
        </a>
      </div>

    </div>
  </header>

  {%- comment -%} Mobile Menu {%- endcomment -%}
  {%- if section.settings.menu != blank -%}
    <div id="mobile-menu" class="hidden lg:hidden border-t border-neutral-200">
      <nav class="px-4 py-4 space-y-2">
        {%- for link in section.settings.menu.links -%}
          {%- if link.links != blank -%}
            <details class="group">
              <summary class="flex items-center justify-between py-2 text-base font-medium text-neutral-900 cursor-pointer list-none">
                {{ link.title | escape }}
                <span class="transform transition-transform group-open:rotate-180">
                  {%- render 'icon', name: 'caret-down', size: '16' -%}
                </span>
              </summary>
              <div class="pl-4 mt-2 space-y-2">
                {%- for childlink in link.links -%}
                  <a
                    href="{{ childlink.url }}"
                    class="block py-1.5 text-sm text-neutral-600 hover:text-neutral-900 transition-colors"
                  >
                    {{ childlink.title | escape }}
                  </a>
                {%- endfor -%}
              </div>
            </details>
          {%- else -%}
            <a
              href="{{ link.url }}"
              class="block py-2 text-base font-medium text-neutral-900 hover:text-neutral-600 transition-colors"
            >
              {{ link.title | escape }}
            </a>
          {%- endif -%}
        {%- endfor -%}

        {%- if shop.customer_accounts_enabled -%}
          <div class="pt-4 mt-4 border-t border-neutral-200">
            <a
              href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
              class="flex items-center gap-2 py-2 text-base font-medium text-neutral-900"
            >
              {%- render 'icon', name: 'user', size: '20' -%}
              {%- if customer -%}
                {{ 'customer.account_fallback' | t }}
              {%- else -%}
                {{ 'customer.log_in' | t }}
              {%- endif -%}
            </a>
          </div>
        {%- endif -%}
      </nav>
    </div>
  {%- endif -%}
</{{ header_tag }}>

{%- comment -%} Search Modal {%- endcomment -%}
<div id="search-modal" class="hidden fixed inset-0 z-50">
  <div class="absolute inset-0 bg-black/50" onclick="this.parentElement.classList.add('hidden')"></div>
  <div class="absolute top-0 left-0 right-0 bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <form action="{{ routes.search_url }}" method="get" class="relative">
        <input type="hidden" name="type" value="product">
        <input
          type="search"
          name="q"
          class="w-full pl-12 pr-4 py-3 text-base border border-neutral-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent"
          placeholder="{{ 'general.search.placeholder' | t }}"
          autocomplete="off"
          autofocus
        >
        <div class="absolute left-4 top-1/2 -translate-y-1/2 text-neutral-400">
          {%- render 'icon', name: 'search', size: '20' -%}
        </div>
        <button
          type="button"
          class="absolute right-4 top-1/2 -translate-y-1/2 p-1 text-neutral-400 hover:text-neutral-900 transition-colors"
          onclick="document.getElementById('search-modal').classList.add('hidden')"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          {%- render 'icon', name: 'close', size: '20' -%}
        </button>
      </form>
    </div>
  </div>
</div>

{%- if settings.cart_type == "notification" -%}
  {%- render 'cart-notification', color_scheme: section.settings.color_scheme -%}
{%- endif -%}

{% javascript %}
  class StickyHeader extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.header = document.querySelector('.section-header');
      this.headerIsAlwaysSticky = this.getAttribute('data-sticky-type') === 'always';
      this.headerBounds = {};

      this.setHeaderHeight();

      window.matchMedia('(max-width: 990px)').addEventListener('change', this.setHeaderHeight.bind(this));

      if (this.headerIsAlwaysSticky) {
        this.header.classList.add('sticky', 'top-0', 'z-40');
      }

      this.currentScrollTop = 0;
      this.onScrollHandler = this.onScroll.bind(this);
      window.addEventListener('scroll', this.onScrollHandler, false);

      this.createObserver();
    }

    setHeaderHeight() {
      document.documentElement.style.setProperty('--header-height', `${this.header.offsetHeight}px`);
    }

    disconnectedCallback() {
      window.removeEventListener('scroll', this.onScrollHandler);
    }

    createObserver() {
      let observer = new IntersectionObserver((entries, observer) => {
        this.headerBounds = entries[0].intersectionRect;
        observer.disconnect();
      });

      observer.observe(this.header);
    }

    onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      if (scrollTop > this.currentScrollTop && scrollTop > this.headerBounds.bottom) {
        if (!this.headerIsAlwaysSticky) {
          this.header.classList.remove('sticky', 'top-0', 'z-40');
        }
      } else if (scrollTop < this.currentScrollTop && scrollTop > this.headerBounds.bottom) {
        this.header.classList.add('sticky', 'top-0', 'z-40', 'shadow-sm');
      } else if (scrollTop <= this.headerBounds.top) {
        if (!this.headerIsAlwaysSticky) {
          this.header.classList.remove('shadow-sm');
        }
      }

      this.currentScrollTop = scrollTop;
    }
  }

  customElements.define('sticky-header', StickyHeader);
{% endjavascript %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tiktok_link | json }},
      {{ settings.social_youtube_link | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "settings": [
    {
      "type": "select",
      "id": "mobile_logo_position",
      "options": [
        {
          "value": "center",
          "label": "t:sections.header.settings.mobile_logo_position.options__1.label"
        },
        {
          "value": "left",
          "label": "t:sections.header.settings.mobile_logo_position.options__2.label"
        }
      ],
      "default": "center",
      "label": "t:sections.header.settings.mobile_logo_position.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "select",
      "id": "menu_type_desktop",
      "options": [
        {
          "value": "dropdown",
          "label": "t:sections.header.settings.menu_type_desktop.options__1.label"
        },
        {
          "value": "drawer",
          "label": "t:sections.header.settings.menu_type_desktop.options__3.label"
        }
      ],
      "default": "dropdown",
      "label": "t:sections.header.settings.menu_type_desktop.label"
    },
    {
      "type": "select",
      "id": "sticky_header_type",
      "options": [
        {
          "value": "none",
          "label": "t:sections.header.settings.sticky_header_type.options__1.label"
        },
        {
          "value": "on-scroll-up",
          "label": "t:sections.header.settings.sticky_header_type.options__2.label"
        },
        {
          "value": "always",
          "label": "t:sections.header.settings.sticky_header_type.options__3.label"
        }
      ],
      "default": "always",
      "label": "t:sections.header.settings.sticky_header_type.label"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    }
  ]
}
{% endschema %}
