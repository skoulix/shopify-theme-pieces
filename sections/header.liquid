{%- comment -%}
  Header Section - Minimal Skeleton + Tailwind UI Design
  Integrates with Swup page transitions and Lenis smooth scroll
{%- endcomment -%}

{%- liquid
  if section.settings.full_width
    assign nav_class = 'page-full'
  else
    assign nav_class = 'page-container'
  endif

  assign is_transparent = false
  if section.settings.transparent_home and request.page_type == 'index'
    assign is_transparent = true
  endif
-%}

<style>
  /* Header group wrapper - handles fixed positioning and hide/reveal */
  .header-group {
    position: relative;
    z-index: 40;
  }

  /* Fixed header with hide/reveal uses position: fixed */
  .header-group.is-sticky {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), background-color 0.3s ease, border-color 0.3s ease;
  }

  .header-group.is-hidden {
    transform: translateY(-100%);
  }

  /* Spacer to prevent content jump when header becomes fixed */
  .header-spacer {
    display: none;
  }

  .header-group.is-sticky + .header-spacer {
    display: block;
  }

  /* Transparent header styles */
  .header-group.is-transparent .header-inner {
    background: transparent;
    border-color: transparent;
  }

  /* Transparent header colors - only apply to main nav bar, not mobile drawer */
  .header-group.is-transparent .header-inner > nav,
  .header-group.is-transparent .header-inner > nav a,
  .header-group.is-transparent .header-inner > nav button,
  .header-group.is-transparent .header-inner > nav [data-cart-count] {
    color: {{ section.settings.transparent_text_color }};
  }


  /* When scrolled, revert to solid background */
  .header-group.is-transparent.is-scrolled .header-inner {
    background: var(--color-background);
    border-color: var(--color-border);
  }

  .header-group.is-transparent.is-scrolled .header-inner > nav,
  .header-group.is-transparent.is-scrolled .header-inner > nav a,
  .header-group.is-transparent.is-scrolled .header-inner > nav button,
  .header-group.is-transparent.is-scrolled .header-inner > nav [data-cart-count] {
    color: var(--color-text);
  }

  .header-group.is-transparent.is-scrolled .header-inner > nav a:hover,
  .header-group.is-transparent.is-scrolled .header-inner > nav button:hover {
    color: var(--color-primary);
  }

  /* Transparent header spacer should be hidden */
  .header-group.is-transparent + .header-spacer {
    display: none;
  }
</style>

<div class="header-group{% if section.settings.sticky_header %} is-sticky{% endif %}{% if is_transparent %} is-transparent{% endif %}" data-header-group{% if section.settings.hide_on_scroll %} data-hide-on-scroll{% endif %}{% if is_transparent %} data-transparent-header{% endif %}>
  <header class="header-inner border-b bg-[--color-background] border-[--color-border] transition-colors duration-300" data-header>
  <nav class="{{ nav_class }} relative flex items-center justify-between py-4">
    {%- comment -%} Mobile: Hamburger (left) | Desktop: Logo (left) {%- endcomment -%}
    <div class="flex lg:flex-1">
      {%- comment -%} Mobile hamburger {%- endcomment -%}
      <button
        type="button"
        class="lg:hidden -m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-[--color-text]"
        data-mobile-nav-open
      >
        <span class="sr-only">Open menu</span>
        <i class="ph ph-list text-2xl"></i>
      </button>

      {%- comment -%} Desktop logo {%- endcomment -%}
      <a href="{{ routes.root_url }}" class="hidden lg:block -m-1.5 p-1.5">
        <span class="sr-only">{{ shop.name }}</span>
        {% if settings.logo != blank %}
          {{ settings.logo | image_url: width: 300 | image_tag:
            class: 'h-auto',
            style: 'width: var(--logo-width);',
            alt: shop.name,
            loading: 'eager'
          }}
        {% else %}
          <span class="text-xl font-bold text-[--color-text]">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {%- comment -%} Mobile: Centered Logo {%- endcomment -%}
    <div class="lg:hidden absolute left-1/2 -translate-x-1/2">
      <a href="{{ routes.root_url }}" class="-m-1.5 p-1.5">
        <span class="sr-only">{{ shop.name }}</span>
        {% if settings.logo != blank %}
          {{ settings.logo | image_url: width: 300 | image_tag:
            class: 'h-auto',
            style: 'width: var(--logo-width);',
            alt: shop.name,
            loading: 'eager'
          }}
        {% else %}
          <span class="text-xl font-bold text-[--color-text]">{{ shop.name }}</span>
        {% endif %}
      </a>
    </div>

    {%- comment -%} Desktop Navigation {%- endcomment -%}
    <div class="hidden lg:flex lg:gap-x-8">
      {% for link in section.settings.menu.links %}
        {%- liquid
          assign is_active = false
          if link.url == request.path
            assign is_active = true
          elsif link.url != '/' and request.path contains link.url
            assign is_active = true
          endif
          assign has_children = false
          if link.links.size > 0
            assign has_children = true
          endif
        -%}
        {% if has_children %}
          {%- comment -%} Dropdown trigger {%- endcomment -%}
          <div class="dropdown-wrapper relative" data-dropdown>
            <button
              type="button"
              class="dropdown-trigger group relative flex items-center gap-1 text-sm font-semibold leading-6 text-[--color-text] hover:text-[--color-primary] transition-colors"
              data-dropdown-trigger
              aria-expanded="false"
            >
              <span>{{ link.title }}</span>
              <i class="ph ph-caret-down text-xs transition-transform duration-300 group-aria-expanded:rotate-180"></i>
            </button>

            {%- comment -%} Dropdown panel {%- endcomment -%}
            <div class="dropdown-panel" data-dropdown-panel>
              <div class="dropdown-panel__inner">
                {%- comment -%} Featured/Parent link {%- endcomment -%}
                {% if link.url != '#' and link.url != '' %}
                  <a href="{{ link.url }}" class="dropdown-featured" data-dropdown-item>
                    <span class="dropdown-featured__label">Explore</span>
                    <span class="dropdown-featured__title font-heading">{{ link.title }}</span>
                    <i class="ph ph-arrow-right dropdown-featured__arrow"></i>
                  </a>
                {% endif %}

                {%- comment -%} Child links {%- endcomment -%}
                <div class="dropdown-links">
                  {% for child in link.links %}
                    <a href="{{ child.url }}" class="dropdown-link" data-dropdown-item style="--item-index: {{ forloop.index0 }}">
                      <span class="dropdown-link__text">{{ child.title }}</span>
                      <span class="dropdown-link__line"></span>
                    </a>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
        {% else %}
          <a
            href="{{ link.url }}"
            class="relative text-sm font-semibold leading-6 text-[--color-text] hover:text-[--color-primary] transition-colors after:absolute after:bottom-[-2px] after:left-0 after:h-0.5 after:bg-current after:transition-all after:duration-300 after:ease-out{% if is_active %} after:w-full{% else %} after:w-0 hover:after:w-full{% endif %}"
            data-nav-link
          >
            {{ link.title }}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    {%- comment -%} Header Icons (Mobile + Desktop) {%- endcomment -%}
    <div class="flex flex-1 justify-end gap-x-1 lg:gap-x-2">
      {%- comment -%} Search - Desktop only {%- endcomment -%}
      <a href="{{ routes.search_url }}" class="hidden lg:block p-2 text-[--color-text-secondary] hover:text-[--color-text] transition-colors">
        <span class="sr-only">Search</span>
        <i class="ph ph-magnifying-glass text-xl"></i>
      </a>

      {%- comment -%} Account - Desktop only {%- endcomment -%}
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}" class="hidden lg:block p-2 text-[--color-text-secondary] hover:text-[--color-text] transition-colors">
          <span class="sr-only">Account</span>
          <i class="ph ph-user text-xl"></i>
        </a>
      {% endif %}

      {%- comment -%} Cart - Mobile + Desktop {%- endcomment -%}
      {% if settings.cart_type == 'drawer' %}
        <button
          type="button"
          class="group p-2 flex items-center text-[--color-text-secondary] hover:text-[--color-text] transition-colors"
          data-cart-drawer-toggle
        >
          <i class="ph ph-bag text-xl"></i>
          <span class="ml-1 text-sm font-medium text-[--color-text] group-hover:text-[--color-primary]" data-cart-count>{{ cart.item_count }}</span>
          <span class="sr-only">items in cart</span>
        </button>
      {% else %}
        <a
          href="{{ routes.cart_url }}"
          class="group p-2 flex items-center text-[--color-text-secondary] hover:text-[--color-text] transition-colors"
        >
          <i class="ph ph-bag text-xl"></i>
          <span class="ml-1 text-sm font-medium text-[--color-text] group-hover:text-[--color-primary]" data-cart-count>{{ cart.item_count }}</span>
          <span class="sr-only">items in cart</span>
        </a>
      {% endif %}
    </div>
  </nav>

  {%- comment -%} Mobile Menu - Full Screen Drawer with Reveal Effects {%- endcomment -%}
  <div id="mobile-menu" class="mobile-nav" role="dialog" aria-modal="true" inert>
    {%- comment -%} Backdrop {%- endcomment -%}
    <div class="mobile-nav__backdrop" data-mobile-nav-close></div>

    {%- comment -%} Drawer Panel {%- endcomment -%}
    <div class="mobile-nav__drawer">
      {%- comment -%} Header {%- endcomment -%}
      <div class="mobile-nav__header">
        <button type="button" class="mobile-nav__close" data-mobile-nav-close>
          <span class="sr-only">Close menu</span>
          <i class="ph ph-x"></i>
        </button>
      </div>

      {%- comment -%} Main Navigation {%- endcomment -%}
      <nav class="mobile-nav__content">
        <ul class="mobile-nav__list">
          {% for link in section.settings.menu.links %}
            {%- liquid
              assign is_active = false
              if link.url == request.path
                assign is_active = true
              elsif link.url != '/' and request.path contains link.url
                assign is_active = true
              endif
              assign has_children = false
              if link.links.size > 0
                assign has_children = true
              endif
            -%}
            <li class="mobile-nav__item" style="--item-index: {{ forloop.index0 }}">
              {% if has_children %}
                {%- comment -%} Parent with submenu {%- endcomment -%}
                <div class="mobile-nav__parent" data-mobile-submenu>
                  <button
                    type="button"
                    class="mobile-nav__link mobile-nav__link--parent font-heading{% if is_active %} is-active{% endif %}"
                    data-mobile-submenu-toggle
                    aria-expanded="false"
                  >
                    <span class="mobile-nav__link-text" data-mobile-nav-link-text>{{ link.title }}</span>
                    <i class="ph ph-plus mobile-nav__toggle-icon"></i>
                    <span class="mobile-nav__link-line"></span>
                  </button>

                  {%- comment -%} Submenu {%- endcomment -%}
                  <div class="mobile-nav__submenu" data-mobile-submenu-panel>
                    <div class="mobile-nav__submenu-inner">
                      {%- comment -%} View all link if parent has URL {%- endcomment -%}
                      {% if link.url != '#' and link.url != '' %}
                        <a
                          href="{{ link.url }}"
                          class="mobile-nav__submenu-all"
                          data-mobile-nav-close
                        >
                          <span>View All {{ link.title }}</span>
                          <i class="ph ph-arrow-right"></i>
                        </a>
                      {% endif %}

                      {%- comment -%} Child links {%- endcomment -%}
                      {% for child in link.links %}
                        {%- liquid
                          assign child_active = false
                          if child.url == request.path
                            assign child_active = true
                          endif
                        -%}
                        <a
                          href="{{ child.url }}"
                          class="mobile-nav__submenu-link{% if child_active %} is-active{% endif %}"
                          data-mobile-nav-close
                          style="--child-index: {{ forloop.index0 }}"
                        >
                          <span class="mobile-nav__submenu-link-text">{{ child.title }}</span>
                          <span class="mobile-nav__submenu-link-line"></span>
                        </a>
                      {% endfor %}
                    </div>
                  </div>
                </div>
              {% else %}
                <a
                  href="{{ link.url }}"
                  class="mobile-nav__link font-heading{% if is_active %} is-active{% endif %}"
                  data-nav-link
                  data-mobile-nav-close
                >
                  <span class="mobile-nav__link-text" data-mobile-nav-link-text>{{ link.title }}</span>
                  <span class="mobile-nav__link-line"></span>
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </nav>

      {%- comment -%} Footer {%- endcomment -%}
      <div class="mobile-nav__footer">
        <div class="mobile-nav__footer-links">
          {% if shop.customer_accounts_enabled %}
            <a href="{{ routes.account_url }}" class="mobile-nav__footer-link" data-mobile-nav-close>
              <i class="ph ph-user"></i>
              <span>Account</span>
            </a>
          {% endif %}
          <a href="{{ routes.search_url }}" class="mobile-nav__footer-link" data-mobile-nav-close>
            <i class="ph ph-magnifying-glass"></i>
            <span>Search</span>
          </a>
          {% if settings.cart_type == 'drawer' %}
            <button
              type="button"
              class="mobile-nav__footer-link"
              data-mobile-nav-close
              data-cart-drawer-toggle
            >
              <i class="ph ph-bag"></i>
              <span>Cart (<span data-cart-count>{{ cart.item_count }}</span>)</span>
            </button>
          {% else %}
            <a
              href="{{ routes.cart_url }}"
              class="mobile-nav__footer-link"
              data-mobile-nav-close
            >
              <i class="ph ph-bag"></i>
              <span>Cart (<span data-cart-count>{{ cart.item_count }}</span>)</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>
</div>

{%- comment -%} Spacer to prevent content jump when header is fixed {%- endcomment -%}
{% if section.settings.sticky_header %}
  <div class="header-spacer" data-header-spacer></div>
{% endif %}

<script>
(function() {
  const mobileNav = document.getElementById('mobile-menu');
  const closeBtns = document.querySelectorAll('[data-mobile-nav-close]');
  let isAnimating = false;
  let openTimeline = null;
  let linkSplits = []; // Store SplitText instances for cleanup

  function openMobileNav() {
    if (isAnimating || mobileNav.classList.contains('is-open')) return;
    isAnimating = true;

    // Check if text animations should run (evaluated at runtime to ensure shouldAnimate is defined)
    const shouldAnimateText = typeof window.shouldAnimate === 'function' ? window.shouldAnimate() : true;

    const backdrop = mobileNav.querySelector('.mobile-nav__backdrop');
    const drawer = mobileNav.querySelector('.mobile-nav__drawer');
    const header = mobileNav.querySelector('.mobile-nav__header');
    const linkItems = mobileNav.querySelectorAll('.mobile-nav__item');
    const linkTexts = mobileNav.querySelectorAll('[data-mobile-nav-link-text]');
    const toggleIcons = mobileNav.querySelectorAll('.mobile-nav__toggle-icon');
    const footer = mobileNav.querySelector('.mobile-nav__footer');

    // Get SplitText (only if animations enabled)
    let SplitText = null;
    if (shouldAnimateText) {
      SplitText = window.SplitText;
      if (!SplitText && window.pieces && window.pieces.SplitText) {
        SplitText = window.pieces.SplitText;
      }
    }

    // Always clean up previous splits (in case animations were toggled)
    linkSplits.forEach(split => {
      if (split.element && split.inner) {
        const text = split.inner.textContent;
        split.element.textContent = text;
      }
    });
    linkSplits = [];

    // Use GSAP for drawer transition (always, if available)
    if (window.gsap) {
      // Set initial states BEFORE making visible
      gsap.set(backdrop, { opacity: 0 });
      gsap.set(drawer, { clipPath: 'inset(0 0 100% 0)' });

      // Only set up text animations if enabled
      if (shouldAnimateText) {
        gsap.set(header, { opacity: 0, y: -20 });
        gsap.set(linkItems, { opacity: 1 }); // Items visible, chars will animate
        gsap.set(toggleIcons, { opacity: 0, scale: 0, rotation: -90 });
        gsap.set(footer, { opacity: 0, y: 20 });

        // Set link texts to hidden initially, will reveal by line
        if (SplitText) {
          linkTexts.forEach(text => {
            // Wrap content in a line wrapper for the reveal
            const wrapper = document.createElement('span');
            wrapper.className = 'mobile-nav-line-wrapper';
            wrapper.style.cssText = 'display: block; overflow: hidden;';
            const inner = document.createElement('span');
            inner.className = 'mobile-nav-line';
            inner.style.cssText = 'display: block;';
            inner.textContent = text.textContent;
            text.textContent = '';
            wrapper.appendChild(inner);
            text.appendChild(wrapper);
            linkSplits.push({ element: text, inner });
            gsap.set(inner, { yPercent: 100 });
          });
        }
      }
    }

    // Now make visible
    mobileNav.classList.add('is-open');
    mobileNav.removeAttribute('inert');
    document.body.style.overflow = 'hidden';
    document.dispatchEvent(new CustomEvent('menu:open'));

    if (window.gsap) {
      openTimeline = gsap.timeline({
        onComplete: () => { isAnimating = false; }
      });

      // Animate drawer open (always)
      openTimeline
        .to(backdrop, { opacity: 1, duration: 0.5, ease: 'power2.out' }, 0)
        .to(drawer, { clipPath: 'inset(0 0 0% 0)', duration: 0.7, ease: 'power4.inOut' }, 0);

      // Only animate text content if enabled
      if (shouldAnimateText) {
        // Animate header
        openTimeline.to(header, { opacity: 1, y: 0, duration: 0.5, ease: 'power3.out' }, 0.4);

        // Animate each link line reveal with stagger
        if (linkSplits.length > 0) {
          const lines = linkSplits.map(s => s.inner);
          openTimeline.to(lines, {
            yPercent: 0,
            duration: 0.8,
            stagger: 0.08,
            ease: 'power4.out'
          }, 0.5);
        }

        // Animate toggle icons with a playful spin-in
        if (toggleIcons.length > 0) {
          openTimeline.to(toggleIcons, {
            opacity: 1,
            scale: 1,
            rotation: 0,
            duration: 0.6,
            stagger: 0.08,
            ease: 'back.out(1.7)'
          }, 0.7);
        }

        openTimeline.to(footer, { opacity: 1, y: 0, duration: 0.5, ease: 'power3.out' }, 0.9);
      }
    } else {
      isAnimating = false;
    }
  }

  function closeMobileNav() {
    if (isAnimating || !mobileNav.classList.contains('is-open')) return;
    isAnimating = true;

    document.dispatchEvent(new CustomEvent('menu:close'));

    const backdrop = mobileNav.querySelector('.mobile-nav__backdrop');
    const drawer = mobileNav.querySelector('.mobile-nav__drawer');

    // Always animate drawer close if GSAP available
    if (window.gsap) {
      if (openTimeline) openTimeline.kill();

      gsap.timeline({
        onComplete: () => {
          mobileNav.classList.remove('is-open');
          mobileNav.setAttribute('inert', '');
          document.body.style.overflow = '';
          isAnimating = false;
        }
      })
        .to(backdrop, { opacity: 0, duration: 0.3, ease: 'power2.in' }, 0)
        .to(drawer, { clipPath: 'inset(0 0 100% 0)', duration: 0.4, ease: 'power3.in' }, 0);
    } else {
      mobileNav.classList.remove('is-open');
      mobileNav.setAttribute('inert', '');
      document.body.style.overflow = '';
      isAnimating = false;
    }
  }

  // Open button (hamburger)
  document.querySelector('[data-mobile-nav-open]')?.addEventListener('click', openMobileNav);

  // Close buttons (X, backdrop, links)
  closeBtns.forEach(btn => {
    btn.addEventListener('click', (e) => {
      const isLink = e.target.closest('a');
      const isCartToggle = e.target.closest('[data-cart-drawer-toggle]');

      if (isLink || isCartToggle) {
        // Delay close for links and cart drawer toggle to allow navigation/drawer open
        setTimeout(closeMobileNav, 100);
      } else {
        closeMobileNav();
      }
    });
  });

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileNav.classList.contains('is-open')) {
      closeMobileNav();
    }
  });

  /**
   * Update active nav links based on current URL
   */
  function updateActiveLinks() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('[data-nav-link]');

    navLinks.forEach(link => {
      const linkPath = new URL(link.href, window.location.origin).pathname;
      const normalizedCurrent = currentPath.replace(/\/$/, '') || '/';
      const normalizedLink = linkPath.replace(/\/$/, '') || '/';

      let isActive = false;

      if (normalizedCurrent === normalizedLink) {
        isActive = true;
      } else if (normalizedLink !== '/' && normalizedCurrent.startsWith(normalizedLink + '/')) {
        isActive = true;
      } else if (normalizedLink !== '/' && normalizedCurrent.startsWith(normalizedLink)) {
        isActive = true;
      }

      link.classList.toggle('is-active', isActive);

      // Also update Tailwind underline classes for desktop nav
      if (isActive) {
        link.classList.remove('after:w-0');
        link.classList.add('after:w-full');
      } else {
        link.classList.remove('after:w-full');
        link.classList.add('after:w-0');
      }
    });
  }

  updateActiveLinks();
  window.addEventListener('swup:contentReplaced', updateActiveLinks);
  window.addEventListener('popstate', updateActiveLinks);

  /**
   * Cart drawer toggle (when cart_type is 'drawer')
   * Skip if already on cart page
   */
  document.querySelectorAll('[data-cart-drawer-toggle]').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      // Don't open drawer if already on cart page
      if (window.location.pathname.includes('/cart')) {
        return;
      }
      document.dispatchEvent(new CustomEvent('cart:toggle'));
    });
  });

  /**
   * Hide header on scroll down, reveal on scroll up
   * Only enabled when data-hide-on-scroll attribute is present
   * Uses Lenis direction property (1 = up, -1 = down) for reliable detection
   */
  const headerGroup = document.querySelector('[data-header-group]');
  if (headerGroup && headerGroup.hasAttribute('data-hide-on-scroll')) {
    const scrollThreshold = 50; // Min scroll before hiding
    let lenisAttached = false;

    // Lenis scroll handler - uses direction property
    function onLenisScroll(e) {
      // Don't hide if mobile menu is open
      if (mobileNav && mobileNav.classList.contains('is-open')) {
        return;
      }

      // Always show header when at top of page
      if (e.scroll < scrollThreshold) {
        headerGroup.classList.remove('is-hidden');
        return;
      }

      // Use Lenis direction: 1 = scrolling down, -1 = scrolling up
      if (e.direction === 1) {
        // Scrolling down - hide header
        headerGroup.classList.add('is-hidden');
      } else if (e.direction === -1) {
        // Scrolling up - show header
        headerGroup.classList.remove('is-hidden');
      }
    }

    // Try to attach to Lenis scroll event
    function attachToLenis() {
      if (window.pieces && window.pieces.lenis && window.pieces.lenis.lenis) {
        const lenis = window.pieces.lenis.lenis;

        if (!lenisAttached) {
          lenis.on('scroll', onLenisScroll);
          lenisAttached = true;
        }

        return true;
      }
      return false;
    }

    // Fallback for when Lenis is not available (respects prefers-reduced-motion)
    let lastScrollY = 0;
    let nativeAttached = false;

    function onNativeScroll() {
      const currentScrollY = window.scrollY;

      // Don't hide if mobile menu is open
      if (mobileNav && mobileNav.classList.contains('is-open')) {
        lastScrollY = currentScrollY;
        return;
      }

      // Always show header when at top
      if (currentScrollY < scrollThreshold) {
        headerGroup.classList.remove('is-hidden');
      } else if (currentScrollY > lastScrollY) {
        // Scrolling down
        headerGroup.classList.add('is-hidden');
      } else if (currentScrollY < lastScrollY) {
        // Scrolling up
        headerGroup.classList.remove('is-hidden');
      }

      lastScrollY = currentScrollY;
    }

    function attachNativeScroll() {
      if (!nativeAttached) {
        window.addEventListener('scroll', onNativeScroll, { passive: true });
        nativeAttached = true;
        lastScrollY = window.scrollY;
      }
    }

    // Poll for Lenis, fall back to native scroll
    let attempts = 0;
    const maxAttempts = 30;

    function tryAttach() {
      if (attachToLenis()) {
        return;
      }

      attempts++;
      if (attempts < maxAttempts) {
        setTimeout(tryAttach, 100);
      } else {
        // Lenis not available, use native scroll
        attachNativeScroll();
      }
    }

    tryAttach();

    // Reset on page transitions
    window.addEventListener('swup:contentReplaced', () => {
      headerGroup.classList.remove('is-hidden');
      if (!lenisAttached) {
        lastScrollY = window.scrollY;
      }
    });
  }

  // Set spacer height to match header height (for fixed positioning)
  const header = document.querySelector('[data-header]');
  const spacer = document.querySelector('[data-header-spacer]');

  if (header && spacer) {
    function updateSpacerHeight() {
      spacer.style.height = header.offsetHeight + 'px';
    }

    updateSpacerHeight();
    window.addEventListener('resize', updateSpacerHeight);
    window.addEventListener('swup:contentReplaced', updateSpacerHeight);
  }

  /**
   * Handle transparent header state on page transitions
   * Header is transparent only on homepage, so we need to update after Swup navigation
   */
  {% if section.settings.transparent_home %}
  const headerGroupEl = document.querySelector('[data-header-group]');
  if (headerGroupEl) {
    window.addEventListener('swup:contentReplaced', () => {
      // Check if we're now on the homepage
      const isHomepage = window.location.pathname === '/' || window.location.pathname === '';

      if (isHomepage) {
        headerGroupEl.classList.add('is-transparent');
        headerGroupEl.setAttribute('data-transparent-header', '');
      } else {
        headerGroupEl.classList.remove('is-transparent', 'is-scrolled');
        headerGroupEl.removeAttribute('data-transparent-header');
      }
    });
  }
  {% endif %}

  /**
   * Transparent header scroll state
   * Adds is-scrolled class when user scrolls past threshold
   */
  const scrolledThreshold = 50;
  let transparentScrollAttached = false;

  function updateScrolledState(scrollY) {
    const header = document.querySelector('[data-transparent-header]');
    if (!header) return;

    if (scrollY > scrolledThreshold) {
      header.classList.add('is-scrolled');
    } else {
      header.classList.remove('is-scrolled');
    }
  }

  function initTransparentScroll() {
    const header = document.querySelector('[data-transparent-header]');
    if (!header) return;

    // Check initial state
    updateScrolledState(window.scrollY);

    // Lenis scroll handler already set up once
    if (transparentScrollAttached) return;

    // Try Lenis first, fall back to native scroll
    function attachTransparentScroll() {
      if (window.pieces && window.pieces.lenis && window.pieces.lenis.lenis) {
        window.pieces.lenis.lenis.on('scroll', (e) => {
          updateScrolledState(e.scroll);
        });
        transparentScrollAttached = true;
        return true;
      }
      return false;
    }

    let transparentAttempts = 0;
    function tryAttachTransparent() {
      if (attachTransparentScroll()) return;
      transparentAttempts++;
      if (transparentAttempts < 30) {
        setTimeout(tryAttachTransparent, 100);
      } else {
        // Fallback to native scroll
        window.addEventListener('scroll', () => {
          updateScrolledState(window.scrollY);
        }, { passive: true });
        transparentScrollAttached = true;
      }
    }

    tryAttachTransparent();
  }

  // Initialize on page load
  initTransparentScroll();

  // Re-initialize after page transitions (for when navigating back to homepage)
  window.addEventListener('swup:contentReplaced', () => {
    requestAnimationFrame(initTransparentScroll);
  });

  /**
   * Desktop Dropdown Navigation
   * Hover-triggered dropdowns with animated reveal
   */
  const dropdowns = document.querySelectorAll('[data-dropdown]');
  let activeDropdown = null;
  let closeTimeout = null;

  function openDropdown(dropdown) {
    if (activeDropdown === dropdown) return;

    // Close any open dropdown first
    if (activeDropdown) {
      closeDropdown(activeDropdown, true);
    }

    clearTimeout(closeTimeout);
    activeDropdown = dropdown;

    const trigger = dropdown.querySelector('[data-dropdown-trigger]');
    trigger.setAttribute('aria-expanded', 'true');
    dropdown.classList.add('is-open');
  }

  function closeDropdown(dropdown, immediate = false) {
    if (!dropdown) return;

    const trigger = dropdown.querySelector('[data-dropdown-trigger]');
    trigger.setAttribute('aria-expanded', 'false');
    dropdown.classList.remove('is-open');

    if (activeDropdown === dropdown) {
      activeDropdown = null;
    }
  }

  dropdowns.forEach(dropdown => {
    const trigger = dropdown.querySelector('[data-dropdown-trigger]');
    const panel = dropdown.querySelector('[data-dropdown-panel]');

    // Mouse enter - open dropdown
    dropdown.addEventListener('mouseenter', () => {
      clearTimeout(closeTimeout);
      openDropdown(dropdown);
    });

    // Mouse leave - close dropdown with delay
    dropdown.addEventListener('mouseleave', () => {
      closeTimeout = setTimeout(() => {
        closeDropdown(dropdown);
      }, 150);
    });

    // Keyboard support - toggle on Enter/Space
    trigger.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        if (dropdown.classList.contains('is-open')) {
          closeDropdown(dropdown);
        } else {
          openDropdown(dropdown);
        }
      }

      // Close on Escape
      if (e.key === 'Escape' && dropdown.classList.contains('is-open')) {
        closeDropdown(dropdown);
        trigger.focus();
      }
    });

    // Close on escape when focused within panel
    panel.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeDropdown(dropdown);
        trigger.focus();
      }
    });

    // Click outside to close (for touch devices that also trigger hover)
    trigger.addEventListener('click', (e) => {
      e.preventDefault();
      if (dropdown.classList.contains('is-open')) {
        closeDropdown(dropdown);
      } else {
        openDropdown(dropdown);
      }
    });
  });

  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    if (activeDropdown && !activeDropdown.contains(e.target)) {
      closeDropdown(activeDropdown);
    }
  });

  /**
   * Mobile Submenu Toggle
   * Accordion-style expand/collapse for nested navigation
   */
  const mobileSubmenuToggles = document.querySelectorAll('[data-mobile-submenu-toggle]');

  mobileSubmenuToggles.forEach(toggle => {
    toggle.addEventListener('click', () => {
      const parent = toggle.closest('[data-mobile-submenu]');
      const panel = parent.querySelector('[data-mobile-submenu-panel]');
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';

      // Toggle state
      toggle.setAttribute('aria-expanded', !isExpanded);
      panel.classList.toggle('is-open', !isExpanded);

      // Optional: Close other submenus (accordion behavior)
      if (!isExpanded) {
        mobileSubmenuToggles.forEach(otherToggle => {
          if (otherToggle !== toggle) {
            const otherParent = otherToggle.closest('[data-mobile-submenu]');
            const otherPanel = otherParent.querySelector('[data-mobile-submenu-panel]');
            otherToggle.setAttribute('aria-expanded', 'false');
            otherPanel.classList.remove('is-open');
          }
        });
      }
    });
  });

  // Reset mobile submenus when drawer closes
  document.addEventListener('menu:close', () => {
    mobileSubmenuToggles.forEach(toggle => {
      const parent = toggle.closest('[data-mobile-submenu]');
      const panel = parent.querySelector('[data-mobile-submenu-panel]');
      toggle.setAttribute('aria-expanded', 'false');
      panel.classList.remove('is-open');
    });
  });
})();
</script>

