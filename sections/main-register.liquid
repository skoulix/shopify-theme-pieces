{%- comment -%}
  Register Page - Tailwind Version
  Modern, minimal design with clean form styling
{%- endcomment -%}

<div class="min-h-[60vh] flex items-center justify-center py-12 lg:py-16 px-4">
  <div class="w-full max-w-md">
    <h1 class="text-2xl lg:text-3xl font-semibold text-neutral-900 text-center mb-8">
      {{ 'customer.register.title' | t }}
    </h1>

    {%- form 'create_customer', novalidate: 'novalidate' -%}
      {%- if form.errors -%}
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg" tabindex="-1" autofocus>
          <div class="flex items-center gap-2 text-red-700 mb-2">
            {%- render 'icon', name: 'warning', size: '20' -%}
            <span class="font-medium">{{ 'templates.contact.form.error_heading' | t }}</span>
          </div>
          <ul class="list-disc list-inside text-sm text-red-600 space-y-1">
            {%- for field in form.errors -%}
              <li>
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- else -%}
                  <a href="#RegisterForm-{{ field }}" class="underline hover:no-underline">
                    {{ form.errors.translated_fields[field] | capitalize }}
                    {{ form.errors.messages[field] }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}

      <div class="space-y-4">
        {%- comment -%} First Name {%- endcomment -%}
        <div>
          <label for="RegisterForm-FirstName" class="block text-sm font-medium text-neutral-700 mb-1">
            {{ 'customer.register.first_name' | t }}
          </label>
          <input
            type="text"
            name="customer[first_name]"
            id="RegisterForm-FirstName"
            {% if form.first_name %}value="{{ form.first_name }}"{% endif %}
            autocomplete="given-name"
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent"
            placeholder="{{ 'customer.register.first_name' | t }}"
          >
        </div>

        {%- comment -%} Last Name {%- endcomment -%}
        <div>
          <label for="RegisterForm-LastName" class="block text-sm font-medium text-neutral-700 mb-1">
            {{ 'customer.register.last_name' | t }}
          </label>
          <input
            type="text"
            name="customer[last_name]"
            id="RegisterForm-LastName"
            {% if form.last_name %}value="{{ form.last_name }}"{% endif %}
            autocomplete="family-name"
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent"
            placeholder="{{ 'customer.register.last_name' | t }}"
          >
        </div>

        {%- comment -%} Email {%- endcomment -%}
        <div>
          <label for="RegisterForm-email" class="block text-sm font-medium text-neutral-700 mb-1">
            {{ 'customer.register.email' | t }}
          </label>
          <input
            type="email"
            name="customer[email]"
            id="RegisterForm-email"
            {% if form.email %}value="{{ form.email }}"{% endif %}
            spellcheck="false"
            autocapitalize="off"
            autocomplete="email"
            aria-required="true"
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors contains 'email' %} border-red-500{% endif %}"
            placeholder="{{ 'customer.register.email' | t }}"
            {% if form.errors contains 'email' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-email-error"
            {% endif %}
          >
          {%- if form.errors contains 'email' -%}
            <p id="RegisterForm-email-error" class="mt-2 flex items-center gap-1.5 text-sm text-red-600">
              {%- render 'icon', name: 'warning', size: '16' -%}
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}.
            </p>
          {%- endif -%}
        </div>

        {%- comment -%} Password {%- endcomment -%}
        <div>
          <label for="RegisterForm-password" class="block text-sm font-medium text-neutral-700 mb-1">
            {{ 'customer.register.password' | t }}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="RegisterForm-password"
            aria-required="true"
            class="w-full px-4 py-3 border border-neutral-300 rounded-lg text-base focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:border-transparent{% if form.errors contains 'password' %} border-red-500{% endif %}"
            placeholder="{{ 'customer.register.password' | t }}"
            {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="RegisterForm-password-error"
            {% endif %}
          >
          {%- if form.errors contains 'password' -%}
            <p id="RegisterForm-password-error" class="mt-2 flex items-center gap-1.5 text-sm text-red-600">
              {%- render 'icon', name: 'warning', size: '16' -%}
              {{ form.errors.translated_fields.password | capitalize }}
              {{ form.errors.messages.password }}.
            </p>
          {%- endif -%}
        </div>

        <button
          type="submit"
          class="w-full py-3 px-6 bg-neutral-900 text-white text-base font-medium rounded-lg hover:bg-neutral-800 transition-colors"
        >
          {{ 'customer.register.submit' | t }}
        </button>
      </div>

      <p class="mt-6 text-center text-sm text-neutral-600">
        {{ 'customer.register.already_have_account' | t | default: 'Already have an account?' }}
        <a href="{{ routes.account_login_url }}" class="text-neutral-900 font-medium underline hover:text-neutral-600 transition-colors">
          {{ 'customer.login_page.sign_in' | t }}
        </a>
      </p>
    {%- endform -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-register.name",
  "settings": []
}
{% endschema %}
